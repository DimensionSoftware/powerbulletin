#!/bin/sh
killall varnishd
sleep 2
killall -9 varnishd
set -e
/usr/local/sbin/varnishd \
  -u nobody \
  -f config/varnish.vcl \
  -s malloc,32M \
  -T 127.0.0.1:2000 \
  -a 0.0.0.0:$VARNISH_PORT \
  -p default_ttl=$VARNISH_TTL \
  -p ban_lurker_sleep=2 \
  -p gzip_level=9 \
  -p gzip_memlevel=9 \
  -p gzip_stack_buffer=131072 \
  -p gzip_window=15 \
  -p thread_pools=1
