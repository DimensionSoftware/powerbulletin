#!/bin/sh

bin/psql -c "DROP DATABASE pb"
set -e
bin/psql -c "CREATE DATABASE pb"
bin/psql pb -c "CREATE EXTENSION plls"
bin/psql pb < schema.sql
bin/psql pb < procedures.sql
bin/load-fixtures
for i in 1 2 3 4; do
  bin/psql pb -c "SELECT build_all_docs('$i')"
  done

for i in 1 2 3 4; do
  bin/psql pb -c "SELECT build_all_uris('$i')"
  done
