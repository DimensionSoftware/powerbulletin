#!/bin/bash

echo killing old watchers and workers
# watchers
pkill -9 -f '^node node_modules/.bin/lsc -cw' &
# workers
pkill -9 '^pb-worker'

set -e

echo Compiling...
bin/build-client-jade &
bin/build-component-jade &
bin/build-procs >/dev/null 2>&1 &

echo Launching...
while true ; do
  node_modules/.bin/lsc -cw app client shared component lib/mutant client/requirejs-config public/app plv8_modules >/dev/null &
  grunt launch watch
  echo Restarting...
  sleep 0.25
  done

