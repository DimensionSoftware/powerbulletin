#!/bin/bash -e

#for f in $(ls fixtures/*.csv) ; do
for f in fixtures/{users,sites,aliases,auths,forums,posts,moderations}.csv; do
  table=`basename $f .csv`
  bin/psql -d pb -c "COPY $table FROM '`readlink -f $f`' DELIMITERS ',' CSV ESCAPE '\\';"
  bin/psql -d pb -c '\d' | grep "${table}_id_seq" > /dev/null &&
    bin/psql -d pb -c "SELECT setval('${table}_id_seq', (SELECT MAX(id) FROM $table));"
  bin/site-config  facebookClientId    454403507966007         facebookClientSecret   b604975dfb351fe458b1cc0891eb8a87
  bin/site-config  twitterConsumerKey  SWdznKt4ah1K4lK3KgDZGg  twitterConsumerSecret  O0Sp2vMsxTnQhYJq7YumIfY7UGprh8mmFzArfIr5c
done
