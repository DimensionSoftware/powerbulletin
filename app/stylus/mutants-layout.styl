        .profile.photo
          width 60px
          height 45px
        .children
          margin-left (grid*3)
          .post
            padding-top grid
            textarea.body
              padding-top (grid/2)
            .user, .date
              display inline
              font-size .92em
            .user
              font-weight bold
            .date
