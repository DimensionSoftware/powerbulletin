          i
            font-weight 100
            font-size .9em
            margin 0 grid 0 (grid/2)
  #left_chrome
    display none
  .main-content
    .forum, .search
      position relative
      clear both
      min-height 650px
      margin-bottom (grid*6)
      p
        margin 0
      .container
        z-index 6
      .scroll-to
        position absolute
        right 0
        bottom -30px
      .post:hover
        position relative
        z-index 4
      #post_edit
        width 80%
        .photo
          margin 1px 9px 1px 1px
        .title
          margin-bottom 8px
        .button
          right 5px
          visibility hidden
      .post-edit:hover
        .close
          opacity 1
          transition opacity .2s ease-out .1s
      .reply
        width 405px
        .post-edit form
          clear both
          vertical-align top
          .close
            right -9px
            top -10px
          .summary
            vertical-align top
            display inline-block
            .photo
              margin-top 5px
          textarea
            height 30px
            min-height 30px
            width 320px
            margin-top 0
            vertical-align top
            display inline-block
          .button
            bottom 20px
            right 12px
      .post-edit
        position relative
        margin-bottom (grid*2)
        margin-top (grid/2)
        .tooltip
          bottom 63px
        form
          position relative
          text-align right
        .button
          position absolute
          z-index 15
          padding 2px 5px
          font-size 1em
          height 26px
          right -14px
          bottom 9px
          left auto
        .close
          opacity 0
          right -7px
          top 34px
          position absolute
          z-index 10
        .summary
          .profile.photo
            margin-left 3px
            border-radius 1px
            height 39px
            width 49px
            margin-top (grid/2)
        .summary::before:hover
          margin-left 2px
        .summary::before
          position absolute
          z-index 1
          content ''
          top 13px
          height 0
          width 0
          border-bottom 7px solid transparent
          border-right 7px solid transparent
          border-top 7px solid transparent
        .title
          display block
          width 50%
        #cke_body, textarea.body
          width 102%
          min-height 40px
          resize vertical
          display block
          margin grid 0
          min-height 40px
      .post.head
        padding-top (grid/2)
      .post:first-child
        padding-top grid
      .post.censored
        .onclick-censor-post
          display none!important
      .post
        position relative
        clear both
        margin-right (grid*4)
        padding-top (grid*2)
        .breadcrumb
          margin-bottom (grid*2)
          span, em
            display none
        .profile
          width 75px
          height 60px
          margin-bottom (grid)
        img
          max-width 100%
        .title
          margin 0 0 6px -1px
          font-size 1.5em
        .user
          font-weight bold
        .title, .user
          text-transform capitalize
        .body
          margin (grid/2) 0 grid 0
          clear both
          font-size 1.05em
          line-height 1.5
        .actions
          opacity 0
          clear both
          letter-spacing -10px
          margin-top (grid+2)
          margin-bottom 2px
          line-height 15px
          margin-left -6px
          a
            font-size .9em
            font-weight 400
            margin-right 2px
            margin-left 2px
            display inline
            padding 1px 5px
          .edit, .censor
            display none
      .page-loaded:last-child, #listview div[data-infinity-pageid]
        padding-bottom (grid*4) !important
      .post:hover
        .actions
          opacity 1
