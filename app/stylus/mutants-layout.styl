
// Structure applied to ...

// Mutant-specific States
//{{{ - homepage
// XXX add html. selector here for any single-column layout & the leftnav will animate out, etc...
html.homepage, html.page
  .nicescroll-rails
    display none
  #left_content
    transform translateX(-600px)
    opacity 0
    transition all .2s cubic-bezier(1,.01,.69,1)
  #main_content
    padding-top header-height
    .forum
      .title
        text-align center
      clear both
      padding-left (grid*2)
      transition padding-left .4s ease-out
      .post
        float left
  .extra
    right 0
    z-index 7
    bottom (grid*8)
    width 175px
    height 100px
    position fixed
    .orderer::before
      content ''
      width 1px
      height 1px
      position absolute
      left 0
      top 11px
      z-index 3
      border-top-color transparent
      border-right-color transparent
      border-bottom-color transparent
    .orderer
      position relative
      height 95px
      overflow hidden
      cursor pointer
      #order
        display block
      .onclick-scroll-top
        position absolute
        right 1px
        bottom 0
        border-left 8px solid transparent
        border-right 8px solid transparent
  body.scrolled
    #main_content
      #left_chrome
        right -2px
        transition right .4s ease-out
//}}}
//{{{ - homepage & forum
html.forum .homepage .forum > .title
  display none
html.homepage, html.forum
  .homepage
    .post
      max-height 200px
      overflow hidden
      margin-bottom (grid*2)
    .subpost
      .username
        display none
//}}}
//{{{ - forum, profile & search
html.forum, html.profile, html.search
  body.scrolled
    #left_content
      bottom 0
  body.paginator
    #left_content
      .create
        margin (grid/2) (grid*2.5) (grid/2) (grid*2)
  #left_content.wide
    #left_container
      .threads
        .created
          opacity 1
          display inline
  #left_content
    transform translateX(0)
    opacity 1
    transition opacity .3s cubic-bezier(1,.01,.69,1)
    .photo, .username
      display none
    .create
      margin (grid/2) (grid*3.5) (grid/2) (grid*2)
      a
        text-overflow ellipsis
        text-decoration none
        animation-name none
        font-size 1em
        padding 8px 10px
        display block
    .scrollable
      overflow hidden
      height 100%
    .threads
      //overflow-y scroll
      height 100%
      margin 0
      padding-top grid
      .thread
        position relative
        padding 1px (grid*1.5) grid ((grid*2)+3)
        .mutant
          display block
          border none
          animation-name none
        .title
          overflow hidden
          max-height 65px
          text-transform capitalize
          margin grid grid 0 -5px
          padding 1px 5px
        .username
          margin-right 5px
          font-size .7em
          em
            text-transform capitalize
            font-weight 600
            margin-left (grid/2)
            font-size 1.1em
        .created
          font-size .8em
          font-weight 200
          display none
        .clear
          margin-top -5px
        .created, .username, .post-count
          white-space nowrap
          text-overflow ellipsis
          margin-bottom -6px
        .post-count, .views
          font-weight bold
          font-size .8em
        .post-count, .views
          i
            font-weight 100
            font-size .9em
            margin 0 grid 0 (grid/2)

      .thread:last-child
        margin-bottom (grid*10)
  #left_chrome
    display none
  #main_content
    .forum, .search
      position relative
      clear both
      min-height 650px
      margin-bottom (grid*6)
      p
        margin 0
      .container
        z-index 6
      .scroll-to
        position absolute
        right 0
        bottom -30px
      .post:hover
        position relative
        z-index 4
      #post_edit
        width 80%
        .photo
          margin 1px 9px 1px 1px
        .title
          margin-bottom 8px
        .button
          right 5px
          visibility hidden
      .post-edit:hover
        .close
          opacity 1
          transition opacity .2s ease-out .1s
      .reply
        width 400px
        .post-edit form
          clear both
          vertical-align top
          .close
            right -9px
            top -10px
          .summary
            vertical-align top
            display inline-block
            .photo
              margin-top 5px
          textarea
            height 30px
            min-height 30px
            width 320px
            margin-top 0
            vertical-align top
            display inline-block
          .button
            bottom 20px
            right 5px
      .post-edit
        position relative
        margin-bottom (grid*2)
        margin-top (grid/2)
        .tooltip
          bottom 63px
        form
          position relative
          text-align right
        .button
          position absolute
          z-index 15
          padding 2px 5px
          font-size .9em
          height 26px
          right -14px
          bottom 9px
          left auto
        .close
          opacity 0
          right -7px
          top 34px
          position absolute
          z-index 10
        .summary
          .profile.photo
            margin-left 3px
            border-radius 1px
            height 39px
            width 49px
            margin-top (grid/2)
        .summary::before:hover
          margin-left 2px
        .summary::before
          position absolute
          z-index 1
          content ''
          top 13px
          height 0
          width 0
          border-bottom 7px solid transparent
          border-right 7px solid transparent
          border-top 7px solid transparent
        .title
          display block
          width 50%
        #cke_body, textarea.body
          width 102%
          min-height 40px
          resize vertical
          display block
          margin grid 0
          min-height 40px
      .post.head
        padding-top (grid/2)
      .post:first-child
        padding-top grid
      .post.censored
        .onclick-censor-post
          display none!important
      .post
        position relative
        clear both
        margin-right (grid*4)
        padding-top (grid*2)
        .breadcrumb
          margin-bottom (grid*2)
          span, em
            display none
        .profile
          width 75px
          height 60px
          margin-bottom (grid)
        img
          max-width 100%
        .title
          margin 0 0 1px -1px
          font-size 1.5em
        .user
          font-weight bold
        .title, .user
          text-transform capitalize
        .body
          margin (grid/2) 0 grid 0
          clear both
          font-size 1.05em
        .actions
          opacity 0
          clear both
          letter-spacing -10px
          margin-top (grid+2)
          margin-bottom 2px
          line-height 15px
          margin-left -6px
          a
            font-size .9em
            font-weight 400
            margin-right 2px
            margin-left 2px
            display inline
            padding 1px 5px
          .edit, .censor
            display none
      .page-loaded:last-child, #listview div[data-infinity-pageid]
        padding-bottom (grid*4) !important
      .post:hover
        .actions
          opacity 1
          letter-spacing 0
          transition opacity .3s, letter-spacing .09s
      .children
        font-size .95em
        .profile.photo
          width 60px
          height 45px
        .children
          margin-left (grid*3)
          .post
            padding-top grid
            textarea.body
              padding-top (grid/2)
            .user, .date
              display inline
              font-size .92em
            .user
              font-weight bold
            .date
              margin-left (grid/2)
            .profile
              margin-top (grid/2)
              border-radius 2px
              width 45px
              height 37px
//}}}
