@import "fluidity"
@import "fluidity/type"
@import "fluidity/normalize"

vendors = webkit moz official

@keyframes rotate-in
  0%
    transform rotate(-60deg)
  100%
    transform rotate(0deg)

@keyframes build-in
  0%
    transform translate(0, 0)
    opacity 0
  100%
    transform translate(-30px, -30px), scale(1.1)
    opacity 1

body
  font-family 'Source Sans Pro','Open Sans Condensed','Ubuntu','Helvetica Neue',sans-serif
  cursor pointer

  .logo 
    position fixed
    display block
    top 30%
    left 50%
    margin 0 -190px
    height 100px
    text-indent 100px
    padding 15px 0
    font-size 3em
    font-weight 300
    border-bottom 1px solid #f4f4f4
    line-height 53px
    animation build-in .4s ease-out 1 forwards
    &:after
      position absolute
      display block
      top 0
      left 0
      content ''
      height 100px
      width 100px
      background-image url("//muscache2.powerbulletin.com/images/pb_icon_logo.png")
      background-repeat no-repeat
      transform rotate(-60deg)
      animation rotate-in .4s ease-out 1 forwards
    a 
      color #666
      text-decoration none
      font-style italic
      b 
        color #333
        font-style normal
    .note
      font-size .5em
      color #999
      text-align center
      margin 75px 0 0 -80px
      small
        letter-spacing 1px
        font-size .8em
        margin-left 7px
