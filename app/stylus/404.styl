vendors = webkit moz official

@keyframes buildin
  0%
    transform translate(0, 0)
    opacity 0
  100%
    transform translate(-30px, -30px), scale(1.1)
    opacity 1

body
  font-family 'Source Sans Pro','Open Sans Condensed','Ubuntu','Helvetica Neue',sans-serif
  cursor pointer

  .logo 
    position fixed
    display block
    top 30%
    left 50%
    margin 0 -190px
    background-image url("//muscache2.powerbulletin.com/images/pb_icon_logo.png")
    background-repeat no-repeat
    height 100px
    text-indent 100px
    padding 15px 0
    font-size 3em
    font-weight 300
    border-bottom 1px solid #f4f4f4
    animation-name buildin
    animation-duration 2s
    a 
      color #666
      text-decoration none
      font-style italic
      b 
        color #333
        font-style normal
    .note
      font-size .5em
      color #999
      text-align center
      margin 75px 0 0 -80px
      small
        letter-spacing 1px
        font-size .8em
        margin-left 7px
