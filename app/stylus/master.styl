
vendors = webkit moz official

@import "fluidity"
@import "fluidity/type"
@import "fluidity/normalize"

grid = 10px

// theamable color defaults (cyan/blue)
lighta = rgba(230,245,255,.7)
light  = #4ccfea
dark   = #3199b0
dark_text  = #3199b0
light_text = #ddd
// tint color is placed over the background among other images (translucent)
tint_color = rgba(240,240,240,0.65)


// base layout & theme
