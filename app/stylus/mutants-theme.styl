//{{{ - admin
html.admin
  #left_container
    li
      border-left 1px solid transparent
      height 23px
      &:hover
        border-radius 5px / 3px
      &.feature.upgrade
        font-size .75em
      &.feature.upgrade.active::after
        border-left-color dark2
      &.feature.upgrade.active
        background-color dark2
      &.feature
        position relative
        margin-top (grid*3)
        &::before
          content ''
          position absolute
          height 1px
          width 30px
          background-color #eaeaea
          top -(grid)
          left 50px
    li.active
      background-color dark
      text-shadow 0 1px 0 #000
      border-radius 9px / 2px
      border-top-right-radius 0
      border-bottom-right-radius 0
      position relative
      border-left 1px solid #333
      border-bottom 2px solid #333
      a
        font-style italic
        color #fff
      &::after
        position absolute
        content ''
        top 0
        opacity 1
        right -34px
        border 17px solid transparent
        border-left 17px solid dark
        transition all .1s ease-out
    li
      a
        padding 2px 8px
        font-size 1.2em!important
        text-decoration none
      &::after
        position absolute
        content ''
        top 10px
        opacity 0
        right -6px
        border 10px solid transparent

  .main-content
    .domains form fieldset
      border 1px solid #f9f9f9
    form
      fieldset:hover
        border-radius 2px
        legend
          color #000
          transition all .1s ease-out
        label
          color #444
        img
          opacity 1
      fieldset
        color #555
        label
          color #777
        img
          opacity .9

      input[type="checkbox"]:checked + label .switch::after
        background-color light
    .notes
      font-weight 300
      a
        color dark
  //}}}
