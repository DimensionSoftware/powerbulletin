        padding 8px
      color #555
      font-weight 100
      li
        letter-spacing 2px
      .indicator
        opacity .3
        background-color #666
      .onclick-scroll-top
        border-bottom 10px solid #555
      .onclick-scroll-top:hover
        border-bottom 10px solid #777
      #order
        li.active
          color #000
          font-weight 500
          font-size .95em
          animation-name tiny-grow
          animation-duration .25s
//}}}
//{{{ - forum & profile
html.forum, html.profile, html.search
  #main_content
    .forum, .threads .search
      .children + .post:nth-last-child(2)
          border-bottom 1px solid transparent
      .post:hover
        border-bottom 1px solid rgba(200,200,200,.3)
        color #111
        .post-edit:hover
          .summary::before
            border-top 8px solid highlight-color2
            transition border-top .2s ease-out .1s
      .post.censored
        .body, blockquote, p
          text-decoration line-through
          opacity .8
          font-size .8em
          color #888
          transition all .1s ease-out
      .post
        color #333
        border-bottom 1px solid rgba(200,200,200,.15)
        .post-edit
          .summary::before
            border-top 8px solid #ccc
      .children
        .children
          .body, .date, .user span
            color #555
      .actions a
        color highlight-color2
  #left_content
    .threads
      .thread:last-child
        border-bottom 1px solid transparent
      .thread:last-child:hover, .thread
        border-bottom 1px solid rgba(100,100,100,.05)
      .thread
        border-top 1px solid transparent
        border-left 2px solid transparent
        border-right 2px solid transparent
        .title
          text-shadow none
          color highlight-color2
          display inline-block
          border-bottom 1px solid transparent
        .created
          color #444
          opacity 0
        a
          color #555
          text-decoration none
      .thread:first-child
        border-top 1px solid transparent
      .thread:first-child:hover
        border-top 1px solid rgba(250,250,250,.2)
      .thread:hover
        border-bottom 1px solid rgba(90,90,90,.2)
        background-color rgba(255,255,255,.2)
        transition border-bottom .5s ease-out, background-color .3s ease-out
        .created
          opacity .8
          transition opacity .3s ease-out
        a
          color #222
      .thread.active:hover
        a #fff
      .thread.active:last-child, .thread.active
        background-color #fff
        border-radius 5px / 10px
        border-right 2px solid #ddd
        border-bottom 1px solid #ddd
        border-top 1px solid #fff
        border-left 3px solid highlight-color2
        background-image linear-gradient(to top, #f5f5f5 50px, #fafafa 52px, #fff 100%)
        transition background-color .5s cubic-bezier(0, 0, 0.17, 1)
        a
          color #111
        .created
          opacity 1
          display block
//}}}
//{{{ - profile
html.profile
  h1
    color #222
  #main_content
    .forum
      .heading
        .title
          color #aaa
//}}}
//{{{ - admin
html.admin
  #left_container
    li
      a
        padding 2px 8px
        font-size 1.4em
        text-decoration none

  #main_content
    position absolute
    bottom 0
    background-color #fbfbfb
    .domains form fieldset
      border 1px solid #f9f9f9
    form
      fieldset:hover
        border-top 1px solid #f2f2f2
        border-radius 2px
        legend
          color #000
          transition all .1s ease-out
        label
          color #444
        img
          opacity 1
      fieldset
        border-top 1px solid transparent
        color #555
        label
          color #777
        img
          opacity .9
//}}}

