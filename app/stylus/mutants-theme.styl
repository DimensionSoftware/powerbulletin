//{{{ - homepage
html.homepage
  #main_content
    .container
      width 90%
      margin 0 auto
    .forum
      .post
        .profile
          background-color #fafafa
          border 1px solid #555
          font-weight bold
        .post-edit
          .sceditor-container
            border-top-left-radius 0
            .sceditor-toolbar
              background-color #fafafa
              border-bottom 1px solid #eee
          .title
            border-bottom-left-radius 0
            border-bottom-right-radius 0
