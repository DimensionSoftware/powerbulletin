//{{{ - forum, profile, search & moderation
html.forum, html.profile, html.search, html.moderation
  .main-content
    .forum, .threads, .search
      .post:hover
        color #111
        .post-edit:hover
          .summary::before
            border-left 5px solid dark
            transition border-right .2s ease-out .1s
        .body
          border-bottom 1px solid rgba(0,0,0,.05)
      .post.censored
        .body, blockquote, p
          text-decoration line-through
          opacity .8
          font-size .8em
          color #888
          transition all .1s ease-out
      .post-edit
        form
          button
            position absolute
            right 13px
            bottom 13px
      .post
        overflow visible
        color #333
        .username
          font-weight 500
          color dark_text
        .body
          background-color rgba(0,0,0,.015)
          border-bottom 1px solid transparent
        .post-edit
          .summary::before
            border-left 4px solid #ccc
        .hash-tag, .at-tag
          display inline-block
          padding 2px 4px
          border-radius 8px 2px
        .hash-tag
          background lighta
          color dark
        .at-tag
          color dark

      .children
        .children
          .body, .user span
            color #666
          .container
            float left
          .username
            color #444
          .post-content, .cke_editable
            p
              color #444
              margin-top 0
          .date
            color #999
            text-transform lowercase
      .actions
        a:active, a:focus
          background radial-gradient(circle closest-corner at 55% 65%, light2 85%, dark2 100%)
        a:hover
          background radial-gradient(circle closest-corner at 45% 35%, light2 75%, dark2 100%)
        a
          color dark
          background-color light2
          background radial-gradient(circle closest-corner at 45% 35%, light2 75%, dark2 115%)
          border-radius 27px
          .s-reply::after, .s-permalink::after, .s-censor::after
            position absolute
            content ''
            top 1px
            left 1px
            height 24px
            width 24px
            border-radius 24px
            background-color rgba(255,255,255,.4)
          .s-reply, .s-permalink, .s-censor
            position relative
            height 27px
            width 27px
  .left-content
    border-right 1px solid #eaeaea
    .threads
      .thread::after
        position absolute
        content ''
        border-bottom 1px solid rgba(0,0,0,.05)
        background-color #fff
        height 1px
        margin-top 10px
        left 10%
        width 80%
      .thread
        list-style-type none
        border-top 1px solid transparent
        border-left 2px solid transparent
        border-right 2px solid transparent
        .title
          text-shadow none
          color dark
          display inline-block
          border-bottom 1px solid transparent
        .created
          color #444
          opacity 0
        a
          color #333
          text-decoration none
      .thread:first-child
        border-top 1px solid transparent
      .thread:first-child:hover
        border-top 1px solid rgba(250,250,250,.2)
      .thread:hover::after
        border-bottom 1px solid rgba(0,0,0,.1)
      .thread:hover
        //border-bottom 1px solid rgba(90,90,90,.2)
        background-color rgba(255,255,255,.2)
        //transition border-bottom .5s ease-out, background-color .3s ease-out
        .created
          opacity .8
          transition opacity .3s ease-out
        a
          color #222
      .thread.active::after
        height 0
        border none
      .thread::before
        position absolute
        top -1px
        bottom -1px
        left 0
        width 0
        content ''
      .thread.active::before
        background-image linear-gradient(to top, dark 10%, light 100%)
        width 6px
        transition all .2s ease-out
      .thread.active:hover
        a #fff
      .thread.active:last-child, .thread.active
        position relative
        z-index 9
        background-color #fff
        border-right 1px solid #aaa
        border-bottom 1px solid #c8c8c8
        border-top 1px solid #fff
        border-left 0
        background-image linear-gradient(to top, #e2e2e2 0, #fff 100%)
        box-shadow 0 1px 3px 0 light
        transition box-shadow .2s ease-out
        .title
          color dark_text
          font-style italic
        a
          color #000
        .created
          opacity .8em
          display block
//}}}
