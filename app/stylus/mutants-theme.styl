
// Theme details (esp. colors) applied to ...
a.mutant:hover
  text-decoration none!important

// Mutant-specific States
//{{{ - homepage
html.homepage
  #forum_background_color:after, #forum_background_buffer:after, #forum_background:after
    content ''
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    background-color tint_color
  .main-content
    .container
      width 90%
      margin 0 auto
