//{{{ - admin
html.admin
  #left_container
    li.feature
      font-size .7em
    li:hover
      border-radius 5px / 3px
    li
      border-left 1px solid transparent
      height 23px
    li.feature.upgrade.active::after
      border-left-color dark
    li.feature.upgrade.active
      background-color dark
      border-left 1px solid #666
      border-bottom 1px solid #666
      a
        color #333
    li.active
      background-color dark
      text-shadow 0 1px 0 #000
      border-radius 8px / 4px
      border-top-right-radius 0
      border-bottom-right-radius 0
      position relative
      border-left 1px solid #333
      border-bottom 1px solid #333
      a
        color #fff
    li::after
      position absolute
      content ''
      top 10px
      opacity 0
      right -5px
      border 10px solid transparent
    li.active::after
      position absolute
      content ''
      top 0
      opacity 1
      right -34px
      border 17px solid transparent
      border-left 17px solid dark
      transition all .1s ease-out
    li
      a
        padding 2px 8px
        font-size 1.4em
        text-decoration none

  .main-content
    background-color #fcfcfc
    .domains form fieldset
      border 1px solid #f9f9f9
    form
      fieldset:hover
        border-radius 2px
        legend
          color #000
          transition all .1s ease-out
        label
          color #444
        img
          opacity 1
      fieldset
        color #555
        label
          color #777
        img
          opacity .9

      input[type="checkbox"]:checked + label .switch::after
        background-color light
      label[for="hide_menu"]:hover, label[for="private"]:hover, label[for="invite_only"]:hover
        box-shadow inset 0 2px 10px #666, 0 2px 5px #eee, 0px 0px 0px 1px dark
        transition box-shadow .1s ease-out
    .notes
      font-weight 300
      a
        color dark
  //}}}

