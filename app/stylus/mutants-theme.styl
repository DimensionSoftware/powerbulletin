//{{{ - admin
html.admin
  #left_container
    li
      a
        padding 2px 8px
        font-size 1.4em
        text-decoration none

  #main_content
    position absolute
    bottom 0
    background-color #fbfbfb
    .authorization form fieldset
      border 1px solid #f9f9f9
    form
      fieldset:hover
        border-top 1px solid #f2f2f2
        border-radius 2px
        legend
          color #000
          transition all .1s ease-out
        label
          color #444
        img
          opacity 1
      fieldset
        background-color #fff
        border-top 1px solid transparent
        color #555
        label
          color #777
        img
          opacity .9
//}}}

