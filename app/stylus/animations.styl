
// Animations!
@keyframes hover-around
  0%
    transform rotate3d(1, -1, 0, 0deg)
  35%
    transform rotate3d(9, -15, 0, -21deg)
  70%
    transform rotate3d(-28, 6, 0, 8deg)
  100%
    transform rotate3d(1, 0, 0, 18deg)

@keyframes tiny-grow
  0%
    transform scale(1.0)
  25%
    transform scale(1.01)
  45%
    transform scale(1.03)
  100%
    transform scale(1.0)

@keyframes shake
  0%
    transform translateX(-50px), skew(1deg, 3deg)
  40%
    transform translateX(25px), skew(-4deg, -6deg)
  65%
    transform translateX(-10px), skew(0, 3deg)
  85%
    transform translateX(5px), skew(0, 0)
  100%
    transform translateX(0)

@keyframes post-animate-in
  0%
    transform translateX(-4px), skew(1deg, 1deg)
  45%
    transform translateX(2px), skew(-1deg, -1deg)
  100%
    transform translateX(0)

@keyframes slide
  0%
    transform translateY(-175px)
  80%
    transform translateY(35px)
  100%
    transform translateY(0px)

@keyframes fadein
  0%
    opacity 0
  100%
    opacity 1
