
// Animations!
// overwrite fluidity's box-shadow w/ vendor prefixes for working animations (below)
box-shadow(arg1, arg2, arg3)
  box-shadow arg1, arg2, arg3

@keyframes online
  0%
    box-shadow 0 0 6px 2px rgba(darken(theme_color, 15%), 0), 0 0 0 0 transparent, 0 0 0 0 rgba(theme_color, 0)

  70%
    box-shadow 0 0 4px 3px darken(theme_color, 20%), 0 0 3px 6px transparent, 0 0 1px 8px lighten(theme_color, 25%)

  100%
    box-shadow 0 0 2px 0 dark_theme_color, 0 0 0 13px transparent, 1px 1px 10px -1px theme_color

.online
  animation-name online
  animation-duration .5s
  animation-timing-function ease-in

@keyframes translate-and-scale
  0%
    transform translate(0, 0)
  100%
    transform translate(-30px, -30px), scale(1.1)

@keyframes move-down
  0%
    transform scale(1), translateY(0)
  70%
    transform scale(.92), translateY(-5px)
  100%
    transform scale(1.03), translateY(2px)

@keyframes hover-around
  0%
    transform rotateZ(0deg)
  15%
    transform rotateZ(4deg)
  60%
    transform rotateY(-30deg)
  100%
    transform rotateY(10deg)
.hover-around
  perspective 300
  transformation-style preserve-3d
  animation-name hover-around
  animation-duration 3s
  animation-iteration-count infinite
  animation-direction alternate

@keyframes tiny-grow
  0%
    //opacity .85
    transform scale(.98)
  65%
    transform scale(1.01)
  100%
    //opacity 1
    transform scale(1.0)
.tiny-grow
  animation-name tiny-grow
  animation-duration .2s
  animation-timing-function ease-in

@keyframes post-animate-in
  0%
    transform translateX(-4px), skew(1deg, 1deg)
  45%
    transform translateX(2px), skew(-1deg, -1deg)
  100%
    transform translateX(0)

@keyframes fadein
  0%
    opacity 0
  100%
    opacity 1

@keyframes shake
  0%
    transform none

  5%
    transform translate3d(-15%, 0, 0) rotate3d(0, 0, 1, -8deg)

  45%
    transform translate3d(10%, 0, 0) rotate3d(0, 0, 1, 3deg)

  75%
    transform translate3d(-5%, 0, 0) rotate3d(0, 0, 1, -3deg)

  100%
    transform none

