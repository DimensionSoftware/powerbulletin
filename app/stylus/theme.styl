@import 'fluidity/css3'

// XXX default theme containing all color decoration & embellishments

highlight-color  = #ffeedd
highlight-color2 = #ff6803

body.has-scrolled
  header
    box-shadow 0 -1px 14px 3px #eee
    border-bottom 1px solid #ddd
    height 40px
    transition all .2s ease-out
    .logo
      font-size 1.3em
      margin-top 8px
    .menu
      .row
        line-height 40px
        font-size 15px
        transition line-height .2s ease-out
  .right-menu
    margin-top 15px
    transition margin-top .2s ease-out

body
  font-family 'Ubuntu', 'Helvetica Neue'
  background-color #fff

header
  background-color rgba(250, 250, 250, 0.9)
  border-top 3px solid #666
  color #ddd
  .menu
    background-image linear-gradient(bottom, #fff 10px, #f5f5f5)
    .row.active
      border-top 3px solid #444
      color #666
      background-color #f3f3f3
    .row:hover
      border-top 3px solid #222
      text-shadow 0 0 1px highlight-color2
      color #333
      z-index 1
      transition all .1s ease-out
      background-color #eee
    .row
      letter-spacing -1px
      color #aaa
      border-top 3px solid #666
      text-shadow 0 0 1px #fff
  .search
    font-size .8em

.content
  .topics
    background-color #ccc
  .post.odd
    background-color #fcfcfc
    border-bottom 1px solid #eee

.right-menu
  .menu
    color #999
    border-bottom 1px solid transparent
  .menu:hover
    border-bottom 1px solid #eee
    color #888
    .row:hover
      color #333
  p
    margin 10px 0

footer
  background-image linear-gradient(top, #eaeaea, #fff)
  background-color #fafafa
  box-shadow 0 0 10px 1px #f3f3f3
  border-top 1px solid #eee
  text-align center
  color #ddd
  opacity .8
  h6
    font-size .9em
    letter-spacing 3px
    margin 3px
    font-weight 500
    text-shadow 1px 0 0 #fff

// <CONTROLS>
input[type="password"], select, textarea, input[type="text"]
  //box-shadow 0 0 9px #cba inset, 0 0 0 #888
  border-radius 3px
  color #888!important
  background-image linear-gradient(top, highlight-color 1px, #fff 10px)
  outline none
  margin-bottom 4px
  padding 8px
  border 1px solid #ddd!important
  border-right 1px solid #888!important
  border-bottom 1px solid #666!important
  //border-bottom 1px solid #aaa
  font-size 18px
  vertical-align middle
  outline none
input[type="password"]:hover, select:hover, textarea:hover, input[type="text"]:hover
  color #555!important
  border-color #444
  border-bottom 1px solid #666!important
  border-right 1px solid #777!important
  box-shadow 0 0 1px highlight-color2 inset,1px 0 2px highlight-color
input[type="password"]:focus, input[type="password"]:focus, select:focus, textarea:focus, input[type="text"]:focus 
  color #000!important
  text-indent -1px
  background-color #fffcfc
  border 1px solid highlight-color2!important
  border-bottom 1px solid highlight-color2!important
  box-shadow -1px 0px 3px #aaa inset,0 0 2px orange,-1px 0px 0 #ff3800,1px 2px 0 #555,0 0 4px #faa,-1px -1px 2px yellow,0 0 3px yellow
  transition all .15s
  border-radius 4px
.button:hover, input[type="button"]:hover, input[type="submit"]:hover, button:hover
  //color yellow!important
  background -moz-linear-gradient(center top , #FFce29, #F38437) repeat scroll 0 0 #FFFFFF
  background -webkit-gradient(linear, left top, left bottom, from(#FFce29), to(#F38437))
  //filter:  progid:DXImageTransform.Microsoft.gradient(startColorstr='#FFca27', endColorstr='#F38437')
  background-color #FFca27
  border-color #777
  border-top 1px solid #fff467
  border-left 1px solid #fff467
  border-bottom 1px solid #444
  box-shadow 0 0 5px #888
  text-shadow 0px 1px 0 black,1px 1px 2px black
  transition all .1s
.button:active, button:active, input[type='submit']:active,input[type='button']:active,button:focus, input[type="submit"]:focus, input[type="button"]:focus
  border-top 1px solid #666
  border-left 1px solid #666
  //color yellow!important
  box-shadow 0 0 2px #ccc, 1px 1px 2px #a33400 inset
  text-shadow 0px 1px 0 black,1px 1px 3px black
  border-bottom 1px solid highlight-color2!important
  border-right 1px solid highlight-color2!important
  transition all .2s
.button, input[type="button"], input[type="submit"], button
  outline none
  text-shadow 0 1px 0 #444,1px 1px 2px #444
  background -moz-linear-gradient(center top , #FFC447, #F38437) repeat scroll 0 0 #FFFFFF
  background -webkit-gradient(linear, left top, left bottom, from(#FFC447), to(#F38437))
  //filter   progid:DXImageTransform.Microsoft.gradient(startColorstr='#FFC447', endColorstr='#F38437')
  background-color #F38437
  border-radius 2px
  box-shadow 0px 0px 3px #C35407
  border 1px solid #999
  border-bottom 1px solid #777
  border-right  1px solid #aaa
  border-top 1px solid #ffe457
  border-left 1px solid #ffe457
  color #fff
  font-size 1.4em
  font-weight bold
  padding 3px 12px
