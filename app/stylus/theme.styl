@import 'fluidity/css3'

// XXX default theme containing all color decoration & embellishments

highlight-color  = #ffeedd
highlight-color2 = #ff6803
mouse-intent = .2s
grid = 10px

@keyframes grow
  0%
    transform scale(1.0)
  33%
    transform scale(1.18)
  100%
    transform scale(1.0)

//{{{ Style applied after body scrolls
body.expanded header
  .search
    #query.query
      border-bottom 2px solid #444
  .advanced
    .check
      margin 3px
    label
      margin-right 10px
  .menu
    .row
      line-height 30px!important
      font-size 15px!important
      transition line-height .2s ease-out!important
      .submenu
        top -200px
body.has-scrolled
  header
    background-color rgba(0,0,0,0.7)
    box-shadow 0 -1px 15px 4px #666
    border-bottom 1px solid #fff
    border-top-width 1px
    height 30px
    transition all .2s ease-out
    .logo
      font-size 1.1em
      margin-top 4px
    .menu
      .row
        line-height 30px
        font-size 15px
        transition line-height .2s ease-out
        .submenu
          top -200px
    .search
      top 0!important
      right 0!important
      .query
