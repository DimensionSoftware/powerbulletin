@import 'fluidity/css3'
@import './app/stylus/animations'

// XXX default theme containing all color decoration & embellishments

tint-color = rgba(200,200,200,0.07)
footer-height = 25px

body
  font-family 'Source Sans Pro', 'Open Sans Condensed', 'Ubuntu', 'Helvetica Neue', sans-serif

body.disabled::after
  content ''
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 99
  background radial-gradient(circle closest-corner at 50% 30%, rgba(0,0,0,0.1) 20%, rgba(0,0,0,0.5) 100%)!important

a
  color dark
  text-decoration none

.photo
  background-color #fff
  //border-top-right-radius 2px
  border-radius 3px
  box-shadow inset 0 1px 0 rgba(255,255,255,0.35),1px 1px 8px -2px light
  //border 1px solid #aaa
  opacity .85

.online
  box-shadow 0 0 2px 0 dark, 1px 1px 10px -1px light
  border 1px solid #eee
  opacity 1!important
  transition box-shadow .3s ease-out, opacity .3s ease-out

.saved
  box-shadow 0 0 2px rgba(50,150,50,.8), 1px 1px 1px rgba(50,150,50,.8),0 1px 0 rgba(40,140,40, .9)
  transition box-shadow .3s ease-in-out

.cancel:hover, .onclick-close:hover
  background-color #999
  opacity 1
  background radial-gradient(circle closest-corner at 45% 35%, #eee 45%, #aaa 100%)
  color red
  transition all .06s ease-out
.cancel, .onclick-close
  font-weight 600
  transform rotate(10deg)
  height 9px
  width 8px
  color #333
  background-color #aaa
  background radial-gradient(circle closest-corner at 45% 35%, #eee 40%, #bbb 100%)
  transition all .06s ease-out

//{{{ Header
header
  background-color tint-color
  border-top 1px solid #aaa
  border-bottom 1px solid rgba(180,180,180,0.15)
  color #555
  .container
    .search
      .icon
        background radial-gradient(circle closest-corner at 50% 44%, light 55%, dark 100%)
        position absolute
        z-index 20
        top -6px
        left -10px
        height 22px
        width 22px
        border-radius 22px
        .s-search
          margin-left 2px
      .query:focus
        margin-top -1px
        height 21px
        text-indent 13px
        border-radius 5px
        box-shadow 1px 1px 3px 1px light
        color #111
      .query
        box-shadow 1px 1px 3px light inset
        border 0
        background none
        border-radius 6px
        font-size 1.15em
        height 20px
      .query::-webkit-input-placeholder
          color #ccc
      .query:-moz-placeholder
          color #ccc
      .query::-moz-placeholder
          color #ccc
      .query:-ms-input-placeholder
          color #ccc
      .query:hover
        color #444
      #query.query
        font-style italic
        letter-spacing 1px
        font-weight 400
    .tools
      .bubble, .bubble2
        box-shadow 1px 1px 3px light
      .bubble
        box-shadow 1px 1px 2px light
      &::before
        background-color light
      .container
        menu
          box-shadow 1px 1px 4px light
//}}}
//{{{ Left side
#left_content:hover::after
  width 1px
  background-color #fafafa
#left_content::after
  position absolute
  right 0
  top 1px
  content ''
  bottom 0
  background-color #f7f7f7
  width 1px
#left_content
  background-color tint-color
  .handle
    transition all .2s ease-out
    background-color #ddd
    background radial-gradient(circle closest-corner at 45% 35%, #e0e0e0 40%, #bbb 100%)
    border 1px solid #ddd
    color #888
    &:hover::before
      border-right 12px solid #fff
      left -3px
    &::before
      border-right 10px solid #fff
      transition all .1s ease-out
    &:hover
      background-color #ddd
      background radial-gradient(circle closest-corner at 45% 35%, #e0e0e0 40%, #a0a0a0 100%)
      color #444
  .title
    letter-spacing -1px
    font-size 1.1em
    margin (grid / 2) 0
  #paginator:hover
    border-right 1px solid #bbb
  #paginator
    border-right 1px solid #ddd
    background-color rgba(200,200,200,0.1)
    border-top 2px solid #ccc
    border-bottom 1px solid #ccc
    .current:hover
      border-left 1px solid #ccc
      border-top 1px solid #ccc
      border-right 1px solid #888
      border-bottom 2px solid #aaa
      transition all .2s ease-out
    .current
      background-color #eee
      background-image linear-gradient(top, #eee 5%, #fefefe)
      border-top 1px solid #ddd
      border-left 1px solid #ddd
      border-bottom 2px solid #bbb
      border-right 1px solid #999
    a.page.next:hover::before
      border-top 9px solid #aaa
    a.page.previous:hover::before
      border-bottom 9px solid #aaa
    a.page.next::before
      border-top 9px solid #bbb
    a.page.previous::before
      border-bottom 9px solid #bbb

//}}}
//{{{ Main Content
.main-content
  a:hover
    color #000
    text-decoration underline
  a
    color #333
    text-decoration none

  #breadcrumb
    background-color #f5f5f5
    background-image linear-gradient(to top, #eee, #f8f8f8 10%)
    border-bottom 1px solid #ddd
    border-right 1px solid #ddd
    border-left 1px solid #ddd
    box-shadow 0 1px 0px 0px #aaa
    font-style italic
    color #ddd
    a, em
      color #666

  a.page
    color #eee

  a.page:hover, a.active
    background-color dark
    color #eee

  blockquote
    text-align left
    background #fafafa
    border-left 5px solid #f3f3f3
    margin 1.5em 10px
    padding .5em 10px
    font-size 1em
    font-style italic
    font-weight 100
    color #666
  
  blockquote::before
    color #ccc
    line-height .1em
    margin-right .25em
    vertical-align -.4em

///}}}
//{{{ Footer
footer.expanded
  background-color #fafafa
  box-shadow 0 3px 30px 0 light
  &::before
    position fixed
    left 0
    right 0
    bottom 0
    top 0
footer
  opacity 0
  //background-color #f7f7f7
  background-image linear-gradient(to top, #f7f7f7 15px, rgba(255,255,255,.7))
  box-shadow 0 0 4px -1px light
  text-align center
  color #777
  &::before
    //border-top 1px solid #eee
    top 0
    left 0
    right 0
    content ''
    position absolute
  &:hover::before
    //border-top 1px solid #ddd
    transition border-top .2s ease-out
  &:hover
    color #666
    background-image linear-gradient(to top, #f7f7f7 15px, rgba(255,255,255,1))
    box-shadow 0 0 3px 0 light
    transition box-shadow .3s ease-out
  h6
    cursor default
    font-size .9em
    letter-spacing 3px
    margin 0
    font-weight 100
//}}}

//{{{ Scrolled <body>
body.scrolled
  //footer::before
  //  border-top 1px solid #ddd
  footer:hover::before
    //border-top 1px solid #ccc
    transition border-top .2s ease-out
  header
    background-color rgba(255,255,255,0.95)
    box-shadow 0 -1px 12px 2px #eee
    border-bottom 1px solid #fff
    height -2px
    transition height .2s ease-out, background-color .5s ease-out
    &::after
      border-bottom 1px solid #ddd
      box-shadow 0 2px 6px 0px #ddd
      bottom -1px
      left 0
      right 0
      height 1px
      content ''
      position absolute
    .container
      .search
        .query
          border-bottom-width 1px
        .query::-webkit-input-placeholder
            color #bbb
        .query:-moz-placeholder
            color #bbb
        .query::-moz-placeholder
            color #bbb
        .query:-ms-input-placeholder
            color #bbb
  #left_content::after
    bottom (footer-height - 4)
  footer
    transition bottom .4s ease-out
    &:hover
      box-shadow 0 0 4px 0 light
      background-image linear-gradient(to top, #f7f7f7 10px, rgba(255,255,255,1))
      transition all .1s ease-out
//}}}

//{{{ Fancybox
.fadein
  animation-name fadein
  animation-duration .4s
.slide
  animation-name slide
  animation-duration .06s
.post-animate-in
  animation-name post-animate-in
  animation-duration .3s
.shake
  animation-name shake
  animation-duration .8s
.fancybox-overlay::after
  position absolute
  bottom (grid*2)
  right (grid*2)
  height 24px
  width 228px
  content ''
  background-image url(cache-url + '/images/secure.png')
.fancybox-overlay
  background radial-gradient(circle closest-corner at 50% 30%, rgba(0,0,0,0.35) 20%, rgba(0,0,0,0.8) 100%)!important
  overflow none
  .fancybox-wrap
    .fancybox-skin
      //box-shadow 0px 1px 12px 2px rgba(0, 0, 0, 0.3)!important
      box-shadow 0 1px 8px 3px rgba(0,0,0,0.3) !important
    .fancybox-skin, .fancybox-inner
      background-color #f9f9f9
      background-image linear-gradient(to top, #fff 10px, #f2f2f2)
//}}}
//{{{ jQuery UI
.ui-widget-overlay
  opacity .9!important
  background-color #fff!important
//}}}
