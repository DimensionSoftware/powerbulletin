@import 'fluidity/css3'

// XXX default theme containing all color decoration & embellishments

highlight-color  = #ffeedd
highlight-color2 = #ff6803
mouse-intent = .2s
grid = 10px

//{{{ Animations!
@keyframes grow
  0%
    transform scale(1.0)
  33%
    transform scale(1.18)
  100%
    transform scale(1.0)
@keyframes tiny-grow
  0%
    transform scale(1.0)
  25%
    transform scale(1.03)
  45%
    transform scale(1.04)
  100%
    transform scale(1.0)
//}}}

//{{{ Style applied after body scrolls
body.scrolled
  header
    background-color rgba(0,0,0,0.7)
    box-shadow 0 -1px 15px 4px #666
    border-bottom 1px solid #fff
    border-top-width 2px
    transition height .2s ease-out, background-color .5s ease-out
    .container
      .logo
        a
          top -10px
          font-size .55em
      .menu
        .row
          transition line-height .2s ease-out
      .search
        .query
          border-bottom-width 2px
        .query::-webkit-input-placeholder
            color #bbb
        .query:-moz-placeholder
            color #bbb
        .query::-moz-placeholder
            color #bbb
        .query:-ms-input-placeholder
            color #bbb
  .left-chrome
    .sort::before
      border 10px solid #ccc
    .sort
      color #ddd
      font-weight 100
      .indicator
        opacity .5
        background-color #fff
        //border-bottom 1px solid #000
      #sort
        li.active
          color #fed
          font-weight 400
          font-size .9em
          animation-name tiny-grow
          animation-duration .25s
    .user-profile
      transition left .5s ease-out
  #left_content.container
    padding-top (grid * 4)
    transition padding-top .4s ease-out
  #main_content.container
    .forum.dark
      .post
        background-color rgba(255,255,255, .77)
        .title
          background-color transparent
        .body
          background-color transparent
    .forum.light
      .header::before
        position absolute
        opacity .25
    .post
      margin grid
  footer
    opacity 1
    border-top 1px solid #555
    color #bbb
    background-color rgba(25,25,25,0.7)
    transition bottom .5s ease-out
//}}}
//{{{ Style applied when header is expanded
body.expanded header
  background-color rgba(0,0,0,0.85)!important
  border-bottom 1px solid #fff
  .close:hover
    background-color highlight-color2
    font-weight 500
    color #fff
  .close
    font-weight 200
    font-size 1.3em
    transform rotate(10deg)
    padding 0
    height 9px
    width 8px
    line-height 7px
    border-radius 25px
    color #eee
    text-indent -2px
  .search
    #query.query
      text-align left
  .advanced
    font-weight 100
    font-size .9em
    .check
      margin 0 8px
    label
      margin-right 10px
  .menu
    .row
      transition line-height .2s ease-out!important
//}}}

body
  font-family 'Open Sans Condensed', 'Ubuntu', 'Helvetica Neue'

a.mutant:hover
  animation-name tiny-grow
  animation-duration .1s

//{{{ Header
header
  background-color rgba(0,0,0,0.1)
  border-top 2px solid #000
  color #ddd
  .container
    .logo
      a
        display inline-block
        margin-top 13px
        vertical-align top
        font-style italic
        color #777
        font-size .75em
        text-decoration none
        font-weight 200
        letter-spacing -2px
        position absolute
        top 1px
        left 15px
        strong
          letter-spacing -1px
          font-weight 500
          padding-left 4px
          font-style normal
          color #888
    .menu
      padding 0
      > .row
        .title.active:hover
          background-image linear-gradient(bottom, #fff 10px, #ffe0c0)
        .title.active
          animation-name grow
          animation-duration .25s
          position relative!important
          z-index 50!important
          color #333
          background-color #f3f3f3
          background-image linear-gradient(bottom, #fff 10px, #ffe0c0)
          border-top 3px solid highlight-color2
      > .row
        .title:hover, .title.hover
          border-top 3px solid highlight-color2
          background-image linear-gradient(bottom, #fff 10px, #eee)
          color #000
          background-color #eee
          animation-name tiny-grow
          animation-duration .1s
          transition border-top .5s, background-color .3s, color .4s
      > .row
        .title
          display inline-block
          text-transform capitalize
          box-shadow 1px 0 0 #fafafa inset
          text-decoration none
          padding 0 19px
          border-top 3px solid #444
          color #777
          text-shadow 0 0 1px #fff
          background-color #eee
          background-image linear-gradient(bottom, #fff 10px, #ddd)
        .submenu
          box-shadow 0 2px 6px 0 #777
          border-right 1px solid #888
          padding 10px 15px
          border-bottom 2px solid #888
          border-bottom-right-radius 10px
          border-bottom-left-radius 10px
          background-color #000
          color #fff
          .row:last-child
            border-bottom 1px solid transparent
          .row
            border-bottom 1px solid #333
    .search::before
      border-left 7px solid highlight-color2
    .search
      top 5px!important
      right 6px!important
      .query::-webkit-input-placeholder
          color #777
      .query:-moz-placeholder
          color #777
      .query::-moz-placeholder
          color #777
      .query:-ms-input-placeholder
          color #777
      .query:hover, .query:focus
        //border none!important
        //box-shadow none!important
        box-shadow none
      #query.query
        box-shadow 0
        color #fff
        font-style italic
        border-left none
        text-align right
        padding-right 15px
        background transparent
        border none
      .query
        font-size 1.15em
        border-bottom-width 3px
        border-left 0px
        width 500px
        height 20px
//}}}
//{{{ Left side
#left_content.container
  padding grid
  .title
    padding 2px 7px
    letter-spacing -1px
    font-size 1em
    margin (grid / 2) 0
#left_content.container.dark
  background-color rgba(0,0,0,.1)
  border-right 1px solid #333
#left_content.container.light
  background-color rgba(255,255,255,.8)
  border-right 1px solid #eee

section.left-chrome
  .user-profile:hover
    border 1px solid #333
    .arrow
       //border-left-color rgba(255,255,255,.65)
       border-left-color #eee
       transition border-left-color .5s ease-out
       //right -20px
       //animation-name grow
       //animation-duration .5s
       //animation-iteration-count infinite
  .user-profile
    border-bottom-right-radius 5px
    border-top-right-radius 5px
    background-color rgba(0,0,0,.4)
    left -160px!important
    border 1px solid #444
    padding 2px
    .photo
      background-color #fff
      border-top-right-radius 2px
    a
      display block
      padding 8px
    .arrow
      //border-left 15px solid rgba(255,255,255,.45)
      border-left 15px solid #ddd
//}}}
//{{{ Main Content
#main_content.container
  a:hover
    color #000
    text-decoration underline
  a
    color #333
    text-decoration none

  .forum.light
    .header
      color #777
    .header::before
      position absolute
      opacity 0

  .forum
    margin-bottom (grid * 2)
    .header
      text-shadow 0 1px 1px #000,0 2px 0 #000
      text-overflow ellipsis
      letter-spacing -1px
      white-space nowrap
      margin (grid*3) grid
      color #fff
      font-weight 100
      font-size 2.1em
      line-height 2em
      h4, span
        display inline-block
        margin 0 grid
        padding 1px 6px
        //background-color rgba(0,0,0,.08)
        border-radius 4px
    .container
      padding-bottom (grid * 2)!important
      border-bottom 1px dotted #111
      .scroll-to:hover
        border-bottom 14px solid #444
      .scroll-to
        border-bottom 13px solid #222
        border-left 10px solid transparent
        border-right 10px solid transparent
        padding 1px
        width 1px
        height 20px
      .post.grow
        animation-name tiny-grow
        animation-duration .5s
      .post:hover
        background-color #fff
        border-radius 5px
        border 1px solid #aaa
        border-right 2px solid #aaa
        border-bottom 3px solid #aaa
        box-shadow 0 0 2px 0 #fff, 0 0 2px 0 #111
      .post
        background-color rgba(255,255,255,.9)
        border 1px solid #ccc
        border-right 2px solid #ccc
        border-bottom 3px solid #bbb
        border-radius 3px
        .comment
          clear both
          text-align left
          padding 2px grid
          overflow hidden
          .photo
            margin-right 10px
            margin-top 2px
          .msg:focus
            padding-left 5px
          .msg
            margin-top 2px
            padding 4px
        > .body
          padding 0 0 grid grid
          margin 0
          color #111
          background-color #fff
        .title
          margin 0
          padding grid 0 0 grid
          border-top-left-radius 5px
          border-top-right-radius 5px
          background-color #fff
          .date
            position absolute
            font-size .6em
            color #777
            right grid
            top (grid / 2)
      .subpost:hover
        border-bottom 1px solid #ddd
        color #000
        background-color rgba(255,255,255,.3)
        .signature
          background-color #eee
          color #444
      .subpost
        border-left 2px solid #eee
        padding (grid / 2)
        //background-color #f9f9f9
        color #333
        border-bottom 1px solid #eee
        .photo
          margin-right grid
          margin-top (grid/2)
        p
          font-size .8em
          padding 0 0 (grid) (grid/2)
          margin 0
        .signature
          font-style italic
          border-top-left-radius 6px
          padding 0 grid
          color #888
          font-size .7em
          position absolute
          bottom 0
          right 0
          .username
            margin-right 5px
///}}}
//{{{ Footer
footer
  opacity 0
  color #ddd
  //background-image linear-gradient(top, #000, #333)
  background-color rgba(0,0,0,0.1)
  text-align center
  color #999
  h6
    font-size .9em
    letter-spacing 3px
    margin 3px
    font-weight 100
//}}}

//{{{ Controls
input[type="password"], select, textarea, input[type="text"]
  //box-shadow 0 0 9px #cba inset, 0 0 0 #888
  border-radius 3px
  color #888
  background-image linear-gradient(top, highlight-color 1px, #fff 10px)
  outline none
  margin-bottom 4px
  padding 8px
  border 1px solid #ddd
  border-right 1px solid #888
  border-bottom 1px solid #666
  font-size 18px
  vertical-align middle
  outline none
input[type="password"]:hover, select:hover, textarea:hover, input[type="text"]:hover
  color #555
  border-color #ddd
  border-bottom 1px solid #555
  border-right 1px solid #666
  box-shadow 0 0 1px highlight-color2 inset,1px 0 2px highlight-color
input[type="password"]:focus, input[type="password"]:focus, select:focus, textarea:focus, input[type="text"]:focus 
  color #000
  background-color #fffcfc
  border 1px solid highlight-color2
  border-bottom 1px solid highlight-color2
  box-shadow -1px 0px 2px #aaa inset,0 0 1px orange,-1px 0px 0 #ff3800,1px 1px 0 #555,0 0 4px #faa
  transition all .15s
  border-radius 4px
.button:hover::before
  background-color rgba(100,100,100,.08)
.button:hover, input[type="button"]:hover, input[type="submit"]:hover, button:hover
  background -moz-linear-gradient(center top , #ffce29, #f38437) repeat scroll 0 0 #ffffff
  background -webkit-gradient(linear, left top, left bottom, from(#ffce29), to(#f38437))
  text-indent -1px
  background-color #ffca27
  border-color #777
  border-top 1px solid #fff467
  border-left 1px solid #fff467
  border-bottom 1px solid #444
  box-shadow 0 0 5px #888
  text-shadow 0px 1px 0 black,1px 1px 0 black
  transition all .1s
.button:active::before
  background-color rgba(0,0,0,.15)
  border-radius 5px
.button:active, button:active, input[type='submit']:active,input[type='button']:active,button:focus, input[type="submit"]:focus, input[type="button"]:focus
  text-indent 2px
  border-top 1px solid #666
  border-left 1px solid #666
  box-shadow 0 0 2px #888, 1px 1px 1px #a33400 inset
  text-shadow 1px 1px 0 black
  border-bottom 1px solid highlight-color2
  border-right 1px solid highlight-color2
  transition all .2s
.button::before
  position absolute
  content ''
  background-color rgba(0,0,0,.1)
  left -4px
  top -4px
  right -4px
  bottom -4px
  z-index -1
  border-radius 4px
.button, input[type="button"], input[type="submit"], button
  outline none
  position relative
  text-shadow 0 1px 0 #444,1px 1px 0 #444
  background -moz-linear-gradient(center top , #FFC447, #F38437) repeat scroll 0 0 #FFFFFF
  letter-spacing 1px
  background -webkit-gradient(linear, left top, left bottom, from(#FFC447), to(#F38437))
  background-color #F38437
  box-shadow 0px 0px 3px #C35407
  border 1px solid #999
  border-bottom 1px solid #555
  border-right  1px solid #666
  border-top 1px solid #ffe457
  border-left 1px solid #ffe457
  color #fff
  font-size 1.1em
  font-weight 600
  padding 3px 12px
  text-align center
//}}}

