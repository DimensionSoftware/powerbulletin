//{{{ Animations!
@keyframes grow
  0%
    transform scale(1.0)
  33%
    transform scale(1.18)
  100%
    transform scale(1.0)
@keyframes tiny-grow
  0%
    transform scale(1.0)
  25%
    transform scale(1.03)
  45%
    transform scale(1.04)
  100%
    transform scale(1.0)
@keyframes shake
  0%
    transform translateX(-35px), skew(1deg, 2deg)
  25%
    transform translateX(20px), skew(-3deg, -5deg)
  50%
    transform translateX(-10px), skew(0, 2deg)
  75%
    transform translateX(5px), skew(0, 0)
  100%
    transform translateX(0)
@keyframes slide
  0%
    transform translateY(-80px), skew(0, -1deg)
  25%
    transform translateY(-50px), skew(0, -1deg)
  45%
    transform translateY(30px), skew(-1deg, 3deg)
  100%
    transform translateY(0px), skew(0, 0)
@keyframes shrink
  0%
    opacity 0
    transform scale(.9)
  80%
    transform scale(1)
  95%
    opacity 1
    transform scale(.995)
  100%
    transform scale(1)
//}}}

