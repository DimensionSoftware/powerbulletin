@import 'fluidity/css3'

// XXX default theme containing all color decoration & embellishments

highlight-color  = #ffeedd
highlight-color2 = #ff6803
mouse-intent = .2s
grid = 10px

//{{{ Style applied after body scrolls
body.has-scrolled
  header
    box-shadow 0 -1px 15px 4px #666
    border-bottom 1px solid #999
    border-top-width 1px
    height 30px
    transition all .2s ease-out
    .logo
      font-size 1.1em
      margin-top 4px
    .menu
      .row
        line-height 30px
        font-size 15px
        transition line-height .2s ease-out
        .submenu
          top -200px
    .search
      top 0!important
      right 0!important
      .query
        font-size .9em
        width 320px!important
        height 9px
        border-bottom-width 2px
  .left
    .user-profile
      left 0px!important
      transition left .5s ease-out
  .content
    .container
      .post
        margin grid
  footer
    background-color rgba(25,25,25,0.6)
    border-top 1px solid #888
    font-size .85em
    bottom -10px
    transition bottom .5s ease-out
    line-height 16px
//}}}

body
  font-family 'Open Sans Condensed', 'Ubuntu', 'Helvetica Neue'

//{{{ Header
header
  background-color rgba(0,0,0,0.75)
  border-top 2px solid #000
  color #ddd
  .container
    .logo
      display inline-block
      margin-top 20px
      width 200px
      vertical-align top
      text-shadow 0 0 1px #000
      font-style italic
      font-size 1.5em
      font-weight 200
      letter-spacing -2px
      position absolute
      left 0
      strong
        letter-spacing -2px
        font-weight 500
        padding-left 4px
        font-style normal
        color #ddd
  .menu
    padding 0
    > .row
      .title.active:hover
        background-image linear-gradient(bottom, #fff 10px, #fff0e0)
      .title.active
        color #333
        background-color #f3f3f3
        background-image linear-gradient(bottom, #fff 10px, #fff0e0)
        border-top 3px solid highlight-color2
        transition background-image 1s ease-out
    > .row
      .title:hover, .title.hover
        border-top 3px solid highlight-color2
        background-image linear-gradient(bottom, #fff 10px, #eee)
        color #000
        background-color #eee
    > .row
      .title
        display inline-block
        box-shadow 1px 0 0 #fafafa inset
        text-decoration none
        padding 0 19px
        border-top 3px solid #777
        color #777
        text-shadow 0 0 1px #fff
        background-color #eee
        background-image linear-gradient(bottom, #fff 10px, #ddd)
      .submenu
        box-shadow 0 2px 6px 0 #777
        border-right 1px solid #888
        padding 10px 15px
        border-bottom 2px solid #888
        border-bottom-right-radius 10px
        border-bottom-left-radius 10px
        background-color #000
        color #fff
        .row:last-child
          border-bottom 1px solid transparent
        .row
          border-bottom 1px solid #333
  .search
    top 3px!important
    right 0!important
    .query:hover, .query:focus
      //border none!important
      //box-shadow none!important
      box-shadow none
    #query.query
      box-shadow 0
      background #000
      color #fff
      background-color #000
      border 1px solid #000
    .query
      font-size 1.15em
      border-bottom-width 3px
      border-left 0px
      width 500px
      height 33px
//}}}
//{{{ Left side
section.left
  .user-profile
    background-color rgba(0,0,0,.15)
    left -160px!important
    border 1px solid #444
    padding grid - 3
    a
      display block
      color #eee
    .scroll-to-top
      position absolute
      right 5px
      bottom 0
      color #eee
      font-weight bold
      font-size .8em
//}}}
//{{{ Main Content
section.content
  .container
    padding 75px 20px 20px 20px
    //background-color rgba(255,255,255,.9)
    .forum
      margin-bottom grid + grid
      .header
        text-shadow 0 -1px 1px #000,0 -1px 0 #000
        display inline-block
        text-overflow ellipsis
        white-space nowrap
        overflow hidden
        margin 0 grid
        color #fff
        h4, span
          display inline-block
          margin 0 grid
          padding 0
      .post:hover
        background-color #fff
        border-radius 5px
        border 1px solid #aaa
        border-right 2px solid #aaa
        border-bottom 3px solid #aaa
        //box-shadow 0 0 6px 1px #444
        //transition box-shadow ease-out 1s .2s
      .post
        background-color rgba(255,255,255,.95)
        border 1px solid #ccc
        border-right 2px solid #ccc
        border-bottom 3px solid #ccc
        border-radius 3px
        .title
          margin 0
          padding grid
          .date
            margin-left 15px
            font-size .6em
            color #777
      .sub-post:hover
        border-bottom 1px solid #ddd
        color #000
        background-image linear-gradient(top, #f5f5f5, #fff)
        .signature
          background-color #eee
          color #444
      .sub-post
        padding 5px
        color #333
        margin-bottom grid
        border-bottom 1px solid #eee
        p
          margin grid+2
        .signature
          font-style italic
          border-top-left-radius 6px
          padding 0 5px
          color #666
          font-size .75em
          position absolute
          bottom 0
          right 0
          .username
            margin-right 5px
///}}}
//{{{ Footer
footer
  //background-image linear-gradient(top, #000, #333)
  background-color rgba(0,0,0,0.7)
  border-top 1px solid #333
  text-align center
  color #ddd
  h6
    font-size .9em
    letter-spacing 3px
    margin 3px
    font-weight 100
//}}}
//{{{ Controls
input[type="password"], select, textarea, input[type="text"]
  //box-shadow 0 0 9px #cba inset, 0 0 0 #888
  border-radius 3px
  color #888
  background-image linear-gradient(top, highlight-color 1px, #fff 10px)
  outline none
  margin-bottom 4px
  padding 8px
  border 1px solid #ddd
  border-right 1px solid #888
  border-bottom 1px solid #666
  font-size 18px
  vertical-align middle
  outline none
input[type="password"]:hover, select:hover, textarea:hover, input[type="text"]:hover
  color #555
  border-color #444
  border-bottom 1px solid #666
  border-right 1px solid #777
  box-shadow 0 0 1px highlight-color2 inset,1px 0 2px highlight-color
input[type="password"]:focus, input[type="password"]:focus, select:focus, textarea:focus, input[type="text"]:focus 
  color #000
  text-indent -1px
  background-color #fffcfc
  border 1px solid highlight-color2
  border-bottom 1px solid highlight-color2
  box-shadow -1px 0px 3px #aaa inset,0 0 2px orange,-1px 0px 0 #ff3800,1px 2px 0 #555,0 0 4px #faa,-1px -1px 2px yellow,0 0 3px yellow
  transition all .15s
  border-radius 4px
.button:hover, input[type="button"]:hover, input[type="submit"]:hover, button:hover
  background -moz-linear-gradient(center top , #FFce29, #F38437) repeat scroll 0 0 #FFFFFF
  background -webkit-gradient(linear, left top, left bottom, from(#FFce29), to(#F38437))
  background-color #FFca27
  border-color #777
  border-top 1px solid #fff467
  border-left 1px solid #fff467
  border-bottom 1px solid #444
  box-shadow 0 0 5px #888
  text-shadow 0px 1px 0 black,1px 1px 2px black
  transition all .1s
.button:active, button:active, input[type='submit']:active,input[type='button']:active,button:focus, input[type="submit"]:focus, input[type="button"]:focus
  border-top 1px solid #666
  border-left 1px solid #666
  box-shadow 0 0 2px #ccc, 1px 1px 2px #a33400 inset
  text-shadow 0px 1px 0 black,1px 1px 3px black
  border-bottom 1px solid highlight-color2
  border-right 1px solid highlight-color2
  transition all .2s
.button, input[type="button"], input[type="submit"], button
  outline none
  text-shadow 0 1px 0 #444,1px 1px 2px #444
  background -moz-linear-gradient(center top , #FFC447, #F38437) repeat scroll 0 0 #FFFFFF
  background -webkit-gradient(linear, left top, left bottom, from(#FFC447), to(#F38437))
  background-color #F38437
  border-radius 2px
  box-shadow 0px 0px 3px #C35407
  border 1px solid #999
  border-bottom 1px solid #777
  border-right  1px solid #aaa
  border-top 1px solid #ffe457
  border-left 1px solid #ffe457
  color #fff
  font-size 1.4em
  font-weight bold
  padding 3px 12px
//}}}
//{{{ jQuery UI
.ui-widget-overlay
  opacity .9!important
  background-color #fff!important
//}}}
