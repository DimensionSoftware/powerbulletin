@import 'fluidity/css3'
@import './app/stylus/animations'

// XXX default theme containing all color decoration & embellishments

// tint color is placed over the background among other images (translucent)
tint_color         = rgba(240,240,240,0.9)
// overlay is tint applied to the header & footer while scrolled
overlay_tint_color = rgba(255,255,255,0.9)
// these are the overlay colors for the most important - least important blocks of elements (opaque)
overlay_color_primary   = #fff
overlay_color_secondary = #fafafa

footer_height = 25px

body
  font-family 'Source Sans Pro', 'Open Sans Condensed', 'Ubuntu', 'Helvetica Neue', sans-serif

body.disabled::after
  content ''
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 99
  background radial-gradient(circle closest-corner at 50% 30%, rgba(0,0,0,0.1) 20%, rgba(0,0,0,0.5) 100%)!important

a
  color dark
  text-decoration none

// background of entire window (set on each forum)
#forum_background_buffer
  opacity 0
  z-index 1
#forum_background_buffer, #forum_background
  position fixed
  top -12px
  right -40px
  bottom -12px
  left -40px
  img
    width 100%
    min-height 100%

.photo
  background-color #fff
  box-shadow inset 0 1px 0 rgba(255,255,255,0.35),1px 1px 8px -2px light
  opacity .85

.online
  box-shadow 0 0 2px 0 dark, 1px 1px 10px -1px light
  border 1px solid #eee
  opacity 1!important
  transition box-shadow .3s ease-out, opacity .3s ease-out

.saved
  box-shadow 0 0 3px 0 light
  transition box-shadow .3s ease-in-out

.cancel:hover, .onclick-close:hover
  background-color #999
  opacity 1
  background radial-gradient(circle closest-corner at 45% 35%, #eee 45%, #aaa 100%)
  color red
  transition all .06s ease-out
.cancel, .onclick-close
  font-weight 600
  transform rotate(10deg)
  height 9px
  width 8px
  color #333
  background-color #aaa
  background radial-gradient(circle closest-corner at 45% 35%, #eee 40%, #bbb 100%)
  transition all .06s ease-out

//{{{ Header
header
  border-top 1px solid #aaa
  border-bottom 1px solid rgba(180,180,180,0.15)
  color #555
  background overlay_color_secondary
  &.expanded
    background-color overlay_tint_color
  .container
    .search
      .icon
        background radial-gradient(circle closest-corner at 50% 44%, light 55%, dark 100%)
        position absolute
        z-index 20
        top -6px
        left -10px
        height 22px
        width 22px
        border-radius 22px
        .s-search
          margin-left 2px
      .query
        box-shadow 1px 1px 3px light inset
        border 0
        background none
        border-radius 6px
        font-size 1.15em
        height 20px
        &:focus
          background-color overlay_color_primary
          margin-top -1px
          height 21px
          text-indent 13px
          border-radius 5px
          box-shadow 1px 1px 3px 1px light
          color #111
      .query::-webkit-input-placeholder
          color #ccc
      .query:-moz-placeholder
          color #ccc
      .query::-moz-placeholder
          color #ccc
      .query:-ms-input-placeholder
          color #ccc
      .query:hover
        color #444
      #query.query
        font-style italic
        letter-spacing 1px
        font-weight 400
    .tools
      .bubble, .bubble2
        box-shadow 1px 1px 3px light
        background-color overlay_color_primary
      .bubble
        box-shadow 1px 1px 2px light
      &::before
        background-color light
      .container
        menu
          background-color overlay_color_primary
          box-shadow 1px 1px 4px light
//}}}
//{{{ Left side
#left_content
  background-color overlay_color_primary
  &:hover::after
    width 1px
    background-color #fafafa
  &::after
    position absolute
    right 0
    top 1px
    content ''
    bottom 0
    background-color #f7f7f7
    width 1px
  .handle
    transition all .2s ease-out
    background-color #ddd
    background radial-gradient(circle closest-corner at 45% 35%, #e0e0e0 40%, #bbb 100%)
    border 1px solid #ddd
    color #888
    &:hover::before
      border-right 12px solid #fff
      left -3px
    &::before
      border-right 10px solid #fff
      transition all .1s ease-out
    &:hover
      background-color #ddd
      background radial-gradient(circle closest-corner at 45% 35%, #e0e0e0 40%, #a0a0a0 100%)
      color #444
  .title
    letter-spacing -1px
    font-size 1.1em
    margin (grid / 2) 0
  #paginator
    border-right 1px solid #ddd
    background-color rgba(200,200,200,0.1)
    border-top 2px solid #ccc
    border-bottom 1px solid #ccc
    &:hover
      border-right 1px solid #bbb
    .current:hover
      border-left 1px solid #ccc
      border-top 1px solid #ccc
      border-right 1px solid #888
      border-bottom 2px solid #aaa
      transition all .2s ease-out
    .current
      background-color #eee
      background-image linear-gradient(top, #eee 5%, #fefefe)
      border-top 1px solid #ddd
      border-left 1px solid #ddd
      border-bottom 2px solid #bbb
      border-right 1px solid #999
    a.page.next:hover::before
      border-top 9px solid #aaa
    a.page.previous:hover::before
      border-bottom 9px solid #aaa
    a.page.next::before
      border-top 9px solid #bbb
    a.page.previous::before
      border-bottom 9px solid #bbb

//}}}
//{{{ Main Content
.main-content
  a:hover
    color #000
    text-decoration underline
  a
    color #333
    text-decoration none

  #breadcrumb
    background-color overlay_color_secondary
    border-bottom 1px solid #ddd
    border-right 1px solid #ddd
    border-left 1px solid #ddd
    box-shadow 0 1px 0px 0px #aaa
    font-style italic
    color #ddd
    a, em
      color #666

  a.page
    color #eee

  a.page:hover, a.active
    background-color dark
    color #eee

  blockquote
    text-align left
    background #fafafa
    border-left 5px solid #f3f3f3
    margin 1.5em 10px
    padding .5em 10px
    font-size 1em
    font-style italic
    font-weight 100
    color #666
  
  blockquote::before
    color #ccc
    line-height .1em
    margin-right .25em
    vertical-align -.4em

///}}}
//{{{ Footer
footer.expanded
  background-color #fafafa
  box-shadow 0 3px 30px 0 light!important
  &::before
    position fixed
    left 0
    right 0
    bottom 0
    top 0
footer
  opacity 0
  box-shadow 0 0 4px -1px light
  text-align center
  color #777
  &::before
    //border-top 1px solid #eee
    top 0
    left 0
    right 0
    content ''
    position absolute
  &:hover
    color #666
    background-image linear-gradient(to top, #f7f7f7 15px, rgba(255,255,255,1))
    box-shadow 0 0 3px 0 light
    transition all .3s ease-out
  h6
    cursor default
    font-size .9em
    letter-spacing 3px
    margin 0
    font-weight 100
//}}}

//{{{ Scrolled <body>
body.scrolled
  header
    background-color overlay_tint_color
    box-shadow 0 -1px 12px 2px #eee
    border-bottom 1px solid #fff
    height -2px
    transition height .1s ease-out
    &::after
      border-bottom 1px solid #ddd
      box-shadow 0 2px 6px 0px #ddd
      bottom -1px
      left 0
      right 0
      height 1px
      content ''
      position absolute
    .container
      .search
        .query
          border-bottom-width 1px
        .query::-webkit-input-placeholder
            color #bbb
        .query:-moz-placeholder
            color #bbb
        .query::-moz-placeholder
            color #bbb
        .query:-ms-input-placeholder
            color #bbb
  #left_content::after
    bottom (footer_height - 4)
  footer
    background-image linear-gradient(to top, overlay_tint_color 26px, rgba(255,255,255,.35))
    &:hover
      box-shadow 0 0 4px 0 light
      background-image linear-gradient(to top, #f7f7f7 10px, rgba(255,255,255,1))
//}}}

//{{{ Fancybox
.fadein
  animation-name fadein
  animation-duration .4s
.slide
  animation-name slide
  animation-duration .06s
.post-animate-in
  animation-name post-animate-in
  animation-duration .3s
.shake
  animation-name shake
  animation-duration .8s
.fancybox-overlay
  background radial-gradient(circle closest-corner at 50% 30%, rgba(0,0,0,0.5) 20%, rgba(0,0,0,0.95) 100%)!important
  overflow none
  &::after
    position absolute
    bottom (grid*2)
    right (grid*2)
    height 24px
    width 228px
    content ''
    background-image url(cache-url + '/images/secure.png')
  // part of black theme
  // TODO move this and the rest into black.styl
  .fancybox-wrap
    .fancybox-skin
      h1, h2, h3
        color #eee
.fancybox-overlay .fancybox-wrap .fancybox-skin
  border-radius 5px
  background-image linear-gradient(to top, #111 10px, #333 100%)
  border 1px solid #111
  transition opacity .3s ease-out 3s
//}}}
//{{{ jQuery UI
.ui-widget-overlay
  opacity .9!important
  background-color #fff!important
//}}}
