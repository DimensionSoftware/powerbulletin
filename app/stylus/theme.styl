@import 'fluidity/css3'
@import './app/stylus/animations'

// XXX default theme containing all color decoration & embellishments

highlight-color             = #ffeedd
highlight-color2            = #ff6803
highlight-color-translucent = rgba(255,100,50,.3)

mouse-intent = .2s
footer-height = 25px

@import './app/stylus/mutants_theme'

body
  font-family 'Open Sans Condensed', 'Ubuntu', 'Helvetica Neue'

a.mutant:hover
  animation-name tiny-grow
  animation-duration .1s

.photo
  background-color #fff
  border-top-right-radius 2px

.online
  box-shadow 0 0 4px 1px green
  transition box-shadow .3s ease-out

//{{{ Header
.logo
  a
    font-style italic
    color #bbb
    strong
      font-style normal
      color #ccc
header
  //background-color rgba(255,255,255,0.1)
  background-color #fff
  border-top 2px solid #000
  border-bottom 1px solid rgba(200,200,200,.4)
  color #555
  .container
    .menu
      > .row
        .title.active:hover
          background-image linear-gradient(bottom, #fff 43px, #ffe0c0)
          color #000
        .title.active
          //animation-name grow
          //animation-duration .25s
          position relative!important
          z-index 50!important
          color #333
          background-color #f3f3f3
          background-image linear-gradient(bottom, #fff 43px, #ffe0c0)
          border-top 3px solid highlight-color2
      > .row
        .title:hover, .title.hover
          border-top 3px solid highlight-color2
          background-image linear-gradient(bottom, #fff 25px, #fed)
          color #000
          background-color #eee
          animation-name tiny-grow!important
          animation-duration .1s
          transition border-top .5s, background-color .3s, color .4s
      > .row
        .title
          box-shadow 1px 0 0 #f3f3f3 inset, -1px 0 0 #ddd inset,0 1px 0 0 #ccc
          text-decoration none
          border-top 3px solid #222
          color #777
          text-shadow 0 0 1px #fff
          background-color #eee
          background-image linear-gradient(bottom, #fff 45px, #fed)
        .submenu
          box-shadow 0 2px 6px 0 #777
          border-right 1px solid #888
          border-bottom 2px solid #888
          border-top 1px solid #bbb
          border-bottom-right-radius 10px
          border-bottom-left-radius 10px
          background-color #fff
          color #333
          .row:last-child
            border-bottom 1px solid transparent
            border-bottom-right-radius 8px
            border-bottom-left-radius 8px
          .row:last-child:hover
            border-bottom 1px solid highlight-color2
          .row.active, .row:hover
            background-image linear-gradient(bottom, #fff 10px, #fed)
            border-bottom 1px solid #ddd
            border-left 1px solid highlight-color2
            border-right 1px solid highlight-color2
            a
              color #000
              animation-name 0
              animation-duration 0
          .row
            line-height (grid*4)
            border-left 1px solid transparent
            border-bottom 1px solid #f0f0f0
            a
              color #444
              text-decoration none
              white-space nowrap
              text-overflow ellipsis
    .search::before
      border-left 7px solid highlight-color2
    .search
      top 5px!important
      right 6px!important
      .query::-webkit-input-placeholder
          color #777
      .query:-moz-placeholder
          color #777
      .query::-moz-placeholder
          color #777
      .query:-ms-input-placeholder
          color #777
      .query:hover, .query:focus
        //border none!important
        //box-shadow none!important
        box-shadow none
      #query.query
        box-shadow 0
        //color #fff
        color #000
        font-style italic
        border-left none
        text-align right
        padding-right 15px
        background transparent
        border none
      .query
        font-size 1.15em
        border-bottom-width 3px
        border-left 0px
        width 500px
        height 20px
//}}}
//{{{ Left side
#left_content:hover::after
  border-right 1px solid #333
  width 1px
  background-color #999
#left_content::after
  position absolute
  right 0
  top 1px
  content ''
  bottom 0
  border-right 1px solid #666
#left_content
  background-color rgba(100,100,100,0.7)
  .handle:hover
    background-color #777
    color #fff
    border-color #eee
    transition border-color .2s ease-out
  .handle
    //box-shadow 0 0 1px 1px #999
    background-color #888
    border 5px solid #fff
    color #eee
  .title
    letter-spacing -1px
    font-size 1.1em
    margin (grid / 2) 0
    text-shadow 0 -1px 0 #222
//}}}
//{{{ Main Content
#main_content
  a:hover
    color #000
    text-decoration underline
  a
    color #333
    text-decoration none

  #breadcrumb
    background-color #fafafa
    border-bottom 1px solid #ddd
    border-right 1px solid #ddd
    border-left 1px solid #ddd
    box-shadow 0 1px 0px 0px #aaa
    font-style italic
    color #ddd
    a, em
      color #555

  .forum.light
    .header
      color #777
    .header::before
      position absolute
      opacity 0

  .forum:first-child
    .header::before
      top 50px
  .forum
    background-color rgba(255,255,255,.94)
    .header
      font-weight 100
      font-size 2.1em
      line-height 2em
    .post
      .profile
        background-color #fafafa
        border 1px solid #eee
      .actions a
        color highlight-color2
      .post-edit
        .sceditor-container
          border-top-left-radius 0
          .sceditor-toolbar
            background-color #fafafa
            border-bottom 1px solid #eee
        .title
          border-bottom-left-radius 0
          border-bottom-right-radius 0
    .user
      font-weight bold

#paginator
  border 1px solid black
  background-color rgba(100, 100, 100, 0.901961)

  a.page
    color #eee

  a.page:hover, a.active
    background-color highlight-color2
    color #eee
///}}}
//{{{ Footer
footer::before
  border-top 1px solid #bbb
  box-shadow 4px 0 6px 1px #ddd
  top 0
  left 0
  right 0
  height 1px
  content ''
  position absolute
footer
  opacity 0
  color #ddd
  background-color #f7f7f7
  text-align center
  color #777
  h6
    font-size .9em
    letter-spacing 3px
    margin 3px
    font-weight 100
//}}}

//{{{ Scrolled <body>
body.scrolled
  header::after
    border-bottom 1px solid #aaa
    box-shadow 0 2px 8px 2px #ccc
    bottom -3px
    left 0
    right 0
    height 1px
    content ''
    position absolute
  header
    background-color rgba(255,255,255,0.95)
    box-shadow 0 -1px 12px 2px #eee
    border-bottom 1px solid #fff
    transition height .2s ease-out, background-color .5s ease-out
    .container
      menu.menu
        > .row
          a.title.active:hover
            background-image linear-gradient(bottom, #fff 22px, #ffe0c0)
          a.title.active
            background-image linear-gradient(bottom, #fff 22px, #ffe0c0)
          a.title:hover, a.title.hover
            background-image linear-gradient(bottom, #fff 22px, #fed)
          a.title
            background-image linear-gradient(bottom, #fff 25px, #fed)
        .row
          transition line-height .2s ease-out
          .submenu
            .row
              line-height (grid*3)
      .search
        .query
          border-bottom-width 2px
        .query::-webkit-input-placeholder
            color #bbb
        .query:-moz-placeholder
            color #bbb
        .query::-moz-placeholder
            color #bbb
        .query:-ms-input-placeholder
            color #bbb
  #left_content::after
    bottom (footer-height - 4)
  footer
    opacity 1
    transition bottom .4s ease-out
//}}}
//{{{ Expanded header (advanced searching)
body.searching header
  background-color rgba(255,255,255,0.85)!important
  border-bottom 1px solid #fff
  .close:hover
    font-weight 500
    color #555
  .close
    font-weight 200
    font-size 1.3em
    transform rotate(10deg)
    padding 0
    height 9px
    width 8px
    line-height 7px
    border-radius 25px
    color #777
    text-indent -2px
  .search
    #query.query
      text-align left
  .advanced
    font-weight 100
    font-size .9em
    label:hover
      color #222
    .check
      margin 0 8px
    label
      margin-right 10px
  .menu
    .row
      transition line-height .2s ease-out!important
    > .row
      a.title.active:hover
        background-image linear-gradient(bottom, #fff 23px, #ffe0c0)
      a.title.active
        background-image linear-gradient(bottom, #fff 23px, #ffe0c0)
      a.title:hover, a.title.hover
        background-image linear-gradient(bottom, #fff 15px, #fed)
      a.title
        background-image linear-gradient(bottom, #fff 20px, #fed)
//}}}

//{{{ Login
#auth
  .login
    .msg.onclick-show-register
      opacity 1
      height 30px
      h3
        float right
        margin-top grid
        text-shadow none
    .msg
      overflow hidden
      display block
      height 0
      opacity 0
      h3
        text-shadow 0 0 1px highlight-color2
  h3
    font-weight 200
    font-size 15px
    color #777
  fieldset
    border-color #eee
  input[name="password"]:focus
    border-top-left-radius 3px
    border-top-right-radius 3px
  input[name="username"]:focus
    border-bottom-left-radius 3px
    border-bottom-right-radius 3px
  input[name="username"]
    border-bottom-left-radius 0
    border-bottom-right-radius 0
    padding-bottom grid
  input[name="password"]
    padding-top grid
    margin-top -8px
    border-top-left-radius 0
    border-top-right-radius 0
  input.register-email
    padding-left 9px!important
    width 292px!important
    display block
  input.validation-error
    border-left 2px solid #f42
///}}}
//{{{ Input Controls
input[type="password"], select, textarea, input[type="text"]
  //box-shadow 0 0 9px #cba inset, 0 0 0 #888
  border-radius 3px
  color #777
  background-image linear-gradient(top, highlight-color 1px, #fff 10px)
  outline none
  margin-bottom 4px
  padding 8px
  border 1px solid #ddd
  border-right 1px solid #999
  border-bottom 1px solid #888
  font-size 18px
  vertical-align middle
  outline none
input[type="password"]:hover, select:hover, textarea:hover, input[type="text"]:hover
  color #555
  border-color #ddd
  border-bottom 1px solid #888
  border-right 1px solid #999
  box-shadow 1px 1px 1px highlight-color-translucent,1px 0 2px highlight-color
input[type="password"]:focus, input[type="password"]:focus, select:focus, textarea:focus, input[type="text"]:focus 
  color #000
  position relative
  z-index 10
  background-color #fffcfc
  border 1px solid highlight-color2
  border-bottom 1px solid highlight-color2
  border-top 1px solid #fca
  border-left 1px solid #eb9
  box-shadow -1px 0px 2px #aaa inset,0 0 1px highlight-color-translucent,1px 1px 0 #666
  transition all .15s
  border-radius 4px
.button:hover::before
  background-color rgba(100,100,100,.2)
  border-radius 6px
.button:hover, input[type="button"]:hover, input[type="submit"]:hover, button:hover
  background -moz-linear-gradient(center top , #ffce29, #f38437) repeat scroll 0 0 #ffffff
  background -webkit-gradient(linear, left top, left bottom, from(#ffce29), to(#f38437))
  //text-indent -2px
  background-color #ffca27
  border-color #555
  border-top 1px solid #fff467
  border-left 1px solid #fff467
  border-bottom 1px solid #444
  box-shadow 0 0 5px #bbb,0 1px 5px 0 #c35407
  text-shadow 0px 1px 0 black,1px 1px 0 black
  transition box-shadow .1s
.button:active::before
  background-color rgba(0,0,0,.15)
  border-radius 5px
  left -4px
  right -4px
  bottom -4px
  top -3px
.button:active, button:active, input[type='submit']:active,input[type='button']:active,button:focus, input[type="submit"]:focus, input[type="button"]:focus
  //text-indent 2px
  border-top 1px solid #666
  margin-right (grid/2 - 1)
  text-indent 1px
  border-left 1px solid #666
  box-shadow 0 0 1px #777, 1px 1px 1px #a33400 inset,0 1px 3px #aaa
  text-shadow 1px 1px 1px black,0 1px 1px black
  border-bottom 1px solid highlight-color2
  border-right 1px solid highlight-color2
  transition box-shadow .3s ease-out
  border-radius 2px
.button::before
  position absolute
  content ''
  background-color rgba(0,0,0,.1)
  left -4px
  top -4px
  right -4px
  bottom -4px
  z-index -1
  border-radius 4px
.button, input[type="button"], input[type="submit"], button
  outline none
  white-space nowrap
  position relative
  text-shadow 0 1px 0 #444,1px 1px 0 #444
  background -moz-linear-gradient(center top , #FFC447, #F38437) repeat scroll 0 0 #FFFFFF
  letter-spacing 1px
  background -webkit-gradient(linear, left top, left bottom, from(#FFC447), to(#F38437))
  background-color #F38437
  box-shadow 0px 0px 3px #C35407
  border 1px solid #555
  border-top 1px solid #ffe457
  border-left 1px solid #ffe457
  color #fff
  font-size 1.1em
  font-weight 600
  padding 6px 15px
  margin-right (grid/2)
  text-align center
//}}}
//{{{ Fancybox
.fadein
  animation-name fadein
  animation-duration .4s
.slide
  animation-name slide
  animation-duration .2s
.shake
  animation-name shake
  animation-duration .7s
.fancybox-overlay
  background-color rgba(255,255,255,.9)!important
  background none
  .fancybox-wrap
    .fancybox-skin
      box-shadow 0px 1px 12px 2px rgba(0, 0, 0, 0.3)!important
//}}}
//{{{ jQuery UI
.ui-widget-overlay
  opacity .9!important
  background-color #fff!important
//}}}

