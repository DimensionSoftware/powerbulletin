@import 'fluidity/css3'
@import './app/stylus/animations'

// XXX default theme containing all color decoration & embellishments

highlight-color             = #ffeedd
highlight-color2            = #ff6803
highlight-color-translucent = rgba(255,100,50,.3)

footer-height = 25px

@import './app/stylus/mutants-theme'

body
  font-family 'Source Sans Pro', 'Open Sans Condensed', 'Ubuntu', 'Helvetica Neue', sans-serif

a
  color highlight-color2
  text-decoration none
a.mutant:hover
  animation-name tiny-grow
  animation-duration .1s

.photo
  background-color #fff
  //border-top-right-radius 2px
  border-radius 3px
  box-shadow inset 0 1px 0 rgba(255,255,255,0.35),0 0 1px rgba(0,0,0,0.75)

.online
  box-shadow 0 0 3px 1px rgb(50,150,255)
  transition box-shadow .3s ease-out

.saved
  box-shadow 0 0 5px rgba(50, 150, 50, .8), 0 1px 1px rgba(40, 140, 40, .9)
  transition box-shadow .3s ease-in-out

.close:hover
  background-color #666
  color #fff
  transition all .1s ease-out
.close
  font-weight 600
  transform rotate(10deg)
  height 10px
  width 10px
  color #fafafa
  background-color #777

//{{{ Header
.logo
  a
    font-style italic
    color #bbb
    strong
      font-style normal
      color #ccc
header
  //background-color rgba(255,255,255,0.1)
  background-color #fff
  border-top 2px solid #aaa
  border-bottom 1px solid rgba(180,180,180,0.4)
  color #555
  .container
    .menu
      > .row
        .title.active:hover
          color #000
          border-top 3px solid highlight-color2
        .title.active
          position relative!important
          z-index 75!important
          color #333
          background-color #fafafa
          border-top 3px solid highlight-color2
      > .row
        .title:hover, .title.hover
          border-top 3px solid #777
          //background-image linear-gradient(bottom, #fff 25px, #fed)
          color #000
          background-color #fdfdfd
          animation-name tiny-grow!important
          animation-duration .1s
          transition border-top .4s, background-color .3s, color .4s
      > .row
        .title
          text-decoration none
          border-top 3px solid #aaa
          color #666
          font-weight 600
          letter-spacing -1px
          font-size .9em
          text-shadow 0 0 1px #fff
          background-color #fff
        .submenu
          box-shadow 0 2px 4px 0px #ccc
          border-right 1px solid #aaa
          border-bottom 1px solid #aaa
          border-top 1px solid #bbb
          border-bottom-right-radius 5px
          border-bottom-left-radius 5px
          background-color #fff
          color #333
          .row:hover
            font-size 15px
            transform scale(1.05)
            a
              color #000
              //animation-name none
          .row.active
            font-weight bold
            border-bottom 1px solid #eee
            border-radius 5px
            font-size 15px
            text-shadow 0 1px 0 #fff
            a
              color #000
              animation-name none
          .row
            line-height (grid*4)
            border-right 1px solid transparent
            border-left 1px solid transparent
            border-bottom 1px solid #fafafa
            a
              color #444
              text-decoration none
              white-space nowrap
              text-overflow ellipsis
    .search::before
      border-left 7px solid highlight-color2
    .search
      top 5px!important
      right 6px!important
      .query::-webkit-input-placeholder
          color #777
      .query:-moz-placeholder
          color #777
      .query::-moz-placeholder
          color #777
      .query:-ms-input-placeholder
          color #777
      .query:hover, .query:focus
        //border none!important
        //box-shadow none!important
        box-shadow none
      #query.query
        box-shadow 0
        //color #fff
        color #000
        font-style italic
        border-left none
        letter-spacing 1px
        text-align right
        background transparent
        font-weight 200
        border none
      .query
        font-size 1.15em
        border-bottom-width 3px
        border-left 0px
        height 20px
//}}}
//{{{ Left side
#left_content:hover::after
  width 1px
  background-color #fafafa
#left_content::after
  position absolute
  right 0
  top 1px
  content ''
  bottom 0
  background-color #f7f7f7
  width 1px
#left_content
  background-color rgba(150,150,150,0.12)
  .handle:hover::before
    border-right 14px solid #bbb
    left -6px
  .handle::before
    border-right 12px solid #aaa
    transition all .2s ease-out
  .handle:hover
    background-color #eee
    color #444
    border-color #eee
    box-shadow 0 0 3px 1px #fff
  .handle
    //box-shadow 0 0 1px 1px #999
    transition all .2s ease-out
    background-color #f6f6f6
    border 3px solid #fff
    color #888
  .title
    letter-spacing -1px
    font-size 1.1em
    margin (grid / 2) 0
  #paginator:hover
    border-right 1px solid #bbb
  #paginator
    border-right 1px solid #ddd
    background-color rgba(100,100,100,0.1)
    border-top 2px solid #ccc
    border-bottom 2px solid #ccc
    .current:hover
      color #fff
      text-shadow 1px 1px 0 #555
      border-left 1px solid #aaa
      border-top 1px solid #aaa
      border-right 1px solid #888
      border-bottom 1px solid #aaa
    .current
      background-color #ddd
      color #fafafa
      text-shadow 1px 1px 0 #777
      border-top 1px solid #bbb
      border-left 1px solid #bbb
      border-bottom 1px solid #bbb
      border-right 1px solid #999
      font-weight bold
    a.page.next:hover::before
      border-top 9px solid #aaa
    a.page.previous:hover::before
      border-bottom 9px solid #aaa
    a.page.next::before
      border-top 9px solid #bbb
    a.page.previous::before
      border-bottom 9px solid #bbb

//}}}
//{{{ Main Content
#main_content
  a:hover
    color #000
    text-decoration underline
  a
    color #333
    text-decoration none

  #breadcrumb
    background-color #f5f5f5
    border-bottom 1px solid #ddd
    border-right 1px solid #ddd
    border-left 1px solid #ddd
    box-shadow 0 1px 0px 0px #aaa
    font-style italic
    color #ddd
    a, em
      color #666

  a.page
    color #eee

  a.page:hover, a.active
    background-color highlight-color2
    color #eee

  blockquote
    text-align left
    background #fafafa
    border-left 5px solid #f3f3f3
    margin 1.5em 10px
    padding .5em 10px
    font-size 1em
    font-style italic
    font-weight 100
    color #666
  
  blockquote::before
    color #ccc
    line-height .1em
    margin-right .25em
    vertical-align -.4em

///}}}
//{{{ Footer
footer::before
  border-top 1px solid #ccc
  box-shadow 0 -2px 9px 0 #777
  top 0
  left 0
  right 0
  content ''
  position absolute
footer:hover::before
  border-top 1px solid #ccc
  box-shadow 0 -2px 11px 0 #444
  transition box-shadow .1s ease-out
footer:hover
  color #666
footer
  opacity 0
  background-color #f7f7f7
  text-align center
  color #777
  h6
    font-size .9em
    letter-spacing 3px
    margin 3px
    font-weight 100
//}}}

//{{{ Scrolled <body>
body.scrolled
  header::after
    border-bottom 1px solid #ccc
    box-shadow 0 2px 6px 0px #ddd
    bottom -3px
    left 0
    right 0
    height 1px
    content ''
    position absolute
  header
    background-color rgba(255,255,255,0.95)
    box-shadow 0 -1px 12px 2px #eee
    border-bottom 1px solid #fff
    transition height .2s ease-out, background-color .5s ease-out
    .container
      menu.menu
        > .row
          a.title.active:hover
            background-image linear-gradient(bottom, #fff 22px, #eaeaea)
          a.title.active
            background-image linear-gradient(bottom, #fff 22px, #eaeaea)
          a.title:hover, a.title.hover
            background-image linear-gradient(bottom, #fff 22px, #fafafa)
          a.title
            background-image linear-gradient(bottom, #fff 25px, #fafafa)
        .row
          transition line-height .2s ease-out
          .submenu
            .row
              line-height (grid*3)
      .search
        .query
          border-bottom-width 2px
        .query::-webkit-input-placeholder
            color #bbb
        .query:-moz-placeholder
            color #bbb
        .query::-moz-placeholder
            color #bbb
        .query:-ms-input-placeholder
            color #bbb
  #left_content::after
    bottom (footer-height - 4)
  footer
    opacity 1
    transition bottom .4s ease-out
//}}}

//{{{ Login
#auth
  .login
    .msg.onclick-show-register
      opacity 1
      height 30px
      h3:hover
        color #222
        text-shadow 0 0 1px highlight-color2
        transition all .1s ease-out
      h3
        position relative
        float right
        margin-top grid
        text-shadow none
      h3::before
        display none
    .msg
      overflow hidden
      display block
      height 0
      opacity 0
      h3
        text-shadow 0 0 1px highlight-color2
  .msg.onclick-show-login
    h3:hover
      color #444
  h3
    font-weight 200
    position relative
    font-size 15px
    color #777
  .social h3::before
    display none
  h3:hover::before
    border-right 10px solid #aaa
    left -20px
    transition all .2s ease-out
  h3::before
    display block
    position absolute
    border-right 9px solid #ddd
    border-left 5px solid transparent
    border-top 5px solid transparent
    border-bottom 5px solid transparent
    content ''
    left -17px
    top 7px
  fieldset
    padding-top 40px
    border-color #f0f0f0
    border-radius 2px
    background-color #fff
  input[name="password"]:focus
    border-top-left-radius 3px
    border-top-right-radius 3px
  input[name="username"]:focus
    border-bottom-left-radius 3px
    border-bottom-right-radius 3px
  input[name="username"]
    border-bottom-left-radius 0
    border-bottom-right-radius 0
    padding-bottom grid
  input[name="password"]
    padding-top grid
    margin-top -8px
    border-top-left-radius 0
    border-top-right-radius 0
  input.register-email
    padding-left 9px!important
    display block
  input.validation-error
    border-left 2px solid #f42
///}}}
//{{{ Input Controls
select
  height 40px
input[type="password"], select, textarea, input[type="text"]
  //box-shadow 0 0 9px #cba inset, 0 0 0 #888
  border-radius 3px
  color #777
  background-image linear-gradient(top, highlight-color 1px, #fff 10px)
  outline none
  margin-bottom 4px
  padding 8px
  border 1px solid #ddd
  border-right 1px solid #999
  border-bottom 1px solid #888
  font-size 18px
  vertical-align middle
  outline none
input[type="password"]:hover, select:hover, textarea:hover, input[type="text"]:hover
  color #555
  border-color #ddd
  border-bottom 1px solid #888
  border-right 1px solid #999
  box-shadow 1px 1px 1px highlight-color-translucent,1px 0 2px highlight-color
input[type="password"]:focus, input[type="password"]:focus, select:focus, textarea:focus, input[type="text"]:focus 
  color #000
  position relative
  letter-spacing 1px
  z-index 10
  background-color #fffcfc
  border 1px solid highlight-color2
  border-bottom 1px solid highlight-color2
  border-top 1px solid #fca
  border-left 1px solid #eb9
  box-shadow -1px 0px 2px #aaa inset,0 0 1px highlight-color-translucent,1px 1px 0 #666
  transition all .15s
  border-radius 4px
textarea:focus
  letter-spacing 0
.button:hover::before
  background-color rgba(100,100,100,.2)
  border-radius 6px
.button:hover, input[type="button"]:hover, input[type="submit"]:hover, button:hover
  background -moz-linear-gradient(center top , #ffce29, #f38437) repeat scroll 0 0 #ffffff
  background -webkit-gradient(linear, left top, left bottom, from(#ffce29), to(#f38437))
  //text-indent -2px
  background-color #ffca27
  border-color #777
  border-top 1px solid #fff467
  border-left 1px solid #fff467
  border-bottom 1px solid #555
  box-shadow 0 0 5px #bbb,0 1px 5px 0 #c35407
  text-shadow 0px 1px 0 black,1px 1px 0 black
  transition box-shadow .1s
.button:active::before
  background-color rgba(0,0,0,.15)
  border-radius 5px
  left -4px
  right -4px
  bottom -4px
  top -3px
.button:active, button:active, input[type='submit']:active,input[type='button']:active,button:focus, input[type="submit"]:focus, input[type="button"]:focus
  //text-indent 2px
  border-top 1px solid #666
  margin-right (grid/2 - 1)
  text-indent 1px
  border-left 1px solid #666
  box-shadow 0 0 1px #777, 1px 1px 1px #a33400 inset,0 1px 3px #aaa
  text-shadow 1px 1px 1px black,0 1px 1px black
  border-bottom 1px solid highlight-color2
  border-right 1px solid highlight-color2
  transition box-shadow .3s ease-out
  border-radius 2px
.button::before
  position absolute
  content ''
  background-color rgba(0,0,0,.1)
  left -4px
  top -4px
  right -4px
  bottom -4px
  z-index -1
  border-radius 4px
.button, input[type="button"], input[type="submit"], button
  outline none
  white-space nowrap
  position relative
  text-shadow 0 1px 0 #444,1px 1px 0 #444
  background -moz-linear-gradient(center top , #FFC447, #F38437) repeat scroll 0 0 #FFFFFF
  letter-spacing 1px
  background -webkit-gradient(linear, left top, left bottom, from(#FFC447), to(#F38437))
  background-color #F38437
  box-shadow 0px 0px 3px #C35407
  border 1px solid #666
  border-top 1px solid #ffe457
  border-left 1px solid #ffe457
  border-bottom-color #444
  color #fff
  font-size 1.1em
  font-weight 600
  padding 6px 15px
  margin-right (grid/2)
  text-align center
//}}}
//{{{ Fancybox
.fadein
  animation-name fadein
  animation-duration .4s
.slide
  animation-name slide
  animation-duration .1s
.post-animate-in
  animation-name post-animate-in
  animation-duration .8s
.shake
  animation-name shake
  animation-duration .8s
.fancybox-overlay
  //background none!important
  //background-color rgba(255,255,255,.9)!important
  overflow none
  .fancybox-wrap
    .fancybox-skin
      box-shadow 0px 1px 12px 2px rgba(0, 0, 0, 0.3)!important
    .fancybox-skin, .fancybox-inner
      background-color #f9f9f9
      background-image linear-gradient(to top, #fff 1px, #f5f5f5)
//}}}
//{{{ Tooltip
tooltip-border-color = rgba(100, 100, 100, 1)
.tooltip
  color #fff
  background-color tooltip-border-color
  border 2px solid tooltip-border-color
  border-radius 2px
  opacity 0
  box-shadow 0 1px 5px tooltip-border-color
  text-shadow 0 -1px 0 #000
.tooltip::after
  border-top 10px solid tooltip-border-color
.tooltip.right::after
  border-right 10px solid tooltip-border-color
//}}}
//{{{ jQuery UI
.ui-widget-overlay
  opacity .9!important
  background-color #fff!important
//}}}
