body
  font-family 'Open Sans Condensed', 'Ubuntu', 'Helvetica Neue'

//{{{ Header
body.expanded header
  background-color rgba(0,0,0,0.85)!important
  border-bottom 1px solid #fff
body.expanded header:after
  color #bbb
header
  background-color rgba(0,0,0,0.2)
  border-top 2px solid #000
  color #ddd
  .container
    .logo
      display inline-block
      margin-top 13px
      width 200px
      vertical-align top
      //text-shadow 0 0 1px #000
      font-style italic
      color #777
      font-size 1.5em
      font-weight 200
      letter-spacing -2px
      position absolute
      left 0
      strong
        letter-spacing -1px
        font-weight 500
        padding-left 4px
        font-style normal
        color #888
  .menu
    padding 0
    > .row
      .title.active:hover
        background-image linear-gradient(bottom, #fff 10px, #fff0e0)
      .title.active
        animation-name grow
        animation-duration .22s
        position relative!important
        z-index 50!important
        color #333
        background-color #f3f3f3
        background-image linear-gradient(bottom, #fff 10px, #fff0e0)
        border-top 3px solid highlight-color2
        transition background-image 1s ease-out
    > .row
      .title:hover, .title.hover
        border-top 3px solid highlight-color2
        background-image linear-gradient(bottom, #fff 10px, #eee)
        color #000
        background-color #eee
    > .row
      .title
        display inline-block
        box-shadow 1px 0 0 #fafafa inset
        text-decoration none
        padding 0 19px
        border-top 3px solid #777
        color #777
        text-shadow 0 0 1px #fff
        background-color #eee
        background-image linear-gradient(bottom, #fff 10px, #ddd)
      .submenu
        box-shadow 0 2px 6px 0 #777
        border-right 1px solid #888
        padding 10px 15px
        border-bottom 2px solid #888
        border-bottom-right-radius 10px
        border-bottom-left-radius 10px
        background-color #000
        color #fff
        .row:last-child
          border-bottom 1px solid transparent
        .row
          border-bottom 1px solid #333
  .search
    top 5px!important
    right 0!important
    .query:hover, .query:focus
      //border none!important
      //box-shadow none!important
      box-shadow none
    #query.query
      box-shadow 0
      color #fff
      font-style italic
      border-left none
      background rgba(0,0,0,0.2)
      border 1px solid #000
    .query
      font-size 1.15em
      border-bottom-width 3px
      border-left 0px
      width 500px
      height 20px
//}}}
//{{{ Left side
section.left
  .user-profile
    border-bottom-right-radius 5px
    border-top-right-radius 5px
    background-color rgba(0,0,0,.4)
    left -160px!important
    border 1px solid #444
    padding 2px
    .photo
      background-color #fff
      border-top-right-radius 2px
    a
      display block
    .scroll-to-top
      position absolute
      right 5px
      bottom 0
      color #ccc
      font-weight 100
      font-size .8em
//}}}
//{{{ Main Content
section.content
  .container
    padding 60px 20px 20px 20px
    //background-color rgba(255,255,255,.9)
    .forum
      margin-bottom (grid * 2)
      .header
        text-shadow 0 -1px 1px #000,0 -1px 0 #000
        display none
        text-overflow ellipsis
        white-space nowrap
        overflow hidden
        margin 0 grid
        color #fff
        h4, span
          display inline-block
          margin 0 grid
          padding 1px 6px
          background-color rgba(0,0,0,.08)
          border-radius 4px
      .container
        padding-bottom (grid * 2)!important
        border-bottom 1px dotted #111
        .post:hover
          background-color rgba(255,255,255,.93)
          border-radius 5px
          border 1px solid #aaa
          border-right 2px solid #aaa
          border-bottom 3px solid #aaa
          //box-shadow 0 0 6px 1px #444
          //transition box-shadow ease-out 1s .2s
        .post
          background-color rgba(255,255,255,.9)
          border 1px solid #ccc
          border-right 2px solid #ccc
          border-bottom 3px solid #bbb
          border-radius 3px
          > .body
            padding 0 0 grid grid
            margin 0
            color #111
            background-color #fff
          .title
            margin 0
            padding grid 0 0 grid
            border-top-left-radius 5px
            border-top-right-radius 5px
            background-color #fff
            .date
              position absolute
              font-size .6em
              color #777
              right grid
              top (grid / 2)
        .sub-post:hover
          border-bottom 1px solid #ddd
          color #000
          //background-image linear-gradient(top, #f0f0f0, #f9f9f9)
          .signature
            background-color #eee
            color #444
        .sub-post
          border-left 2px solid #eee
          padding (grid / 2)
          //background-color #f9f9f9
          color #333
          border-bottom 1px solid #eee
          p
            font-size .8em
            padding (grid/2) 0 (grid) (grid/2)
            margin 0
          .signature
            font-style italic
            border-top-left-radius 6px
            padding 0 grid
            color #888
            font-size .7em
            position absolute
            bottom 0
            right 0
            .username
              margin-right 5px
///}}}
//{{{ Footer
footer
  opacity 0
  color #ddd
  //background-image linear-gradient(top, #000, #333)
  background-color rgba(0,0,0,0.1)
  text-align center
  color #999
  h6
    font-size .9em
    letter-spacing 3px
    margin 3px
    font-weight 100
//}}}
//{{{ Controls
input[type="password"], select, textarea, input[type="text"]
  //box-shadow 0 0 9px #cba inset, 0 0 0 #888
  border-radius 3px
  color #888
  background-image linear-gradient(top, highlight-color 1px, #fff 10px)
  outline none
  margin-bottom 4px
  padding 8px
  border 1px solid #ddd
  border-right 1px solid #888
  border-bottom 1px solid #666
  font-size 18px
  vertical-align middle
  outline none
input[type="password"]:hover, select:hover, textarea:hover, input[type="text"]:hover
  color #555
  border-color #444
  border-bottom 1px solid #666
  border-right 1px solid #777
  box-shadow 0 0 1px highlight-color2 inset,1px 0 2px highlight-color
input[type="password"]:focus, input[type="password"]:focus, select:focus, textarea:focus, input[type="text"]:focus 
  color #000
  background-color #fffcfc
  border 1px solid highlight-color2
  border-bottom 1px solid highlight-color2
  box-shadow -1px 0px 3px #aaa inset,0 0 2px orange,-1px 0px 0 #ff3800,1px 2px 0 #555,0 0 4px #faa,-1px -1px 2px yellow,0 0 3px yellow
  transition all .15s
  border-radius 4px
.button:hover:before
  background-color rgba(100,100,100,.08)
.button:hover, input[type="button"]:hover, input[type="submit"]:hover, button:hover
  background -moz-linear-gradient(center top , #FFce29, #F38437) repeat scroll 0 0 #FFFFFF
  background -webkit-gradient(linear, left top, left bottom, from(#FFce29), to(#F38437))
  text-indent -1px
  background-color #FFca27
  border-color #777
  border-top 1px solid #fff467
  border-left 1px solid #fff467
  border-bottom 1px solid #444
  box-shadow 0 0 5px #888
  text-shadow 0px 1px 0 black,1px 1px 0 black
  transition all .1s
.button:active:before
  background-color rgba(0,0,0,.15)
  border-radius 5px
.button:active, button:active, input[type='submit']:active,input[type='button']:active,button:focus, input[type="submit"]:focus, input[type="button"]:focus
  text-indent 2px
  border-top 1px solid #666
  border-left 1px solid #666
  box-shadow 0 0 2px #888, 1px 1px 1px #a33400 inset
  text-shadow 1px 1px 0 black
  border-bottom 1px solid highlight-color2
  border-right 1px solid highlight-color2
  transition all .2s
.button:before
  position absolute
  content ''
  background-color rgba(0,0,0,.1)
  left -4px
  top -4px
  right -4px
  bottom -4px
  z-index -1
  border-radius 4px
.button, input[type="button"], input[type="submit"], button
  outline none
  position relative
  text-shadow 0 1px 0 #444,1px 1px 0 #444
  background -moz-linear-gradient(center top , #FFC447, #F38437) repeat scroll 0 0 #FFFFFF
  letter-spacing 1px
  background -webkit-gradient(linear, left top, left bottom, from(#FFC447), to(#F38437))
  background-color #F38437
  box-shadow 0px 0px 3px #C35407
  border 1px solid #999
  border-bottom 1px solid #555
  border-right  1px solid #666
  border-top 1px solid #ffe457
  border-left 1px solid #ffe457
  color #fff
  font-size 1.1em
  font-weight 600
  padding 3px 12px
  text-align center
//}}}
