
select
  height 40px
input[type="password"], select, textarea, input[type="text"]
  //box-shadow 0 0 9px #cba inset, 0 0 0 #888
  border-radius 3px
  color #666
  background-image linear-gradient(top, highlight-color 1px, #fff 10px)
  outline none
  margin-bottom 4px
  padding 8px
  border 1px solid #e6e6e6
  border-right 1px solid #bbb
  border-bottom 1px solid #aaa
  font-size 18px
  vertical-align middle
  outline none
  transform scale(1)
  transition-duration .3s
  transition-property transform
input[type="password"]:hover, select:hover, textarea:hover, input[type="text"]:hover
  color #333
  border-color #e2e2e2
  border-bottom 1px solid #999
  border-right 1px solid #aaa
  box-shadow 0 0 1px highlight-color-translucent,1px 0 2px highlight-color
  transition color .5s ease-out
input[type="password"]:focus, input[type="password"]:focus, select:focus, textarea:focus, input[type="text"]:focus 
  color #111
  position relative
  z-index 10
  background-color #fffcfc
  border 1px solid highlight-color2
  border-bottom 1px solid highlight-color2
  border-top 1px solid #fca
  border-left 1px solid #eb9
  box-shadow -1px 0px 2px #aaa inset,0 0 1px highlight-color-translucent,0 1px 0 #aaa
  //letter-spacing .06em
  transform scale(1.015)
  transition box-shadow .1s ease-out, letter-spacing .1s ease-out, border-radius .8s ease-out
  border-radius 8px / 3px
textarea:focus, select:focus
  letter-spacing 0
.button:hover::before
  background-color rgba(100,100,100,.2)
  border-radius 6px
.button:enabled:hover, input[type="button"]:enabled:hover, input[type="submit"]:enabled:hover, button:enabled:hover
  background-image linear-gradient(bottom, #ffd467 12px, #ffce29 87%, #febe19 90%)
  background-color #ffca27
  border-color #777
  border-top 1px solid #fff467
  border-left 1px solid #fff467
  border-bottom 1px solid #555
  box-shadow 0 0 5px #bbb,0 1px 5px 0 #c35407
  text-shadow 0px 1px 0 black,1px 1px 0 rgba(100,100,100,.5)
  transition box-shadow .1s
.button:active::before
  background-color rgba(0,0,0,.15)
  border-radius 5px
  left -4px
  right -4px
  bottom -4px
  top -3px
button:disabled, input[type="submit"]:disabled, input[type="button"]:disabled
  cursor wait
  color #fafafa
  opacity .85
  text-shadow 1px 1px 0 rgba(100,100,100,.2)
  transition opacity .2s ease-out, color .1s ease-out
.button:enabled:active, button:enabled:active,
  input[type='submit']:enabled:active,input[type='button']:enabled:active,button:enabled:focus,
  input[type="submit"]:enabled:focus, input[type="button"]:enabled:focus
  border-top 1px solid #666
  text-indent 1px
  border-left 1px solid #666
  box-shadow 0 0 1px #777, 1px 1px 1px #a33400 inset,0 1px 3px #aaa
  text-shadow 0 1px 1px black,1px 1px 1px rgba(100,100,100,.5)
  border-bottom 1px solid highlight-color2
  border-right 1px solid highlight-color2
  transform translateY(2px)
  border-radius 3px / 2px
.button::before
  position absolute
  content ''
  background-color rgba(0,0,0,.1)
  left -4px
  top -4px
  right -4px
  bottom -4px
  z-index -1
  border-radius 4px
.button, input[type="button"], input[type="submit"], button
  outline none
  white-space nowrap
  position relative
  text-shadow 0 1px 0 #444,1px 1px 0 rgba(100,100,100,.5)
  letter-spacing 1px
  background-image linear-gradient(to bottom, #ffd467 10px, #ffc447 85%, #fdb235 90%)
  background-color #F38437
  box-shadow 0px 0px 3px #C35407
  border 1px solid #666
  border-top 1px solid #ffe457
  border-left 1px solid #ffe457
  border-bottom-color #444
  color #fff
  font-size 1.25em
  font-weight 600
  padding 6px 15px
  text-align center
