
// NOTE base theme on <form> elements

// error classes for inputs
.has-error:focus, .has-error:active, .validation-error:focus, .validation-error:active
  border-color red!important
  box-shadow none!important
  background-image linear-gradient(to bottom, #fff 78%, #ffe0e0 100%)!important
.has-error:hover, .validation-error:hover
  box-shadow 0 0 1px red!important
  background-image linear-gradient(to bottom, #fff 81%, #ffe0e0 100%)!important
.has-error, .validation-error
  border-bottom-color red!important
  border-right 1px solid #ffe0e0!important
  background-image linear-gradient(to bottom, #fff 85%, #ffe0e0 100%)!important

//{{{ Textual Inputs
// indicate active ui beyond user-caused :focus & :active
input[type="password"].active, select.active, textarea.active, input[type="text"].active
  color #000!important

select
  height 40px

input[type="password"], select, textarea, input[type="text"]
  border-radius 3px
  color #666
  background-image linear-gradient(top, theme_alpha 0, tint_color 5px)
  outline none
  margin-bottom 4px
  padding 8px
  border 1px solid #f9f9f9
  border-left 1px solid #f5f5f5
  border-right 1px solid #bbb
  border-bottom 1px solid #aaa
  font-size 18px
  vertical-align middle
  outline none
  transform scale(1)
  transition-duration .3s
  transition-property transform
input[type="password"]:hover, select:hover, textarea:hover, input[type="text"]:hover
  position relative
  z-index 1
  color #444
  border-bottom 1px solid #bbb
  box-shadow 0 1px 0 dark_theme_color,0 0 1px theme_color
  background-image linear-gradient(top, theme_alpha 0, tint_color 5px)
  transition color .5s ease-out, border .05s ease-out, box-shadow .1s ease-out
input.active, input[type="password"]:focus, input[type="password"]:focus, select:focus, textarea:focus, input[type="text"]:focus 
  color #111
  position relative
  z-index 10
  background-color #fffcfc
  border-bottom 1px solid #777
  border-right 1px solid #888
  box-shadow -1px 0 2px -1px #888 inset,0 1px 0 dark_theme_color, 1px 0 1px -1px theme_color, 0 0 1px theme_color
  transform scale(1.015)
  transition box-shadow .1s ease-out, letter-spacing .1s ease-out, border-radius .8s ease-out
  border-radius 8px / 3px
  background-image linear-gradient(top, theme_alpha 0, #fff 7px)
  transition color .5s ease-out, border .05s ease-out, box-shadow .1s ease-out
textarea:focus, select:focus
  letter-spacing 0
//}}}
//{{{    `- with a plus & minus
.plus-minus
  position relative
  input
    text-align center
    border-radius 6px/5px
  .plus, .minus
    background-color transparent!important
    position absolute
    top -8px
    bottom -7px
    width 32px!important
    height auto!important
    margin 0!important
    text-indent -4px!important
    vertical-align middle
    line-height 0!important
    text-align center
    opacity .8
    z-index 10
    &:hover, &:active
      opacity 1
  .plus
    left 0
  .minus
    right 0
//}}}
//{{{ Checkboxes (switch)
.stylish[type="checkbox"]
  display none
.stylish[type="checkbox"]:checked ~ label .switch
  margin-left 20px
  padding 5px
  box-shadow -1px 1px 1px 0 #777
.stylish[type="checkbox"]:checked ~ label
  background-color theme_color
  transition background-color .4s ease-out
// these are placeholders for switch state text, eg: "On" "Off"
.stylish[type="checkbox"]:checked + label::after
  color #444
  font-weight 400
.stylish[type="checkbox"] + label::after
  position absolute
  top 14px
  left 60px
  color #aaa
  font-weight 200
  letter-spacing 1px
  font-size .9em
label.switch-control
  display inline-block!important
  width 50px!important
  height 30px
  padding 1px
  letter-spacing 1px
  margin 0 10px 8px 0
  border-radius 30px
  background rgba(0,0,0,.03)
  box-shadow inset 0 0 1px #666,0 2px 5px #eee
  &:hover
    box-shadow inset 0 0 1px #888, 0 1px 2px #eee, 0 0 0 1px theme_color
    transition box-shadow .1s ease-out
// box is the surround container
.box
  position relative
  display inline-block
  margin-top 0
.switch 
  cursor pointer
  display block
  width 20px
  height 20px
  padding 5px
  background #fff
  box-shadow inset 0 0 2px rgba(0,0,0,0.25),0 2px 4px #999
  border-radius 20px
  transition all .4s bounce
//}}}
//{{{ Buttons
.button:enabled:hover, input[type="button"]:enabled:hover, input[type="submit"]:enabled:hover, button:enabled:hover
  //animation-name tiny-grow
  //animation-duration .03s
  //background-image linear-gradient(bottom, dark_theme_color 12px, theme_color 87%, dark_theme_color 90%)
  background-color theme_color
  color colored_text
  border-color #777
  border-top 1px solid theme_color
  border-left 1px solid theme_color
  border-bottom 1px solid #555
  box-shadow 0 0 5px #bbb,0 1px 5px 0 theme_color
  if dark(colored_text)
    // dark colors look blurry w/ extra shading 
    text-shadow 0px 1px 0 black
  else
    text-shadow 0px 1px 0 black,1px 1px 0 rgba(100,100,100,.5)
  transition none
button:disabled:hover::before, input[type="submit"]:disabled:hover::before, input[type="button"]:disabled:hover::before
  background-image linear-gradient(to bottom, rgba(255,255,255,.05) 0%, rgba(255,255,255,.1) 80%)
button:disabled::before, input[type="submit"]:disabled::before, input[type="button"]:disabled::before
  background-image linear-gradient(to bottom, rgba(255,255,255,.05) 0%, rgba(255,255,255,.1) 80%)
button:disabled, input[type="submit"]:disabled, input[type="button"]:disabled
  cursor default
  color lighten(colored_text, 30%)
  opacity .85
  text-shadow 0 1px 0 rgba(0,0,0,.3),1px 1px 0 rgba(100,100,100,.1)
  transition opacity .2s ease-in, color .1s ease-in
.button:enabled:active, button:enabled:active, input[type='submit']:enabled:active,input[type='button']:enabled:active,button:enabled:focus, input[type="submit"]:enabled:focus, input[type="button"]:enabled:focus
  border-top 1px solid #666
  text-indent 1px
  border-left 1px solid #666
  box-shadow 0 0 1px #777, 1px 1px 1px theme_color inset,0 1px 3px #aaa
  text-shadow 0 1px 2px black inset,1px 1px 1px rgba(100,100,100,.5)
  //border-bottom 1px solid dark_theme_color
  //border-right 1px solid dark_theme_color
  border-bottom-color #888
  transform translateY(2px)
  border-radius 8px / 4px
  opacity .9
// bottom "darken" fx
input[type="submit"]:active::after, button:active::after, .button:active::after
  height 2px!important
input[type="submit"]:hover::after, button:hover::after, .button:hover::after
  opacity .65!important
  height 3px
  background-image linear-gradient(to bottom, rgba(0,0,0,.1) 0%, rgba(0,0,0,.3) 100%)
  transition none
input[type="submit"]::after, button::after, .button::after
  position absolute
  content ''
  bottom 0
  right -1px
  left -1px
  background-image linear-gradient(to bottom, rgba(0,0,0,.1) 0%, rgba(0,0,0,.25) 100%)
  opacity .75
  height 4px
// XXX this is stealing clicks!  (...but it looks so good ;/)
