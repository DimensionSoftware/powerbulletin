
// NOTE base theme on <form> elements

// error classes for inputs
.has-error:focus, .has-error:active, .validation-error:focus, .validation-error:active
  border-color red!important
  box-shadow none!important
  background-image linear-gradient(to bottom, #fff 78%, #ffe0e0 100%)!important
.has-error:hover, .validation-error:hover
  box-shadow 0 0 1px red!important
  background-image linear-gradient(to bottom, #fff 81%, #ffe0e0 100%)!important
.has-error, .validation-error
  border-bottom-color red!important
  border-right 1px solid #ffe0e0!important
  background-image linear-gradient(to bottom, #fff 85%, #ffe0e0 100%)!important

//{{{ Textual Inputs
// indicate active ui beyond user-caused :focus & :active
input[type="password"].active, select.active, textarea.active, input[type="text"].active
  color #000!important

select
  height 40px

input[type="password"], select, textarea, input[type="text"]
  border-radius 3px
  color #666
  background-image linear-gradient(top, lighta 1px, #fff 5px)
  outline none
  margin-bottom 4px
  padding 8px
  border 1px solid #f9f9f9
  border-left 1px solid #f5f5f5
  border-right 1px solid #bbb
  border-bottom 1px solid #aaa
  font-size 18px
  vertical-align middle
  outline none
  transform scale(1)
  transition-duration .3s
  transition-property transform
input[type="password"]:hover, select:hover, textarea:hover, input[type="text"]:hover
  position relative
  z-index 1
  color #444
  border-bottom 1px solid #bbb
  box-shadow 0 1px 0 dark,0 0 1px light
  background-image linear-gradient(top, lighta 1px, #fff 7px)
  transition color .5s ease-out, border .05s ease-out, box-shadow .1s ease-out
input.active, input[type="password"]:focus, input[type="password"]:focus, select:focus, textarea:focus, input[type="text"]:focus 
  color #111
  position relative
  z-index 10
  background-color #fffcfc
  border-bottom 1px solid #777
  border-right 1px solid #888
  border-colo #f5f5f5
  box-shadow -1px 0 2px -1px #888 inset,0 1px 0 dark, 1px 0 1px -1px light, 0 0 1px light
  transform scale(1.015)
  transition box-shadow .1s ease-out, letter-spacing .1s ease-out, border-radius .8s ease-out
  border-radius 8px / 3px
  background-image linear-gradient(top, lighta 2px, #fff 10px)
  transition color .5s ease-out, border .05s ease-out, box-shadow .1s ease-out
textarea:focus, select:focus
  letter-spacing 0
//}}}
//{{{ Checkboxes (switch)
input[type="checkbox"]
  display none
input[type="checkbox"]:checked ~ label .switch
  margin-left 20px
  padding 5px
  box-shadow -1px 1px 1px 0 #777
input[type="checkbox"]:checked ~ label
  background-color light
  transition background-color .4s ease-out
label.switch-control
  display inline-block!important
  width 50px!important
  height 30px
  padding 1px
  margin 0 10px 8px 0
  border-radius 30px
  background rgba(0,0,0,.03)
  box-shadow inset 0 0 1px #666,0 2px 5px #eee
label.switch-control:hover
  box-shadow inset 0 0 1px #888, 0 1px 2px #eee, 0 0 0 1px light
  transition box-shadow .1s ease-out
.box
  display inline-block
  margin-top 0
.switch 
  cursor pointer
  display block
  width 20px
  height 20px
  padding 5px
  background #fff
  box-shadow inset 0 0 2px rgba(0, 0, 0,0.25), 0 1px 1px #999
  border-radius 20px
  transition all .4s bounce
//}}}
//{{{ Buttons
.button:enabled:hover, input[type="button"]:enabled:hover, input[type="submit"]:enabled:hover, button:enabled:hover
  animation-name tiny-grow
  animation-duration .03s
  //background-image linear-gradient(bottom, dark 12px, light 87%, dark 90%)
  background-color light
  border-color #777
  border-top 1px solid light
  border-left 1px solid light
  border-bottom 1px solid #555
  box-shadow 0 0 5px #bbb,0 1px 5px 0 light
  text-shadow 0px 1px 0 black,1px 1px 0 rgba(100,100,100,.5)
button:disabled:hover::before, input[type="submit"]:disabled:hover::before, input[type="button"]:disabled:hover::before
  background-image linear-gradient(to bottom, rgba(255,255,255,.05) 0%, rgba(255,255,255,.1) 80%)
button:disabled::before, input[type="submit"]:disabled::before, input[type="button"]:disabled::before
  background-image linear-gradient(to bottom, rgba(255,255,255,.05) 0%, rgba(255,255,255,.1) 80%)
button:disabled, input[type="submit"]:disabled, input[type="button"]:disabled
  cursor wait
  color #fafafa
  opacity .85
  text-shadow 0 1px 0 rgba(0,0,0,.3),1px 1px 0 rgba(100,100,100,.1)
  transition opacity .2s ease-out, color .1s ease-out
.button:enabled:active, button:enabled:active, input[type='submit']:enabled:active,input[type='button']:enabled:active,button:enabled:focus, input[type="submit"]:enabled:focus, input[type="button"]:enabled:focus
  border-top 1px solid #666
  text-indent 1px
  border-left 1px solid #666
  box-shadow 0 0 1px #777, 1px 1px 1px light inset,0 1px 3px #aaa
  text-shadow 0 1px 1px black,1px 1px 1px rgba(100,100,100,.5)
  //border-bottom 1px solid dark
  //border-right 1px solid dark
  border-bottom-color #888
  border-bottom-color #888
  transform translateY(2px)
  border-radius 8px / 2px
  opacity .9
// bottom "darken" fx
input[type="submit"]:active::after, button:active::after, .button:active::after
  height 2px!important
input[type="submit"]:hover::after, button:hover::after, .button:hover::after
  opacity .65!important
  height 3px
  background-image linear-gradient(to bottom, rgba(0,0,0,.1) 0%, rgba(0,0,0,.3) 100%)
  transition opacity .08s ease-out, height .05s ease-out
input[type="submit"]::after, button::after, .button::after
  position absolute
  content ''
  bottom 0
  right -1px
  left -1px
  background-image linear-gradient(to bottom, rgba(0,0,0,.1) 0%, rgba(0,0,0,.25) 100%)
  opacity .75
  height 4px
//- top gloss fx
input[type="submit"]:active::before, button:active::before, .button:active::before
  height 53%!important
  opacity .7
input[type="submit"]:hover::before, button:hover::before, .button:hover::before
  background-image linear-gradient(to bottom, rgba(255,255,255,.33) 0%, rgba(255,255,255,.28) 100%)
  opacity .9
  height 48%
  transition opacity .08s ease-out, height .02s ease-out
input[type="submit"]::before, button::before, .button::before
  position absolute
  content ''
  height 50%
  top -1px
  left -3px
  right -1px
  border-radius .5em .5em 6em 6em/.1em .1em 1em 1em
  background-image linear-gradient(to bottom, rgba(255,255,255,.3) 0%, rgba(255,255,255,.25) 100%)
  opacity .75
.button, input[type="button"], input[type="submit"], button
  outline none
  white-space nowrap
  position relative
  text-shadow 0 1px 0 #444,1px 1px 0 rgba(100,100,100,.5)
  letter-spacing 1px
  //background-image linear-gradient(bottom, light 10px, light 85%, dark2 90%)
  background-color light
  box-shadow 0px 0px 3px light
  border 1px solid #666
  border-top 1px solid dark
  border-left 1px solid dark
  border-bottom-color #444
  color #fff
  font-size 1.25em
  font-weight 600
  padding 6px 15px
  text-align center
  border-radius 5px / 1px
//}}}
