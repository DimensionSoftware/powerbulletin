//  height 53%!important
//  opacity .7
//input[type="submit"]:hover::before, button:hover::before, .button:hover::before
//  background-image linear-gradient(to bottom, rgba(255,255,255,.33) 0%, rgba(255,255,255,.28) 100%)
//  opacity .9
//  height 48%
//  transition opacity .08s ease-out, height .02s ease-out
input[type="submit"]::before, button::before, .button::before
  position absolute
  content ''
  // the gloss lightens dark text too much, so ...
  if light(colored_text)
    height 50%
  else
    height 40%
  top -1px
  left -1px
  right -1px
  border-radius .5em .5em 6em 6em/.1em .1em 1em 1em
  background-image linear-gradient(to bottom, rgba(255,255,255,.3) 0%, rgba(255,255,255,.25) 100%)
  if dark(theme_color)
    opacity .3
  else
    opacity .8
.button, input[type="button"], input[type="submit"], button
  transition box-shadow .2s ease-in .05s, border .2s ease-in .05s, color .2s ease-in .05s, text-shadow .2s ease-in .05s
  outline none
  white-space nowrap
  position relative
  if dark(colored_text)
    // dark colors look blurry w/ extra shading 
    text-shadow 0 1px 0 #444
  else
    text-shadow 0 1px 0 #444,1px 1px 0 rgba(100,100,100,.5)
  letter-spacing 1px
  background-color theme_color
  box-shadow 0px 0px 3px theme_color
  border 1px solid #666
  border-top 1px solid dark_theme_color
  border-left 1px solid dark_theme_color
  border-right 1px solid dark_theme_color
  border-bottom-color #444
  color lighten(colored_text, 5%)
  font-size 1.25em
  if light(colored_text)
    font-weight 600
  else
    font-weight 500
  padding 6px 15px
  text-align center
  border-radius 6px/5px
//}}}
