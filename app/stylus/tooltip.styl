tooltip-border-color = rgb(100, 100, 100)

.tooltip-container:hover .tooltip, .tooltip.hover
  opacity .95
  transform scale(1) rotate(0) translate(0, 0)
  transition all .3s ease-in-out
.tooltip::after
  content ''
  position absolute
  bottom -13px
  left 50%
  margin-left -9px
  width 0
  height 0
  border-left 10px solid transparent
  border-right 10px solid transparent
  border-top 10px solid rgba(0,0,0,0.1)
.tooltip::after
  bottom -12px
  margin-left -10px
  border-top 9px solid #444
.tooltip::before
  position absolute
  content ''
  left -3px
  right -3px
  top -3px
  height 54%
  background rgba(255,255,255,.15)
  border-radius .5em .1em 5em 4em/.1em .1em 1em 3em
.tooltip
  transition all .2s ease-in-out
  transform scale(0) rotate(30deg) translate(120px, 200px)
  display block
  position absolute
  z-index 99
  padding 12px 25px
  left 50%
  bottom 25px
  margin-left -117px
  font-style italic
  font-weight 400
  letter-spacing 1px
  font-size 1.25em
  text-align center
  cursor pointer
  color #fff
  background-color rgb(110, 110, 110)
  border 2px solid tooltip-border-color
  border-radius 6px / 2px
  opacity 0
  box-shadow 0 1px 0px 1px #333,0 3px 5px 1px tooltip-border-color
  text-shadow 0 -1px 0 #000
.tooltip.right::after
  border-right 10px solid rgba(0,0,0,0.1)
  border 9px solid transparent
  left -11px
  top -2px
.tooltip.right
  top 35%
  right -100px
  width 65px
.tooltip.right::after
  border-right 10px solid tooltip-border-color

