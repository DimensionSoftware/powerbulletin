// Mutant-specific States
//{{{ - homepage
html.homepage
  #main_content
    .header
      text-align center
    .header, .container
      width 90%
      margin 0 auto
    .forum.light
      .header
        color #777
      .header::before
        position absolute
        opacity 0
    .forum:first-child
      .header::before
        top 50px
    .forum
      //background-color rgba(255,255,255,.94)
      .header
        font-weight 100
        font-size 2.1em
        line-height 2em
      .post
        .profile
          background-color #fafafa
          border 1px solid #eee
        .post-edit
          .sceditor-container
            border-top-left-radius 0
            .sceditor-toolbar
              background-color #fafafa
              border-bottom 1px solid #eee
          .title
            border-bottom-left-radius 0
            border-bottom-right-radius 0
      .user
        font-weight bold
  .extra
    .orderer::before
      border-left 15px solid #ddd
      border-top 10px solid transparent
      border-bottom 10px solid transparent
    .orderer:hover
      background-image linear-gradient(bottom, #fcfcfc 0%, #fff 23%, #cfcfcf 85%, #cfcfcf 100%)
    .orderer
      border-bottom-left-radius 5px
      border-top-left-radius 5px
      background-image linear-gradient(bottom, #fff 0%, #fff 23%, #ccc 85%, #ccc 100%)
      border 1px solid #ccc
      border-bottom 2px solid #bbb
      border-left-width 1px
      padding 2px
      a
        display block
        padding 8px
      color #555
      font-weight 100
      li
        letter-spacing 2px
      .indicator
        opacity .3
        background-color #666
      #order
        li.active
          color #000
          font-weight 500
          font-size .95em
          animation-name tiny-grow
          animation-duration .25s
//}}}
//{{{ - forum & profile
html.forum, html.profile
  #main_content
    .thread
      border-bottom 1px solid transparent
      border-top 1px solid transparent
    .thread.active
      border-bottom 1px solid #aaa
      border-top 1px solid #aaa
      background-color rgba(50, 50, 50, .2)
      transition background-color .1s ease-out
      .title
        color #fff
        text-shadow 0 0 2px #000
    .forum, .threads
      .post
        border-bottom 1px solid rgba(200,200,200,.5)
        .actions a
          color highlight-color2
  #left_content
    .threads
      .thread
        a
          color #eee
          text-decoration none

//}}}

