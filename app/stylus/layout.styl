@import 'common'

// XXX below defines the layout's skeleton
// XXX decoration & embellishments belong in the theme.styl
// XXX eventually each forum will have its own theme.{styl,css}

body
  grid(90%,100%)
  overflow visible!important

//{{{ Header
header
  position fixed
  height 60px
  z-index 1
  .container
    width 800px
    margin 0 auto
    .menu
      margin -3px auto 0 auto
      display inline-block
      .row:hover
        .submenu
          //opacity 1
          //display block
          visibility visible
          transform translateY(230px)
          transition all .3s ease-out .5s
      .row
        cursor pointer
        display inline-block
        line-height 60px
        font-size 18px
        .title
          position relative
          z-index 10
        .submenu
          z-index 9
          //opacity 0
          top -170px
          //display none
          visibility hidden
          margin 0 0 0 2px
          position absolute
          .row
            display block
    .search
      top 10px
      right 12px
      position absolute 
      .query
        width 300px
//}}}
//{{{ User Profile
section.user-profile
  position fixed
  top 55px
  left 15px
  width 140px
  height 300px
  z-index 5
  display none
//}}}
//{{{ Main Content
.col1
  width 425px
.col2
  width 425px
.content
  .container
    margin 0 auto 0 160px!important
    .post
      float left
      margin 10px
    .scroll-to-top
      clear both
//}}}
//{{{ Footer
footer
  text-align center
  position fixed
  bottom 0
  right 0
  left 0
  height 30px
//}}}

.scroll-to-top
  cursor pointer

//{{{ RESPONSIVEness
@media screen and (max-width: 800px)
  body
    grid(100%,475px)
  header
    height 30px
    .logo
      font-size 1.1em!important
      margin-top 4px!important
    .menu
      .row
        line-height 30px!important
    .search
      float right!important
      position relative!important
  
@media screen and (max-width: 500px)
  .content
    .container
      margin-left 0!important
      padding 25px 15px!important
  .has-scrolled
    .content
      .container
        margin-left 0!important
        padding 25px 15px!important
    .user-profile
      display none!important
  body
    grid(100%,320px)
  header
    font-size 0.8em
    display none
// }}}
