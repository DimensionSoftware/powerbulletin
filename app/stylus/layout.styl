@import 'common'

// XXX below defines the layout's skeleton
// XXX decoration & embellishments belong in the theme.styl

body
  grid(90%,100%)
  overflow visible!important

header
  position fixed
  height 60px
  z-index 1
  .container
    width 800px
    margin 0 auto
    .logo
      display inline-block
      margin-top 20px
      width 200px
      vertical-align top
      text-shadow 0 0 1px #fff
      font-style italic
      font-size 1.5em
      font-weight 300
      letter-spacing -2px
      strong
        letter-spacing -2px
        font-weight 500
        padding-left 4px
        font-style normal
        color #ddd
    .menu
      position absolute
      top -3px
      margin 0 auto
      display inline-block
      .row
        cursor pointer
        display inline-block
        padding 0 19px
        line-height 60px
        font-size 18px
  .search
    top 12px
    left 350px
    position absolute 

.content
  padding 20px 25px!important
  margin-top 60px!important
  margin-bottom 30px!important
  grid-space(75%)

.right-menu
  position fixed!important
  z-index 2
  top 85px
  right 0
  grid-space(25%)
  .menu
    padding 0
    margin 12px 0
    list-style none
    .row
      margin 0
  p
    margin 10px 0

footer
  cursor pointer
  text-align center
  position fixed
  bottom 0
  right 0
  left 0
  height 30px

// <RESPONSIVE>
@media screen and (max-width: 800px)
  body
    grid(90%,475px)
  .content
    grid-space(55%)
  .right-menu
    grid-space(45%)
  header
    height 40px
    .logo
      font-size 1.3em!important
      margin-top 8px!important
    .menu
      .row
        line-height 40px!important
  
@media screen and (max-width: 500px)
  .content
    margin-bottom 10px!important
  .right-menu
    margin-bottom 30px!important
    position static!important
  header 
    display none
  body
    grid(90%,320px)
  header
    font-size 0.8em
  .content
    grid-space(100%)
  .right-menu
    grid-space(100%)
