@import 'common'

// XXX below defines the layout's skeleton
// XXX decoration & embellishments belong in the theme.styl
// XXX eventually each forum will have its own theme.{styl,css}

body
  grid(90%,100%)
  overflow visible!important

header
  position fixed
  height 60px
  z-index 1
  .container
    width 800px
    margin 0 auto
    .menu
      margin -3px auto 0 auto
      display inline-block
      .row:hover
        .submenu
          opacity 1
          visibility visible
          transform translate(-25px)
          transition all .2s ease-out .3s
      .row
        cursor pointer
        display inline-block
        padding 0 19px
        line-height 60px
        font-size 18px
        .submenu
          opacity 0
          padding 0
          margin 0
          visibility hidden
          position absolute
          .row
            display block
    .search
      top 10px
      right 12px
      position absolute 
      .query
        width 300px

section.user-profile
  position fixed
  top 55px
  left 15px
  width 200px
  height 300px
  z-index 5
  display none

footer
  text-align center
  position fixed
  bottom 0
  right 0
  left 0
  height 30px

.scroll-to-top
  cursor pointer

//{{{ RESPONSIVEness
@media screen and (max-width: 800px)
  body
    grid(90%,475px)
  header
    height 40px
    .logo
      font-size 1.3em!important
      margin-top 8px!important
    .menu
      .row
        line-height 40px!important
  
@media screen and (max-width: 500px)
  .content
    .container
      margin 60px 15px!important
  .has-scrolled
    .user-profile
      display none!important
  body
    grid(90%,320px)
  header
    font-size 0.8em
    display none
// }}}
