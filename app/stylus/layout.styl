
// XXX below defines the layout's skeleton
// XXX decoration & embellishments belong in the theme.styl
// XXX eventually each forum will have its own theme.{styl,css}

header-height           = 50px
header-scrolled-height  = 30px
header-searching-height = 80px

forum-header-height = 0
footer-height       = 32px
left-content-width  = 210px

@import './app/stylus/mutants_layout'

section
  box-sizing border-box

body
  grid(90%,100%)
  overflow visible!important
  a
    cursor pointer
  .scroll-to, .scroll-to-top
    cursor pointer

body.waiting, body.waiting a
  cursor wait !important

//{{{ Header
.logo
  margin 0
  padding 0
  a
    margin-top 15px
    vertical-align top
    font-size .75em
    text-decoration none
    font-weight 200
    letter-spacing -2px
    position fixed
    top 1px
    left (grid*2)
    z-index 10
    strong
      letter-spacing -1px
      font-weight 500
      padding-left 4px
header
  position fixed
  height header-height
  top 0
  z-index 9
  .close
    display none
  .container
    width 800px
    margin 0 auto
    .menu
      padding 0
      margin -3px auto 0 auto
      display inline-block
      position absolute
      bottom 0
      > .row
          position relative!important
          z-index 50!important
        .title
          display inline-block
          text-transform capitalize
          padding 0 19px
      .row.active, .row:hover
        z-index 7
        .submenu
          opacity 1
          top 34px
          max-height 450px
          height auto
          min-width 850px
          transition min-width .3s ease-out .3s, max-height .6s ease-out .3s, top .25s ease-out .3s
          .row:hover
            text-indent 1px
            transition text-indent .1s ease-out
      .row:nth-last-child(3)
        .submenu
          margin-left -100px
      .row:nth-last-child(2)
        .submenu
          margin-left -250px
      .row:last-child
        .submenu
          margin-left -400px
      .row
        cursor pointer
        display inline
        line-height header-height
        font-size 16px
        .title
          position relative
          z-index 66
        .submenu
          z-index 65
          top -600px
          overflow-y scroll
          opacity 0
          position absolute
          padding 0
          margin 0
          max-height 50px
          min-width 600px
          menu
            margin-top grid
            .row
              width 250px
              height 40px
              display inline-block
              text-align center
              float left
              font-size 14px
              text-indent 4px
              line-height 42px
              a
                display block
    .search
      top 13px
      right 12px
      position absolute 
      .query
        width 300px
        font-size 1.3em
    .advanced
      position absolute
      right -800px
//}}}
//{{{ Left side
#left_content
  position fixed
  left 0
  bottom 0
  top (header-height+2)
  height auto
  width left-content-width
  width 200px
  z-index 8
  padding-top (grid*3)
  .photo
    margin-top 8px
  .handle
    border-radius 20px
    line-height 28px
    font-size .9em
    height 30px
    width 30px
    margin-top (grid/2)
    top (header-height - (grid*2))
    right -26px
    cursor pointer
    position absolute
    text-align center
    cursor pointer
    z-index 95
//}}}
//{{{ Main Content
.col1
  width 425px
.col2
  width 425px

.photo
  overflow hidden
  float left
  padding 2px
  margin-right grid
  width 44px
  height 35px
  float left
  img
    width 100%

#paginator
  display none
#main_content
  grid(100%, 800px)
  padding forum-header-height 0 0 0
  padding-top (grid*8)
  z-index 5
  #breadcrumb
    position fixed
    top -100px
    text-align center
    z-index 12
    border-bottom-left-radius 3px
    border-bottom-right-radius 3px
    padding (grid/2+2) (grid*2.5) 3px (grid*2.5)
    font-size .9em
  .breadcrumb
    margin-bottom (grid/2)
    text-transform capitalize
    a, em, span
      text-transform capitalize
      padding-right (grid/2)
      margin-right 3px
  .resizable
    padding-left (left-content-width+(grid*3))
  .scroll-to-top
    clear both
//}}}
//{{{ Footer
footer
  text-align center
  position fixed
  bottom 0
  right 0
  left 0
  height footer-height
  z-index 9
  width auto
//}}}

//{{{ Scrolled <body>
body.searching header
  .menu
    .row
      top -1px
      line-height 29px!important
      font-size 16px!important
body.scrolled
  .logo
    a
      top -(grid - 2)
      font-size .68em
  header
    height header-scrolled-height
    .container
      .menu
        > .row:hover
          .submenu
            top 25px
        .row
          top 1px
          line-height header-scrolled-height + 1
          font-size 16px
      .search
        top 0!important
        right 0!important
        .query
          font-size 1em
          width 340px!important
          height 15px
  #left_content
    top (header-scrolled-height+5)
    padding-top (grid * 1.5)
    transition padding-top .2s ease-out, top .2s ease-out
    .handle
      top (header-scrolled-height - (grid*1.5))
      transition top .2s ease-out
  #main_content
    #breadcrumb
      top (header-scrolled-height+3)
      transition top .3s ease-out
  #paginator
    top (header-scrolled-height+4)
    bottom (footer-height-grid)
  footer
    opacity 1
    font-size .85em
    bottom -(grid)
    line-height (grid*2)
//}}}
//{{{ Collapsed left nav
body.collapsed
  .logo a
    left 53px
    transition left .2s ease-out
  #left_content
    width (grid/2)!important
    transition width .1s
    .handle
      transform rotate(180deg)
      right -15px!important
      text-indent -7px
      border-width 0!important
    .create a
      display none!important
  #main_content
    .resizable
      padding-left (grid*5)!important
      transition padding-left .2s ease-out
//}}}
//{{{ Expanded header (advanced searching)
body.searching
  header
    menu
      > .row:hover
        .submenu
          top (header-scrolled-height+3)!important
body.searching
  header
    height header-searching-height!important
    transition background-color .25s ease-out, height .2s ease-out
    .container
      .search::before
        content ''
        border-top 8px solid transparent
        border-bottom 8px solid transparent
        position absolute
        top 25px
        left 0
      .search
        top -7px!important
        right auto!important
        #query.query
          position relative
          z-index 9
          font-size 31px
          padding 5px 20px
          letter-spacing 3px
          font-weight 100
          height 51px
          width 500px!important
      .advanced
        right 100px
        top 5px
        transition right .2s ease-out
        .check, label
          cursor pointer
    .close
      cursor pointer
      position absolute
      right 12px
      top grid
      display block
  #left_content
    top (header-searching-height+4)!important
    transition padding-top .2s ease-out
  #main_content
    padding-top (header-height+header-searching-height)!important
    transition padding-top .2s ease-out
  #paginator
    top (header-searching-height+4)
body.searching.scrolled
  #main_content
    #breadcrumb
      top (header-searching-height+3)
//}}}

//{{{ Login
.fancybox-wrap.on-validate
  .validate
    display block!important
    .msg
      h3
        margin-top (grid*2)!important
  .register, .login
    display none!important
.fancybox-wrap.on-register
  #auth
    .register
      display block!important
    .choose, .login, .forgot, .reset
      display none!important
.fancybox-wrap.on-choose
  #auth
    h3
    .choose
      display block!important
    .login, .forgot, .reset
      display none!important
    .msg
      visibility hidden
.fancybox-wrap.on-forgot
  #auth
    .forgot
      display block!important
    .login, .choose, .reset
      display none!important
.fancybox-wrap.on-reset
  #auth
    .reset
      display block!important
    .login, .choose, .forgot
      display none!important
.fancybox-wrap.on-error
  #auth
    .msg
      height 30px
      opacity 1
      transition height .5s, opacity 1s
#auth
  .choose, .forgot, .register, .reset
    h3
      margin-top (grid+2)
      float right
    input[type='submit']
      margin-top 4px
  .error
    display none
  h2
    margin 15px 0 20px 15px
    letter-spacing 1px
  h3
    margin 0 5px 10px 0
  .social
    margin 20px auto
    width 313px
    a
      text-decoration none
  fieldset
    padding 20px 102px
  input[name="email"]
    width 286px
    padding 15px
  input[name="username"]
    width 300px
    display block
  input[name="password"]
    width 300px
  input[type="submit"]
    height 42px
    width 315px
    margin-left 2px
    margin-top 13px
    display block

#paginator
  position fixed
  overflow hidden
  width 12px
  height auto
  top header-height
  bottom 0
  left 0
  z-index 9
  padding-top header-height*2
  padding-bottom footer-height

  a.page
    display block
    text-decoration none
    padding 5px 10px

  a.page:hover, a.active
    text-decoration none

#paginator:hover
  transition width .1s .3s ease-out
  width 18px

//}}}
