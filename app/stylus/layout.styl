
// XXX below defines the layout's skeleton
// XXX decoration & embellishments belong in the theme.styl
// XXX eventually each forum will have its own theme.{styl,css}
bounce = cubic-bezier(0,1.72,0,.75)

header_height           = 100px
header_scrolled_height  = 35px

forum-header_height = 0
footer_height       = 36px
left_content_width  = 310px

section
  box-sizing border-box

body
  grid(90%,100%)
  a
    cursor pointer
  .onclick-scroll-top
    cursor n-resize
  .scroll-to
    cursor pointer

body.waiting
  cursor wait!important
  a, input, button, textarea
    cursor wait!important

.onclick-logout, .onclick-profile, .onclick-messages, .admin-only, .has-facebook, .has-google, .has-twitter, .has-auth
  display none

.close, .onclick-close
  opacity 0
  cursor pointer
  line-height 9px
  text-indent 1px
  border-radius 100%
  padding 6px
  font-size 10px

.clear
  clear both
  zoom 1
  &:before, &:after
    display table
    content ''
  &:after
    clear both
.hidden
  display none!important

//{{{  Background of entire window
#forum_background_buffer
  opacity 0
  z-index 1
#forum_background
  opacity 0
#forum_background_color, #forum_background_buffer, #forum_background
