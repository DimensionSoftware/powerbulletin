
// RESPONSIVEness
@media screen and (max-width: 800px)
  .logo
    font-size 1.1em!important
    margin-top 4px!important
  body.collapsed
    grid(100%,475px)
    #main_content
      .forum
        padding-left (grid*4)!important
  body
    grid(100%,475px)
    #left_chrome
      display none!important
  
@media screen and (max-width: 500px)
  header
    font-size 0.8em
    display none
  body
    grid(100%,320px)
    #main_content
      margin-left 0!important
      padding 25px 15px!important
      .forum
        margin-bottom grid!important
  body.scrolled
    #main_content
      #breadcrumb
        top 0
    .container
      margin-left 0!important
    #left_chrome
      display none!important

#left_content.wide
  .threads
    .photo, .created, .username
      display inline-block
