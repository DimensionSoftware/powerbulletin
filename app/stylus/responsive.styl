
// RESPONSIVEness
@media screen and (min-width: 1500px)
  .main-content
    .forum, .search
      margin 0 240px 0 40px
@media screen and (max-width: 800px)
  .logo
    font-size 1.1em!important
    margin-top 4px!important
  body.collapsed
    grid(100%,475px)
    .main-content
      .forum, .search
        padding-left (grid*4)!important
  body
    grid(100%,475px)
    #left_chrome
      display none!important
  
@media screen and (max-width: 500px)
  header
    font-size 0.8em
    display none
  body
    grid(100%,320px)
    .main-content
      margin-left 0!important
      padding 25px 15px!important
      .forum, .search
        margin-bottom grid!important
  body.scrolled
    .main-content
      #breadcrumb
        top 0
    .container
      margin-left 0!important
    #left_chrome
      display none!important

.left-content.wide
  #left_container
    .threads
      .photo, .created, .username
        display inline-block
