
// Structure applied to ...

// Mutant-specific States
//{{{ - homepage
html.homepage
  #left_content
    display none
  #main_content
    padding-top header-height
    .forum
      padding-left (grid*2)
  .extra
    right 0
    z-index 7
    bottom (grid*8)
    width 175px
    height 100px
    position fixed
    .orderer::before
      content ''
      width 1px
      height 1px
      position absolute
      left 0
      top 11px
      z-index 3
      border-top-color transparent
      border-right-color transparent
      border-bottom-color transparent
    .orderer
      position relative
      height 95px
      overflow hidden
      cursor pointer
      #order
        display block
      .scroll-to-top
        position absolute
        right 1px
        bottom 0
        border-left 8px solid transparent
        border-right 8px solid transparent
  body.searching
    #main_content
      padding-top header-searching-height
      transition padding-top .2s ease-out
  body.scrolled
    #main_content
      #left_chrome
        right -2px
        transition right .4s ease-out
//}}}
//{{{ - profile
html.profile
  #left_content
    .container
      margin 0 (grid*2)
      overflow hidden
    .avatar img
      width 100%
  h1, h2, h3
    text-transform capitalize
    margin-top 0
    margin-left 0
  ul
    list-style none
    margin grid 0 0 0
//}}}
//{{{ - forum, profile & search
html.forum, html.profile, html.search
  body.scrolled
    #left_content
      bottom 0
  #left_content
    display block
    .photo, .created, .username
      display none
    .create
      margin (grid/2) (grid*2.5) (grid/2) (grid*2)
      a
        text-decoration none
        animation-name none
        padding 8px 10px
        display block
    .threads
      overflow-y scroll
      height 100%
      margin 0
      padding-top grid
      .thread
        padding 1px (grid*1.5) 8px ((grid*2)+3)
        .title
          overflow hidden
          max-height 65px
          text-transform capitalize
          margin grid 0 0 0
        .username
          font-size .7em
          em
            text-transform capitalize
            font-weight 600
            margin-left (grid/2)
            font-size 1.1em
        .created
          font-size .9em
        .created, .username, .post-count
          white-space nowrap
          text-overflow ellipsis
          margin-bottom -6px
        .post-count, .views
          font-weight bold
          font-size .8em
        .post-count, .views
          i
            font-weight 100
            font-size .9em
            margin 0 grid 0 (grid/2)

      .thread:last-child
        margin-bottom (grid*10)
  #left_chrome
    display none
  #main_content
    .forum
      position relative
      clear both
      min-height 650px
      margin-bottom (grid*6)
      p
        margin 0
      .container
        z-index 6
      .header.stuck::before
        opacity 1!important
      .header
        width 95%
        overflow visible
        text-align center
        .description
          text-rendering optimizelegibility
          text-transform capitalize
          overflow hidden
          text-overflow ellipsis
          width 45%
          left 19%
          position relative
          z-index 2
      .scroll-to
        position absolute
        right 0
        bottom -30px
      .post:hover
        position relative
        z-index 4
        transition all .1s ease-out 1.3s
      .post-edit
        margin-bottom (grid*2)
        margin-left grid
        margin-top (grid/2)
        .sceditor-container, .sceditor-container div, div.sceditor-dropdown, div.sceditor-dropdown div
          z-index 1
          overflow hidden
          margin-bottom (grid*2)
          border-top-left-radius 0
          right 0
          iframe
            width 99%!important
        .title
          display block
          width 100%
          margin-bottom 0
          border-radius 0
          border-left 0
          border-right 0
          border-top 0
        .body
          width 90%
          display block
          margin grid 0
          min-height 40px
      .post.head
        padding-top (grid/2)
      .post
        position relative
        clear both
        margin-right (grid*4)
        padding-top (grid*2)
        .breadcrumb
          margin-bottom (grid*2)
          span, em
            display none
        .profile
          width 50px
          height 40px
        img
          max-width 100%
        .title
          margin 0 0 (grid/2) 0
          font-size 1.5em
        .title, .user
          text-transform capitalize
        .body
          margin (grid/2) 0 grid 0
          clear both
        .actions
          opacity 0
          letter-spacing -10px
          margin-top (grid+2)
          margin-bottom (grid+2)
          line-height 15px
          font-size .9em
          a
            margin-right grid
            display inline
          .edit
            display none
        .comment
          position relative
          width 250px
          .body
            height 65px
            margin-bottom grid
          .submit
            position absolute
            z-index 5
            top grid
            right grid
      .page-loaded:last-child, #listview div[data-infinity-pageid]
        padding-bottom (grid*4) !important
      .post:hover
        .actions
          opacity 1
          letter-spacing 0
          transition opacity .3s, letter-spacing .09s
      .children
        .children
          margin-left (grid*3)
          .body
            padding-top (grid/2)
          .user, .date
            display inline
            font-size .87em
          .date
            margin-left (grid/2)
          .profile
            width 40px
            height 32px
//}}}

#paginator, #order
  position relative
  box-sizing border-box
  padding (grid) (grid) (grid*7) (grid*2)
  text-align center
  overflow-y scroll
  display none
  height 109px
  margin 0
  list-style none
  li
    font-size .8em
    padding 0 0 1px 0
    margin 0 0 5px 0
.indicator
  top 21px
  position absolute
  left 0
  width 140px
  height 1px

html.search
  #left_content
    .hits
      h2.title
        font-size 1em
        text-overflow ellipsis
        max-height 20px
        overflow hidden

