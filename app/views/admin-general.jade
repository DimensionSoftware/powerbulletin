analytics = unescape(site.config.analytics)
form.onclick-submit.no-focus(action="/resources/sites/#{siteId}", method="put")
  fieldset
    label(for='name') Title
    input(id='name', class='name', name='name', type='text', value=site.name)
    .break
    label(for='posts_per_page') Replies 
      small per page
    input(id='posts_per_page', placeholder='30', class='posts-per-page', name='postsPerPage', type='text', value='30', maxlength=4)
    .note Default applies to Profile &amp; Forum pages
    .break
    label(for='invite_only') Invite Only
    .box
      input.stylish.save#invite_only(type='checkbox', value='checked', name='inviteOnly', checked=site.config.inviteOnly)
      label.switch-control(for='invite_only')
        .switch
    .note Disallow the public from registering - 
      a.mutant(href='/admin/invites') Invites
    .break
    .break
    input.collapse(id='seo', type='checkbox')
    label(for='seo')
      h4 SEO Options
      .dialog
        label(for='social') Social
        .box
          input.stylish.save#social(type='checkbox', value='checked', name='social', checked=site.config.social)
          label.switch-control(for='social')
            .switch
        .note Embed share links for Facebook, Twitter &amp; Google+
        .break
        label(for='private') Privacy
        .box
          input.stylish.save#private(type='checkbox', value='checked', name='private', checked=site.config.private)
          label.switch-control(for='private')
            .switch
        .note Hide content from search engines &amp; the public
        .break.double
        label(for='keywords') Keywords
        textarea.save(id='keywords', name='metaKeywords')= site.config.metaKeywords
        .note Separate meta keywords with commas
        .break
        label(for='analytics') Analytics
        textarea.save(id='analytics', name='analytics')= analytics
        .note Paste Javascript code above, excluding &lt;script&gt; tags
        .break
    div
    input.collapse(id='lookandfeel', type='checkbox')
    label(for='lookandfeel')
      h4 Look &amp; Feel
      .dialog
        label(for='theme') Theme
        select(id='theme', name='theme')
          option(disabled=true, selected=true) - Choose a Theme -
          each t in themes
            option(value=t.id)= t.name
        .break
        fieldset
          - var ct = site.config.colorTheme ? site.config.colorTheme : {}
          label(for='light') Solid Light
          input.color-theme(id='light', name='colorTheme[light]', type='text', value=ct.light, placeholder='#4CCFEA')
          label(for='lighta') Light 
            small w/ Alpha
          input.color-theme(id='lighta', name='colorTheme[lighta]', type='text', value=ct.lighta, placeholder='rgba(230,245,255,.7)')
          label(for='dark') Solid Dark
          input.color-theme(id='dark', name='colorTheme[dark]', type='text', value=ct.dark, placeholder='#3199B0')
          label(for='dark_text') Dark Text
          input.color-theme(id='dark_text', name='colorTheme[dark_text]', type='text', value=ct.dark_text, placeholder='#3199B0')
          label(for='tint_color') Tint color 
            small w/ Alpha
          input.color-theme(id='tint_color', name='colorTheme[tint_color]', type='text', value=ct.tint_color, placeholder='rgba(240,240,240,0.65)')
        label(for='style') Custom Style
        textarea.save(id='style', name='style')= site.config.style
        .note Paste
          a(href='http://www.w3schools.com/cssref/', target='_blank') CSS
          | or 
          a(href='http://learnboost.github.io/stylus/', target='_blank') Stylus
          | code in above
        .break

    .domains
      input.collapse(id='domains', type='checkbox')
      label(for='domains')
        h4 Domains
        .dialog
          .break
          .domain
            input#custom_domain(type='text', placeholder='Custom-Domain.com')
            button#add_custom_domain Add
            span.q ?
              .message
                h5 Add your own domain
                p Purchase from your favorite registrar and point to
                  b 50.116.30.21
                p For help, contact 
                  a(href='mailto:support@powerbulletin.com') support@powerbulletin.com
          .break
          p Enable users to login from the respective social network
          select(id='domain', name='domain')
            option(disabled='disabled') - Select a Domain -
            each d in site.domains
              option(value=d.id)= d.name
          .break
          fieldset
            img(src="#{cacheUrl}/images/facebook_32.png")
            legend
              a(href="https://developer.facebook.com/", target="_blank", title="What is this?") Facebook
            label(for="facebook_client_id") ID
            input.first(id="facebook_client_id", type='text', name='facebookClientId', placeholder='Facebook API ID ...',
            value=site.config.facebookClientId)
            label(for="facebook_client_secret") Secret
            input(id="facebook_client_secret", type='text', name='facebookClientSecret', placeholder='Facebook secret ...',
            value=site.config.facebookClientId)
          fieldset
            img(src="#{cacheUrl}/images/twitter_32.png")
            legend
              a(href="https://dev.twitter.com/", target="_blank", title="What is this?") Twitter
            label(for="twitter_key") Key
            input.first(id="twitter_key", type='text', name='twitterConsumerKey', placeholder='Twitter API key ...',
            value=site.config.twitterConsumerKey)
            label(for="twitter_secret") Secret
            input(id="twitter_secret", type='text', name='twitterConsumerSecret', placeholder='Twitter API secret ...',
            value=site.config.twitterConsumerSecret)
          fieldset
            img(src="#{cacheUrl}/images/google_32.png")
            legend
              a(href="https://code.google.com/apis/console/", target="_blank", title="What is this?") Google+
            label(for="google_key") Key
            input.first(id="google_key", type='text', name='googleConsumerKey', placeholder='Google+ API key ...', value=site.config.googleConsumerKey)
            label(for="google_secret") Secret
            input(id="google_secret", type='text', name='googleConsumerSecret', placeholder='Google+ API secret ...',
            value=site.config.googleConsumerSecret)
            //-input(type='hidden', name='csrf', value=csrf)
    button(type='submit', value='Save') Save
    input(type='hidden', name='action', value='general')
a.menu-link.mutant(href='/admin/menu') Continue to Menu &rarr;
