mixin forumOptions(forums, prefix)
  each f in forums
    option(value=f.id)= prefix + f.title
    mixin forumOptions(f.forums, '-')

.hits
  h3 Filter your Search
  #facets
    .facet
      .facet-title Hits by Forum
      each forum in facets.forum
        a.mutant.facet-hit(href=forum.uri) #{forum.title} (#{forum.hitCount})

  #query_filters
    div
      label
        h4 Forum
        select(name='forum_id')
          option(value='') All Forums
          mixin forumOptions(menu, '')

    div
      label
        h4 Time Period
        select(name='within')
          option(value='') Any Time
          option(value='day') Within Last Day
          option(value='week') Within Last Week
          option(value='month') Within Last Month
