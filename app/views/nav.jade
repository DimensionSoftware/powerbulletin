
mixin forum(f, i)
  a(href=f.slug) != f.title
  each sf,ii in f.forums
    mixin subforum(sf, f, ii)

mixin subforum(sf, i)
  .subforum(id="subforum_#{sf.id}", class=(i % 2) ? 'odd' : 'even')
    span.title= sf.title

//- main
//- ---------
each f,i in forums
  mixin forum(f, i)

