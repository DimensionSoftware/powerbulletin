
mixin forum(f, i)
  h3.title Forums
    //-a.mutant(href=f.slug)= f.title
  if f.forums
    .forum(class="#{f.classes || ''} forum-#{activeForumId}")
      each sf,ii in f.forums
        mixin subforum(f, sf, ii)

mixin subforum(f, sf, i)
  //-.subforum(class="#{(i % 2) ? 'odd' : 'even'}")
  a.title(href="#{sf.slug}")= sf.title

