html
  head
    if this.title
      title= title
    if this.meta_description
      meta(name='description',content=meta_description) 
    if this.meta_keywords
      meta(name='keywords',content=meta_keywords.join(', '))
    if this.meta_zipcode
      meta(name='zipcode',content=meta_zipcode)
    meta(http-equiv='X-UA-Compatible',content='IE=EmulateIE9,chrome=1')
    meta(name='robots',content='index, follow')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    meta(name='viewport', content='user-scalable=0, initial-scale=1, maximum-scale=1, width=device-width')

    //- links first
    link(href='/images/favicon.ico',rel='shortcut icon',type='image/x-icon')
    link(href='/images/apple-touch-icon.png', rel='apple-touch-icon')
    link(href='/images/apple-touch-icon-72x72.png', sizes="72x72", rel='apple-touch-icon')
    link(href='/images/apple-touch-icon-114x114.png', sizes="114x114", rel='apple-touch-icon')
    if this.css_files
      for url in css_urls
        link(rel='stylesheet',type='text/css',href=url)

    //- the only .js in our <head> next
    |<script type="text/javascript">
    |  var head_conf = { screens:[320, 480, 640, 768, 800, 900, 1024, 1280, 1440, 1680, 1920] };
    |</script>
    script(type='text/javascript', src="#{cache_url}/js/head.min.js")
    if this.js_urls
      |<script type="text/javascript">
      |  head.js.apply(head, !{JSON.stringify(js_urls)});
      |</script>

