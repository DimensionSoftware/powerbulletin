!!! 5
html
  head
    if this.title
      title= title
    if this.meta_description
      meta(name='description',content=meta_description) 
    if this.meta_keywords
      meta(name='keywords',content=meta_keywords.join(', '))
    if this.meta_zipcode
      meta(name='zipcode',content=meta_zipcode)
    meta(http-equiv='X-UA-Compatible',content='IE=EmulateIE9,chrome=1')
    meta(name='robots',content='index, follow')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    meta(name='viewport', content='user-scalable=0, initial-scale=1, maximum-scale=1, width=device-width')

    //- links first
    link(href="#{cache_url}/images/favicon.ico",rel='shortcut icon',type='image/x-icon')
    link(href="#{cache2_url}/images/apple-touch-icon.png", rel='apple-touch-icon')
    link(href="#{cache3_url}/images/apple-touch-icon-72x72.png", sizes="72x72", rel='apple-touch-icon')
    link(href="#{cache4_url}/images/apple-touch-icon-114x114.png", sizes="114x114", rel='apple-touch-icon')

    if css_urls
      for obj in css_urls
        link(rel='stylesheet',type='text/css',href=obj.url)

    //- the only .js in our <head> 
    if cvars.env == 'development'
      script(type='text/javascript', src="#{cache5_url}/local/head-0.99.load.min.js") //- offline
    else
      script(type='text/javascript', src="//cdnjs.cloudflare.com/ajax/libs/headjs/0.99/head.load.min.js")
    if js_urls
      |<script type="text/javascript">
      |  head.js.apply(head, !{JSON.stringify(cvars.base_js_urls.concat(js_urls))});
      |</script>

  body
    img#plax.bg.plax(src="#{cache_url}/images/background.jpg", data-xrange='40', data-invert='true')
    header
      .container
        block header

    section.user-profile
      block user-profile
      .scroll-to-top TOP

    section.content
      .container
        block content-stream

    footer#chat-drawer.scroll-to-top
      block footer

