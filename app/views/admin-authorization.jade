.resizable
  form(action="/resources/admin/authorization", method="put")
    fieldset
      legend Facebook
      label(for="facebook_client_id") ID
      input(id="facebook_client_id", name='facebookClientId', placeholder='Facebook API ID ...', value=auth.config.facebookClientId)
      label(for="facebook_client_secret") Secret
      input(id="facebook_client_secret", name='facebookClientSecret', placeholder='Facebook secret ...', value=auth.config.facebookClientId)
    fieldset
      legend Twitter
      label(for="twitter_key") Key
      input(id="twitter_key", name='twitterConsumerKey', placeholder='Twitter API key ...', value=auth.config.twitterConsumerKey)
      label(for="twitter_secret") Secret
      input(id="twitter_secret", name='twitterConsumerSecret', placeholder='Twitter API secret ...', value=auth.config.twitterConsumerSecret)
    fieldset
      legend Google+
      label(for="google_key") Key
      input(id="google_key", name='google-key', placeholder='Google+ API key ...', value=auth.config.googleConsumerKey)
      label(for="google_secret") Secret
      input(id="google_secret", name='googleConsumerSecret', placeholder='Google+ API secret ...', value=auth.config.googleConsumerSecret)
      //-input(type='hidden', name='csrf', value=csrf)
      input.button(type='submit', value='Save')
