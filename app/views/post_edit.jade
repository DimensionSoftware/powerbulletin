
mixin post-edit(p)
  .post-edit(id="post_edit_#{p.id}")
    form#edit_post_form(action="/resources/posts/#{p.id}/edit", method='get')
      //-label(for="post_title") Title
      input#post_title.title(name='title', type='text', placeholder='Title', value=p.title)
      textarea.body= p.body
      input(type='hidden', name='csrf', value=p.csrf)
      input.button(type='submit', value='Save')
      input.button.cancel(type='button', value='Cancel', onclick="window.history.go(-1)")
    .preview

if typeof(post) !== 'undefined'
  mixin post-edit(post)
