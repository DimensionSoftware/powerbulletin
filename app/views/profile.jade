
#handle.handle(title='Toggle') &lt;

.container
  h1 Profile

  .profile(data-user-id="#{profile.id}")
    .avatar
      if profile.photo
        if profile.photo.match(/^http/)
          img(src="#{profile.photo}")
        else
          img(src="#{cache_url}/#{profile.photo}")
      else
        img(src="#{cache_url}/images/profile.jpg")

  ul
    li.since Joined #{profile.created_human}
    li.count #{profile.human_post_count} #{profile.post_count == 1 ? "post" : "posts"}
