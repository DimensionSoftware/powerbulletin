.MenuSummary
  margin-top grid
  margin-bottom (grid*5)
  table
    th
      text-align left
      color dark_text
      border-bottom 1px solid #e4e4e4
      padding grid
      font-size 1.1em
      font-weight 400
    .first
      min-width 400px
    tr
      border-bottom 1px solid #e4e4e4
      &:hover
        color #000
      &:nth-child(odd)
        background-color tint_color
      &:first-child
        background-color inherit
      td
        padding (grid - 2)
        vertical-align top
      .body, .username
        margin 0 3px
      .body
        font-size 1.2em
        font-weight 400
      .username
        position relative
        margin-left grid
        color dark_text
        text-transform capitalize
        &:before
          content '-'
          position absolute
          left -6px
      .title
        font-weight 500
        font-size 1.1em
        max-height 1.3em
        overflow hidden
        text-overflow ellipsis
        text-transform capitalize
        font-weight 400
      .description
        font-weight 300
        font-size .9em
        color #666
        display block
      .last-post
        font-size .9em
      .threads, .posts
        color #666
