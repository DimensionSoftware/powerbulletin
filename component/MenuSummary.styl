.MenuSummary
  padding 7px 20px 20px 20px
  margin grid -25px (grid*5) -25px
  border-radius 8px
  background-color #fff
  table
    width 100%
    th
      text-align left
      color dark_text
      padding grid
      font-size 1.1em
      font-weight 400
    .first
      min-width 300px
    tr
      position relative
      border-bottom 1px solid tint_color
      transition all .1s ease-out .1s
      &:first-child:hover
        background-color transparent
      &:last-child
        border-bottom none
      &:hover
        color #000
        background-color tint_color
        transition all 0
      td
        padding (grid - 2)
        vertical-align top
      .body, .username
        margin 0 3px
      .body
        font-size 1.2em
        font-weight 400
      .username
        position relative
        margin-left grid
        color dark_text
        text-transform capitalize
        &:before
          content '-'
          position absolute
          left -6px
      .title
        font-weight 500
        font-size 1.1em
        max-height 1.3em
        overflow hidden
        text-overflow ellipsis
        text-transform capitalize
        font-weight 400
      .description
        font-weight 300
        font-size .9em
        color #666
        display block
      .last-post
        font-size .9em
        .date
          position relative
          font-style italic
          color #666
          margin-left 8px
          &:before
            content '-'
            position absolute
            left -6px
      .threads, .posts
        color #666
