.MenuSummary
  margin-top grid
  ul
    margin 0
    padding 0
    list-style-type none
    .row
      font-weight 300
      min-width 300px
      float left
      .title
        font-weight 500
        font-size 1.1em
        text-transform capitalize
      .description
        font-weight 200
        color #999
    .submenu
      border-top 1px solid #eee
      font-size .75em
      margin (grid/2) grid (grid*2) 0
      padding-top grid
      float left
      overflow hidden
      transition max-height .1s ease-out .3s
      //&:hover
      //  max-height 999px
      //  transition max-height .2s ease-out .5s
      .row
        max-width 250px
        overflow hidden
        text-overflow ellipsis
        a
          display inline-block
          padding 2px 10px
          margin 1px 0
          border-radius 50px
        &:hover
          > a
            color #fff
            background-color light
            animation-name none
        .title
          font-weight 300
        .indent
          margin 0 0 (grid*4) (grid*2)
