.MenuSummary
  clear both
  .container
    padding 7px 20px 20px 20px
    margin grid -25px (grid*5) 0
    border-radius 8px
    background-color #fff
    table
      width 100%
      th
        text-align left
        color dark_text
        padding 2px 0 5px 8px
        font-size .9
        font-weight 500
      .first
        min-width 300px
      tr
        position relative
        border-bottom 1px solid tint_color
        transition all .1s ease-out .1s
        .title:before, .last-post:before, .threads:before, .posts:before
          content ''
          opacity 0
          z-index 5
          height 1px
          position absolute
          left 0
          right 4%
          bottom -1px
          box-shadow 0 0 3px light
          transition .1s ease-out .05s
        &.item-forum:hover
          .name
            padding 2px 9px
            margin-left -9px
            background-color light
            border-radius 8px
            color #fff
            transition none
        &.item-forum
          .name
            transition all .05s ease-out .03s
        td
          padding (grid - 2) grid
          vertical-align top
        .title
          position relative
          font-weight 500
          font-size 1.1em
          max-height 1.3em
          font-weight 400
          a
            overflow hidden
            text-overflow ellipsis
            text-transform capitalize
        .description
          font-weight 300
          font-size .9em
          color #666
          min-height 25px
          display block
        .last-post
          position relative
          font-size .9em
          padding 8px 25px 8px 8px
          &:first-letter
            text-transform uppercase
          .body, .username
            margin 0 3px
          .username
            position relative
            margin-left grid
            color dark_text
            text-transform capitalize
            &:before
              content '-'
              position absolute
              left -6px
          .date
            position relative
            font-style italic
            font-size .9em
            color #999
            margin-left 8px
            &:before
              content '-'
              position absolute
              left -6px
        .threads, .posts
          position relative
          color #666
