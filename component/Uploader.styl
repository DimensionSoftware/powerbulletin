@keyframes move
  0%
    background-position 0 0
  100%
    background-position 50px 50px

// Uploader must be embedded inside a <form>, so prefix:
form
  .Uploader
    position relative
    .note
      left 153px!important
    &:hover
      .cancel
        opacity 1
        transition none

    // <drag-n-drop & upload widget>
    .progress
      position absolute
      overflow hidden
      text-align right
      font-size .7em
      line-height 2.6em
      letter-spacing 0
      text-indent -5px
      z-index 10
      top 0
      bottom 1px
      left 0
      width 0
      height 100%
      max-width 99%
      color text_color
      border-radius 3px
      background-image linear-gradient(to right, dark_theme_color, theme_color)
      //background-image linear-gradient(center bottom, dark_theme_color 37%, theme_color 69%)
      box-shadow inset 0 -4px 8px rgba(255,255,255,0.4)
      transition width .15s ease-in
      // stripe
      &:after
        content ''
        position absolute
        background-image linear-gradient(-45deg, rgba(255, 255, 255, .2) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, .2) 50%, rgba(255, 255, 255, .2) 75%, transparent 75%, transparent)
        left 0
        right 0
        top 0
        bottom 0
        background-size 50px 50px
        overflow hidden
        animation move 2s linear infinite
    .cancel
      opacity .85
      transition .2s ease-out .3s
      position absolute
      top -10px
      right -7px
    label
      text-transform capitalize
      cursor pointer
      position relative
      display inline-block
      .button
        margin -47px 0 7px 150px!important
        padding 0
        width 85px!important
        height 35px!important
        span
          color lighten(colored_text, 25%)
          font-weight 400
          font-size 15px
          line-height 35px
          &:hover
            color colored_text
      .inline-text
        display none
        position absolute
        top -5px
        left 248px
        width 120px
        overflow hidden
        text-overflow ellipsis
        font-size .9em!important
        text-transform capitalize
        > small
          text-transform uppercase
          font-size .75em
      .inline-preview
        position absolute
        z-index 10
        display block
        background-color #fafafa
        border 1px solid #ccc
        outline none
        height 37px
        max-width 260px
        left 248px
        top 0
        border-radius 3px
        // hide close for empty backgrounds
        &[src*='transparent'] ~ .close
          opacity 0!important
          height 0!important
          width 0!important
          border none!important
          padding 0!important
        // magnify these on hover--they have backgrounds
        &[src*='/sites/']
          transition all .2s ease-in .2s
        &[src*='/sites/']:hover
          border 1px solid darken(theme_color, 20%)
          box-shadow 0 0 1px theme_color
          background-color #fff
          transform scale(1.5)
          transition all .01s ease-out .5s
    .upload
      display none
    .button
      width 350px!important
      margin 14px 0 0 140px!important
