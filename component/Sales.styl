.Sales
  text-align center
  margin-top 235px

  //{{{ Intro (below header)
  #imagine
    position relative
    font-size 1.75em
    letter-spacing 1px
    font-weight 300
    .logo-icon
      background-image url(cache-url + '/images/pb_icon_logo.png')
      background-repeat no-repeat
      margin 55px auto 0 auto
      width 81px
      height 96px
      opacity 0
      transform rotate(90deg)
  #register_top
    margin-top 55px
    opacity 0
  #features
    font-style italic
    font-weight 200
    color #aaa
    margin 70px 0 0 -30px
    font-size 1.25em
  h2
    font-size 1.45em
    font-weight 400
    color #888
  //}}}
  //{{{ Logo
  .logo
    position fixed
    top 0
    left 100px
    z-index 0
    margin-top 100px
    text-align left
    h1
      font-size 3em
      font-style italic
      font-weight 200
      margin 0
      color #666
      letter-spacing -1px
      text-shadow 1px 1px 1px #ddd
      b
        letter-spacing 0
        font-style normal
        margin-left 6px
        font-weight 600
        color #444
    em
      display block
      margin-top 23px
      text-transform uppercase
      font-weight 200
      font-style normal
      font-size 1em
      letter-spacing 3px
      color #999
  //}}}
  //{{{ Sections
  section.bg
    position absolute
    height 500px
    z-index 1
  section.first
    margin-top 900px
    background-image url(cache-url + '/images/navigation.jpg')
    background-repeat none
  section.first + section
    margin-top 300px
  section.second
    margin-top 1700px
    background-image url(cache-url + '/images/responsiveness.jpg')
  section.second + section
    margin-top 300px
  section.third
    margin-top 2400px
    background-image url(cache-url + '/images/real_time_flow.jpg')
  section.third + section
    margin-top 300px
  section.fourth
    margin-top 3200px
    background-image url(cache-url + '/images/live_support.jpg')
  section.fourth + section
    margin-top 300px
  section
    position relative
    z-index 2
    display block
    top 0
    left 0
    height 300px
    width 100%
    overflow hidden
    background #fff
  section.last
    position absolute
    bottom 400px
    top auto
    min-height 100px
    height 210px
    article
      width 530px
      h3
        left 85px
      h3::after
        display none
      #register_bottom
        position absolute
        bottom 10px
  //}}}
  //{{{ FAQ
  section.faq:hover
    box-shadow 0 -1px 0px 0px #777 inset,0 6px 12px 5px #eee inset
    transition all .2s ease-out
    h3
      color #222
      transition all .1s ease-out
  section.faq
    position absolute
    bottom 0
    top auto
    z-index 0
    min-height 100px
    height 350px
    background #ccc
    background-image linear-gradient(top, #ddd 10%, #fff 100%)
    margin 0
    padding 0
    border-top 1px solid #ddd
    box-shadow 0 -1px 0px 0px #666 inset,0 6px 12px 3px #eee inset
    article
      width 800px
      margin 55px auto 0 auto
      h3
        color #555
      menu
        text-align left
        float left
        list-style none
        font-size .8em
        width 45%
        h4
          margin 15px 0
          text-transform capitalize

  section
    article
      width 600px
      margin 100px auto 0 auto
      h3
        position relative
        letter-spacing 2px
      h3::after
        content ''
        position absolute
        top 38px
        left 36%
        width 200px
        height 1px
        background #ddd
        border-bottom 1px solid #ccc
        border-radius 100px / 1px
        box-shadow 0 0 3px 0px #ddd
      h4
        text-transform uppercase
      p
        margin auto
        color #555
        font-size 1.1em
        a
          color #222
          margin 0 9px
  //}}}
//{{{ Footer
footer:hover
  bottom -43px
  height 42px
footer
  z-index 101
  opacity 0
  position fixed
  top auto
  bottom -45px
  height 40px
  left auto
  right -20px
  width 100px
  background #555
  border-radius 30px / 20px
  border 1px solid #222
  .onclick-scroll-top:hover
    color #fff
  .onclick-scroll-top:hover::before
    border-bottom 8px solid #fff
    top 2px
    transition all .1s ease-out
  .onclick-scroll-top::before
    position absolute
    content ''
    border 4px solid transparent
    border-bottom 6px solid #ddd
    top 4px
    right 49px
    transition all .2s ease-out
  .onclick-scroll-top
    cursor pointer
    color #eee
    position absolute
    top 0
    right 20px
    font-size .8em
    letter-spacing 2px
    padding 0 15px 0 30px
