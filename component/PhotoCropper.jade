- var cacheBuster = Math.random().toString().replace(/\\./, '')
.upload
  h1= title
  div
    img(src="#{cacheUrl}#{photo}?#{cacheBuster}")
  div
    form(method="POST", action="#{endpointUrl}", enctype="multipart/form-data")
      div.button 
        span Upload Image
        input(type="file", name="avatar")

.crop
  h1= title + " (crop)"
  div
    img(src="#{cacheUrl}#{photo}?#{cacheBuster}")
  div.button
    span Crop Image
