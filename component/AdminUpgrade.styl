.AdminUpgrade
  fieldset:hover
    border 1px solid #ddd
    border-radius 5px / 3px
    h2
      color #666
  fieldset
    margin 5px 25px 25px 0
    padding 15px 5px 20px 23px
    border 1px solid #eee
    float left
    height 155px
    h1, h2, h3, p
      margin 0
    h2
      margin 22px 0 8px 0
      letter-spacing 2px
      color #777
      font-weight 200
      font-size 2em
    h2:first-child
      margin-top 12px
    .green
      color green
    .green span
      font-size 1.3em
      padding-left 5px
    p
      margin-bottom 10px
      max-width 500px
