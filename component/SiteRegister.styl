.SiteRegister
  width 600px
  position relative
  margin 0 auto
  .SiteRegister-errors
    bottom 96px
    left 40%

  text-align center
  h1
    margin 0
  em
    color #555
  fieldset
    border 0
    .hostname
      position absolute
      z-index 10
      top 34px
      left 27px
      color #999
      font-size 30px
      vertical-align middle
    .SiteRegister-subdomain
      float left
      font-size 35px
      padding 14px
      width 467px
    .SiteRegister-available
      position absolute
      bottom 19px
      right 215px
      z-index 10
      font-weight bold
      font-size 1.2em
      transform rotate(-20deg)

    .SiteRegister-create button:enabled:hover
      animation-name none
    .SiteRegister-create button:enabled:active, .SiteRegister-create button:enabled:focus
      transform translateY(0)!important
    .SiteRegister-create
      position absolute
      right 82px
      top -1px
      z-index 10
      button
        height 66px
    .success
      color green
      display none
    .error
      color red
      display none

    .SiteRegister-available.success
      display inline
      .success
        display inline
    .SiteRegister-available.error
      display inline
      .error
        display inline
