h1 My Communities
if sites.length
  a.new.top.onclick-first-site(href='#', title='Start a new community!') +
    b New
  ul.communities
    each s in sites
      li
        h2= s.name
        .users
          span.count= s.user_count
          | &nbsp;registered user#{s.user_count == 1 ? '' : 's'}

        ul.domains
          each d in s.domains
            li
              a(href="https://#{d}/#once", target="_blank")= d
              | &nbsp;(
              a(href="https://#{d}/#once-admin", target="_blank") admin
              | )
  p.new
    a.onclick-first-site(href='#') Start a new community
      i ! &nbsp;
else
  p
    | Choose a name for your community; 
    small
      i anything you wish!
    br
    b YOUR-NAME
    |.powerbulletin.com will be created.
    br
    small Point additional domains anytime later with your 
      b /admin
      |.
    br
    br
    a.onclick-first-site(href='#') Click to Get Started
      i !

if memberships.length
  h3 You're #{sites.length ? ' also ' : ''} a member of
  ul.memberships
    each m in memberships
      li
        a(href="https://#{m.domain}/#once", target="_blank") #{m.name}
          small @ 
          | #{m.domain}
