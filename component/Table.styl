.Table
  margin 20px 0
  padding 10px 20px
  border-radius 10px
  thead
    th
      text-transform uppercase
      padding 3px 0 10px 0
      font-weight 500
      text-align left
      color #333
  tbody
    tr
      color #444
      transition .1s ease-in
      border-bottom 1px solid transparent
      &:hover
        color #000
        background-color rgba(theme_color, .05)
        border-bottom 1px solid rgba(theme_color, .1)
        transition none
  > .Paginator
    margin-top 20px
