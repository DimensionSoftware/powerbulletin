.Table
  margin 20px 0
  padding 10px 20px
  border-radius 10px
  background linear-gradient(to top, #fff 10px, #f2f2f2 100%)
  thead
    th
      text-transform uppercase
      padding 3px 0 10px 0
      font-weight 200
      color #333
  tbody
    tr
      color #444
      transition .2s ease-out
      border-bottom 1px solid transparent
      &:hover
        color #000
        background-color #fafafa
        border-bottom 1px solid #eee
        transition none
      
  > .Paginator
    margin-top 20px
