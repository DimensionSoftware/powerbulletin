.Editor
  width 100%
  min-width 800px
  min-height min_height
  height 100%
  position relative
  border-top 1px solid border_color
  .tooltip
    top 5px
    bottom auto
    left 51%
    font-size 1.5em
  //{{{ Preview pane
  &.has-preview
  // - when the preview is visible
    .wmd-panel
      position absolute
      min-width 50%
      width 50%
      transition none
      &:after
        position absolute
        z-index 20
        content ''
        top 0
        bottom 0
        right 0
        background-color border_color
        width 1px
      .wmd-input
        width 98%
    .wmd-preview 
      position absolute
      bottom 0
      left 50%
      text-align left
      cursor default
      width 50%
      transition none
    .onclick-toggle-preview
      width 80px
      text-indent 2px
      &:after
        content 'Hide Preview'
  .onclick-toggle-preview
    position absolute
    z-index 10
    right 0
    bottom 0
    height 22px
    width 55px
    padding 4px 12px
    color #fff
    font-size .95em
    background-color rgba(0,0,0,.3)
    border-left 1px solid #999
    border-top 1px solid #999
    border-top-left-radius 8px
    cursor pointer
    transition all .4s ease-out .1s
    &:hover
      background-color rgba(0,0,0,.5)
      border-left 1px solid #555
      border-top 1px solid #555
      transition none
    &:after
      right 20px
      position absolute
      content 'Preview'
  //}}}
  //{{{ <PageDown Editor>
  blockquote 
    border-left 2px dotted #888
    padding-left 5px

