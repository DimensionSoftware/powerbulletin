    .wrapper
      position absolute
      top 37px
      right 8px
      bottom 0
      left 0
      padding 0
      .wmd-input 
        position absolute
        top 0
        left 0
        right 0
        min-width 100%
        min-height 100%
        background bg_color
        padding 0 0 0 8px
        bottom -4px
        resize none
        transform none
        border none
        &:focus, &:hover
          background bg_color
          box-shadow none
          border none
  .wmd-preview 
    overflow scroll
    float right
    width 0
    min-height min_height
    height 100%
    color #333
    background-color bg_color
    border-top-right-radius 3px
    border-bottom-right-radius 3px
