.Homepage
  .homepage
    h2
      font-weight 200
      font-size 2em
      margin 2px 0 4px 5px!important
      padding-bottom 15px
      text-transform capitalize
      float left
    .moderation-log
      position absolute
      right 0
      z-index 9
      min-height 25px
      font-weight 300
      padding 2px 9px
      margin 3px 45px 8px 0
      a
        background-color #fff
        padding 3px 6px
        border-radius 2px
        color theme_color
        b
          margin-right 5px
      &:hover
        background-color theme_color
        border-radius 8px
        transition none
        a
          background-color transparent
          color #fff
    .social
      right 51px!important
