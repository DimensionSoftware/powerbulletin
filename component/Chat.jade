.header
  .profile
    .minimize(title=others[0].name)
      if others[0].photo.match(/^https?\:/) || others[0].photo.match(/\/\//)
        img(src=others[0].photo)
      else
        img(src="#{cacheUrl}/#{others[0].photo}")
  h2 #{others[0].name}
  .close.onclick-close(title='Close') X
.container
  .messages
    .load-more(style="display:none;") load more...

  .msg(style="display:none;")
    .body
    .from
      a.from-name.mutant
.footer
  form
    textarea(name="body")
