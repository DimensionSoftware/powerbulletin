        list-style none
        margin 0
        padding 0
        li:first-child .header
          margin-left 105px
        input[type='radio'] + label.header
          width 290px
          height 110px
          font-size 1.1em
          background-image linear-gradient(to top, #eee, #fcfcfc 60%)
          padding 8px
          margin 5px
          padding 15px 10px 25px 35px
          margin 20px
          box-shadow 1px 1px 2px 1px #ddd
          border-radius 10px
          font-weight 500
