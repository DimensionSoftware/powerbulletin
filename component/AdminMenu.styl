.AdminMenu
  .default
    display none
  .onclick-add
    margin 0!important
    width 80px!important
    left 0
    top -17px
    position absolute
  // left-side (menu)
  .col1
    width 313px
    position fixed
    top 100px
    padding-left 20px
    bottom 0
    margin-top 70px
    padding-bottom 50px
    overflow-y scroll
    .disclose 
      cursor pointer
      width 10px
      display none
    .sortable li.mjs-nestedSortable-collapsed > ol 
      display none
    .sortable li.mjs-nestedSortable-branch > div > .disclose 
      display inline-block
    .sortable li.mjs-nestedSortable-collapsed > div > .disclose > spanbefore 
      content '+ '
    .sortable li.mjs-nestedSortable-expanded > div > .disclose > spanbefore 
      content '- '
    .sortable
      color #aaa
      font-size .8em
      font-weight 100
      margin 20px 0
      li:hover
        .cancel
          opacity 1
      li::after
        content ''
        position absolute
        bottom 18px
        top 10px
        left -5px
        opacity 0
        width 1px 
      li.active::after
        left 1px
        background light
        opacity .7
        transition all .2s ease-out
      li::before
        content ''
        position absolute
        width 0%
        bottom 18px
        left 1px
        height 2px
        background light
      li.active::before
        width 55px
        transition width .2s ease-out .15s
      li.active > div > input
        font-weight bold
        color light
      li
        list-style-type disc
        cursor move
        position relative
        input
          width 200px
        .cancel
          position absolute
          z-index 10
          left 208px
          top 5px
          background radial-gradient(circle closest-corner at 45% 35%, #fff 40%, #ddd 100%)
      .row
        font-size 1.1em
        padding 8px
        border-right 0
        border-top 0
        border-left 0
        border-bottom 1px solid #eee
        color #333
    .placeholder
      outline 1px dashed #555
      box-shadow 0 0 0 -1px 1px dark
      margin -1px
      border-radius 3px
      height 20px

  // right-side (body/content)
  .col2
    display none
    margin-left 365px
    #forum_slug, #page_slug, #url
      font-size .8em
      padding 12px
      width 330px
    .has-dialog
      margin-top -45px
      transition margin-top .15s ease-out
      label.type, .option, .header
        display none!important
      .dialog
        visibility visible
        opacity 1
    fieldset
      padding-top 17px!important
      min-width 500px
      position relative
      .dialog
        visibility hidden
        opacity 0
      .type, .dialog
        position absolute
        left 0
      .options
        list-style none
        margin 0
        padding 0
        li:first-child .header
          margin-left 105px
        input[type='radio'] + label.header
          font-weight 400
          font-weight 600
          font-size 1.1em
        li
          float left
          > label
            width 95px
            cursor pointer
        li, input[type='radio']:checked + label
          font-weight bold
          font-size 1.05em
          color #000
        li, input[type='radio'] + label
          font-weight 400
          display inline-block
          font-size .98em
        li > div, input[type='radio']
          position absolute
          left 0
          top 10px
        input[type='radio']:checked ~ div
          display block
        input[type='radio'] ~ div
          display none
        input[type='radio']
          opacity 0
        .dialog
          position absolute
          top 75px
          left 0
          // drag-n-drop & upload widget
          label
            .button
              margin -21px 0 7px 140px!important
              padding 0
              width 85px!important
              height 35px!important
              span
                color #fff
                font-weight 400
                font-size 15px
                line-height 35px
          label[for='upload']
            position relative
            .background
              position absolute
              z-index 10
              display block
              background-color #fafafa
              border 1px solid #ccc
              outline none
              height 37px
              width 37px
              right -135px
              top 0
              border-radius 3px
              // magnify these on hover--they have backgrounds
              &[src*='/sites/']:hover
                border 1px solid light
                background-color #f8f8f8
                transform scale(5)
                transition all .15s ease-out .1s
          .upload
            display none
          .note
            left 144px!important
          .button
            width 350px!important
            margin 14px 0 0 140px!important
