.fancybox-inner
  background-image linear-gradient(to top, #fff 10px, #f2f2f2 100%)

.MiniSiteList
  background-color #fff
  border-color #f0f0f0
  border-bottom 1px solid #efefef
  margin 58px 20px 20px 20px
  padding 30px 50px
  position relative

  p, h1
    margin 0
    padding 0

  h1
    position absolute
    top -50px
    left 0
    line-height 1.5em
    letter-spacing 2px
    margin-bottom 20px
    font-weight 300
    font-style italic

  h2
    margin 2px

  .onclick-first-site
    font-size 1.2em

  .users
    font-size small
    margin 12px 0 5px 12px

  .domains
    margin 0 12px
    padding 0
    li
      font-size 1.1em
      color #bbb
      list-style none

.MiniSiteList > ul
  margin 0 28px
  list-style none

.MiniSiteList > ul > li
    margin-bottom 8px
    padding 8px
    color #333
