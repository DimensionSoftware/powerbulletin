.fancybox-inner
  background-image linear-gradient(to top, #fff 10px, #f2f2f2 100%)

.MiniSiteList
  background-color #fff
  border-color #f0f0f0
  border-bottom 1px solid #f6f6f6
  margin 58px 20px 30px 20px
  padding 30px 50px 10px 30px
  position relative
  max-width 600px
  p, h1
    margin 0
    padding 0

  .new
    position absolute
    right 8px
    bottom -30px
    font-weight 200
    font-size .75em
    a
      color #444
      transition all .4s ease-out .4s
      &:hover
        color #222
        text-shadow 0 0 1px light
        transition none
    &.top
      bottom auto
      top -36px
      b
        margin-left 5px

  h1
    position absolute
    top -50px
    left 0
    line-height 1.5em
    letter-spacing 2px
    margin-bottom 20px
    font-weight 300
    font-style italic

  h2
    margin 2px

  h3
    color #777
    font-size .95em
    margin 15px 0 5px 40px
    padding-top 5px
    border-top 1px solid #f4f4f4

  .onclick-first-site
    font-size 1.2em
    display block
    margin-bottom 30px

  .users
    font-size small
    margin 5px 0 0px 12px

  .domains
    margin 0 12px
    padding 0
    li
      font-size 1.1em
      color #ddd
      list-style none

.MiniSiteList > ul
  margin 0 28px
  list-style none

.MiniSiteList > ul > li
    margin-bottom 8px
    padding 8px
    color #333
    a:first-child
      padding 1px 8px 3px 8px
      margin-left -8px
      transition all .2s ease-out
      &:hover
        background-color light
        border-radius 4px
        color #fff
        transition none
.MiniSiteList > ul.memberships > li
  margin 0
  padding 0
  a
    margin 0 4px
    font-size .9em
    small
      font-size .65em
