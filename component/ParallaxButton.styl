.ParallaxButton
  margin 0
  overflow-y scroll
  font-family sans-serif
  font-size 16px
  perspective 350px

  button, button:hover
    position relative
    display inline-block
    padding 16px 16px
    border 0
    min-width 48px
    margin 10px
    font-size 24px
    font-weight bold
    background-color #aad1ee
    background-image radial-gradient(ellipse at top, rgba(255, 255, 255, 0.15) 50%, transparent)
    color #222
    transition transform 60ms linear
    transform-style preserve-3d
    transform translateZ(14px)
    cursor pointer
    user-select none

  button::before, button::after
    position absolute
    width 100%
    height 100%
    left 0
    top 0
    background #4098d9
    transform-origin 0% 0%

  button::before
    content ""
    height 14px
    background #6aafe1
    transform rotateX(-90deg)

  button::after
    content ""
    width 14px
    transform rotateY(90deg)

  button.top-half::before
    top auto
    bottom 0
    background #267ebf
    transform-origin 100% 100%
    transform rotateX(90deg)

  button.left-half::after
    left auto
    right 0
    transform-origin 100% 100%
    transform rotateY(-90deg)

  button:active
    transform translateZ(7px)

  @media screen and (min-width 0 \0)
    button::before, button::after
      display none

  x:-o-prefocus, button::before, button::after
    display none
