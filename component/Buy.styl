.fancybox-skin
  background-image linear-gradient(to top, #fff 10px, #f2f2f2 100%)
.Buy
  .clear
    clear both
  h1
    color #777
    letter-spacing 2px
    text-align center
    font-weight 200
    font-size 2em
    font-style italic
  h2
    color green
    font-weight 300
    font-size 1.2em
    b
      font-size 1.2em
      font-weight bold
  label
    display inline-block
    width 120px
  .right
    float right
  .cards
    margin-bottom 8px
    .amex
      background-image url(cache-url + '/images/amex.png')
    .discover
      background-image url(cache-url + '/images/discover.png')
    .visa
      background-image url(cache-url + '/images/visa.png')
    .mastercard
      background-image url(cache-url + '/images/mastercard.png')
    .mastercard, .visa, .discover, .amex
      display inline-block
      height 26px
      width 38px
      margin-right 5px
      float right
  .info
    padding 20px
    border 1px solid #f3f3f3
    border-radius 12px / 8px
    background-color #fff
    .Buy-checkout
      float right
      margin 20px 0 12px 0
      height 45px
      width 100%
    .Buy-card-number
      width 250px
      margin-bottom 8px
    .Buy-card-month
      margin-right 10px
    .Buy-card-year
      margin-left 10px
    .Buy-card-code
      height 15px
      margin-top 12px
      width 60px
    .Buy-card-expiration
      width 75px
