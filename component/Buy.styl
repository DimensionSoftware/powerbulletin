.fancybox-skin
  background-image linear-gradient(to top, #fff 10px, #f2f2f2 100%)
.Buy
  .clear
    clear both
  .error
    background rgb(255,240,240)!important
  h1
    color #777
    letter-spacing 2px
    text-align center
    font-weight 200
    font-size 2.5em
    font-style italic
  h2
    color green
    font-weight 300
    font-size 1.2em
    b
      font-size 1.2em
      font-weight bold
  label
    display inline-block
    width 120px
  .right
    float right
  .cards
    margin-bottom 8px
    .amex
      background-image url(cache-url + '/images/amex.png')
    .discover
      background-image url(cache-url + '/images/discover.png')
    .visa
      background-image url(cache-url + '/images/visa.png')
    .mastercard
      background-image url(cache-url + '/images/mastercard.png')
    .mastercard, .visa, .discover, .amex, .dinersclub
      display inline-block
      height 26px
      width 37px
      margin-right 5px
      float right
    .dinersclub
      background-image url(cache-url + '/images/dinersclub.png')
      width 40px
      height 27px
      margin-top -1px
  .info
    padding 20px
    border 1px solid #f3f3f3
    border-radius 12px / 8px
    background-color #fff
    .Buy-checkout
      float right
      margin 20px 0 12px 0
      height 45px
      width 100%
    .Buy-card-number
      width 275px
      margin-bottom 8px
    .Buy-card-month
      margin-right 10px
    .Buy-card-year
      margin-left 10px
    .Buy-card-code
      height 15px
      margin-top 12px
      width 60px
    .Buy-card-expiration
      width 75px
  .tooltip
    top -35px
    bottom auto
  .code:hover
    background-color #f3f3f3
    border 1px solid #f4f4f4
    .cvvinfo
      opacity 1
      height 85px
      padding 10px
      transition height .2s ease-in-out .2s, opacity .6s ease-in-out .1s
  .code
    font-weight bold
    font-style italic
    background-color #fafafa
    border 1px solid #f6f6f6
    padding 1px 4px
    border-radius 30px
    color green
    margin-left 6px
    font-size .8em
    cursor pointer
    position relative
    .cvvinfo
      border-radius 12px / 8px
      top -113px
      background-color #eee
      border 1px solid #ccc
      left -210px
      padding 0
      margin 0
      opacity 0
      height 0
      width 293px
      overflow hidden
      position absolute
      z-index 100
      img:first-child
        margin-right 8px
