.PostDrawer
  // has 2 states: reply & edit
  #action_wrapper
    position absolute
    left 0
    right 0
    top 1px
    text-align center
    z-index 25
    a
      margin 0 3px
    // default style show neither
    .in-reply, .in-edit
      cursor n-resize
      display none
      padding 0 8px
      border-bottom-right-radius 5px
      border-bottom-left-radius 5px
      background-color #f0f0f0
      max-width 450px
      max-height 23px
      overflow hidden
      text-overflow ellipsis
      #reply_to, #reply_by, #reply_by a, #reply_to a
        display inline
        overflow hidden
        text-overflow ellipsis
        text-transform capitalize
      #reply_by a
        display inline-block
        line-height .8em
    // show either state
    &.reply .in-reply
      display inline-block
    &.edit .in-edit
      display inline-block
pre,code
  background-color #f9f9f9
  font-size smaller
code
  display inline
  border none

footer
  .ui-resizable-n
    position absolute
    cursor ns-resize!important
    cursor row-resize!important
    top -3px
    height 10px
    &:hover:after
      content ''
      background-color theme_color
      opacity .6
      height 1px
      position absolute
      left 0
      right 0
      top 3px
  &.expanded
    .PostDrawer
      position absolute
      bottom 55px
      top 24px
      left 0
      right 0
      #editor + .save
        position absolute
        right 0
        z-index 36
        padding 6px 65px 5px
        bottom -41px
        border-bottom-right-radius 0
        border-bottom-left-radius 0
        margin-left -100px
        width 200px
      form
        position static!important
        .Uploader
          position absolute
          bottom -46px
          left -4px
          z-index 12
          &.has-attachment
            bottom -46px
            label:after
              display none
          .label
            position static
            cursor pointer
          .label, .note
            display none
            z-index 12px
          label:after
            content 'Drag & Drop or click to Browse'
            position absolute
            top -28px
            left 44px!important
            font-size .9em
            color #ccc
            font-weight 200
            width 200px
          .close
            z-index 10
            left 0
            top -43px
            padding 4px
          .inline-preview
            top auto
            height 28px
            bottom 3px
            left 5px
            background #ddd
            border 1px solid #ddd
          .inline-text
            top -26px
            right auto
            left 10px
            width 325px
          .button
            top 8px
            margin -37px 0 7px 48px !important
            height 23px!important
            border-radius 0
            .action
              display none
      #editor .center
        top 0
        .tooltip.small
          bottom auto
      .onclick-toggle-preview
        width 51px!important
      .has-preview
        .onclick-toggle-preview
          width 35px!important

@media screen and (max-width: 1100px)
  footer.expanded
    .post-container
      .PostDrawer
        bottom 42px
        #editor + button.save
          bottom -28px
        form
          .Uploader
            label:after
              display none
            .inline-preview
              bottom 12px
            .inline-text
              top 12px
      .in-reply
        margin-top 3px
        border-bottom-left-radius 0!important
        border-bottom-right-radius 0!important
        border-top-left-radius 3px
        border-top-right-radius 3px
      #editor
        margin-top 25px

@media screen and (max-width: 800px)
  footer.expanded
    .post-reply.onclick-footer-toggle
      top -3px
      left 3px!important
    .onclick-scroll-top
      right 3px
      top -3px

    .post-container
      left 0!important
      #editor
        & + .save
          margin-left 0
