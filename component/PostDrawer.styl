pre,code
  background-color #f9f9f9
  font-size smaller
code
  display inline
  border none

footer
  .ui-resizable-n
    position absolute
    cursor ns-resize!important
    cursor row-resize!important
    top -3px
    height 10px
    &:hover:after
      content ''
      background-color theme_color
      opacity .6
      height 1px
      position absolute
      left 0
      right 0
      top 3px
  &.expanded
    .PostDrawer
      position absolute
      bottom 14px
      top 24px
      left 0
      right 0
      #editor + .save
        position absolute
        z-index 25
        padding 5px 55px
        bottom 0
        right 44%
      .onclick-toggle-preview
        position fixed!important
        height 17px!important
        width 65px!important
      .has-preview
        .onclick-toggle-preview
          width 95px!important
