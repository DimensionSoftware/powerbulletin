body
  margin 0
  height 2800px
  position relative

body.scrolled
  header
    border-bottom 0
    background #eee
  footer::before, footer:hover::before
    border-top none
    box-shadow none
  footer
    opacity 1
    bottom -20px
    box-shadow none
    transition all .4s ease-out
header
  position fixed
  top 0
  left 0
  width 100%
  height 45px
  opacity 0.75
  text-align right
  z-index 20!important
  background #fff
  ul
    list-style none
    margin 0 50px
    li
      display inline-block
      margin-top 12px
      margin-right 45px
      font-weight 200
      cursor pointer
      a:hover
        color #111
        transform scale(1.02)
        transition color .2s ease-out
      a
        color #666
section.translucent
  margin-top 450px
  background-color rgba(255,255,255,.7)!important
section.stick
  z-index 3
  height 210px
  box-shadow 0 0 8px 0 #eee inset
section.first
  margin-top 600px
section.first + section
  margin-top 1050px
section.second
  margin-top 2200px
section.second + section
  margin-top 2500px
section.third
  margin-top 2800px
section.third + section
  margin-top 2900px
section.fourth
  margin-top 3200px
section.fourth + section
  margin-top 3500px
section
  position absolute
  background #fff
  display block
  top 0
  left 0
  width 100%
  overflow hidden
  transform translate3d(0,0,0)

footer:hover
  bottom -43px
  height 42px
footer
  z-index 101
  opacity 0
  position fixed
  top auto
  bottom -45px
  height 40px
  left auto
  right -20px
  width 100px
  background #555
  border-radius 30px / 20px
  border 1px solid #222
  .onclick-scroll-top:hover
    color #fff
  .onclick-scroll-top:hover::before
    border-bottom 8px solid #fff
    top 2px
    transition all .1s ease-out
  .onclick-scroll-top::before
    position absolute
    content ''
    border 4px solid transparent
    border-bottom 6px solid #ddd
    top 4px
    right 49px
    transition all .2s ease-out
  .onclick-scroll-top
    cursor pointer
    color #eee
    position absolute
    top 0
    right 20px
    font-size .8em
    letter-spacing 2px
    padding 0 15px 0 30px
