body
  margin 0
  height 5555px
  position relative
  .container.first
    border-top-width 0!important
  .bg, .feature
    opacity 0
  #imagine p, #register_top
    opacity 1
    transition opacity 1s ease-out

body.scrolled
  header
    border-bottom 0
    height 0
    box-shadow none
    li
      margin-top 15px
      a
        color #444
        font-weight 400
  header::after
    display none
    bottom -1px
    border-bottom-color #eee
    box-shadow none
  .container.first
    border-top-width 1px!important
  .bg, .feature
    opacity 1
    transition opacity .3s ease-out
  #logo
    opacity 0
    transform translateY(-30px)
    transition all .25s ease-out
  #imagine p
    opacity 0
    transform translateX(25px)
    transition all .2s ease-out
  #register_top.show
    transform translateX(-25px)
    opacity 0
    transition all .25s ease-out
  #features
    font-size 1.7em
    .why
      opacity 0
      transition .2s ease-out
    .love
      font-size .8em
      letter-spacing 0
      transform translate(23px, -29px)
      display inline-block
      opacity .5
      color dark
      transition .2s ease-out
    .pb
      display inline-block
      //font-weight 500
      //text-transform uppercase
      transform translateX(-85px)
      color dark
      text-shadow 1px 1px 0 light
      letter-spacing 1px
      font-style normal
      font-weight 300
      text-transform none
      letter-spacing 0
      b
        font-weight 500
        font-style italic
        margin-left 1px
        letter-spacing 1px
  #features::after
    border-top-color light
  nav
    right 44px
    opacity 1
    transition right .2s ease-out
  footer::before, footer:hover::before
    border-top none
    box-shadow none
  footer
    opacity 1
    bottom -20px
    box-shadow none
    transition all .4s ease-out

