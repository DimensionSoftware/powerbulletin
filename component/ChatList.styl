.ChatList
  position absolute
  top 0
  right 0
  margin 0
  background-color #fff
  border-left 1px solid #eee

  .chat
    margin 0.25em
    padding 0.2em
    cursor pointer
    border-radius 8px
    .participants
      margin 0 20px
    h6
      color dark_text
      text-transform capitalize

  .chat:hover
    background lighta
