.ChatList
  position absolute
  top 0
  right 0
  margin 0
  background-color #fff
  border-left 1px solid #eee
  h5
    margin 9px 0 10px 12px
    color #666
  .chat
    margin 0
    padding 1px 0 0px 0
    cursor pointer
    border-radius 3px
    border 1px solid transparent
    transition .1s ease-in .05s
    &:hover
      border 1px solid theme_color
      background theme_alpha
      transition none
    .participants
      margin 0 20px
      list-style none
    .photo
      margin-top -3px
    h6
      margin 9px 0 13px 0
      color dark_text
      text-transform capitalize
