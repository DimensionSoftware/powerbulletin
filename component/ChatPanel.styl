line_color = tint(dark_theme_color, 35%)

body.scrolled
  .footer
    bottom 65px
  .ChatPanel
    .middle
      .messages
        padding 101px 0 0 0
    .footer
      bottom 31px
      .message-box
        height 19px
        padding-top 8px

.ChatPanel
  position absolute
  top 0
  right 0
  margin 0
  background-color dark_theme_color
  box-shadow 0 0 15px #999

  &.hidden

  .header
    padding 1px
    border-bottom 1px solid line_color
    height 47px
    .onclick-messages
      position absolute
      top 9px
      right 47px
      font-size 2.8em
      color #eee
      transition color .2s ease-out
      z-index 1
      cursor pointer
      &:hover
        transition none
        color #fff
    h5
      padding-bottom 14px
      margin-left 17px
      margin-top 14px
      a
        text-transform capitalize
        color #fff
        font-weight 300
        font-size 1.4em
  .middle
    position relative
    .messages
      background-color #fff
      margin 5px 3px 5px 4px
      padding 35px 0 0 0
      left 0
      height 100%
      list-style-type none
      overflow-y scroll
      p
        margin 0
      img
        max-width 90%
      li:last-child
        padding-bottom 13px

    .messages > li
      position relative
      padding .1em 0.5em
      //margin 0.5em
      color #666
      font-size .9em
      text-align right
      word-wrap break-word
      background-color #eee
    .messages li:last-child
      margin-bottom grid
    .messages > li.other
      text-align left
      background-color #fff
      color #333
      font-size 1em
      padding-right (grid*2)
    .messages li.other + li:not(.other)
      padding-bottom grid
    .messages li:not(.other) + li.other
      padding-top grid
      &:after
        content ''
        position absolute
        top -5px
        left 3px
        width 10%
        height 1px
        background-color #f4f4f4

  .footer
    position absolute
    bottom 97px
    right 3px
    left 4px
    overflow hidden
    border-top 1px solid dark_theme_color
    &:after
      position absolute
      bottom 0
      right 5px
      content 'SHIFT + ENTER for Newline'
      font-size .7em
      color #ccc
    .message-box
      overflow hidden
      border-radius 0
      padding 8px 0 8px 8px!important
      border 0
      font-size 14px
      height 19px
      resize none
      bottom 0
      left 0!important
      &:hover
        border 0
        box-shadow none
