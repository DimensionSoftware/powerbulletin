body.scrolled
  .footer
    bottom 65px
  .ChatPanel
    .middle
      .messages
        padding 101px 0 0 0
    .footer
      bottom 31px
      .message-box
        height 19px
        padding-top 8px

.ChatPanel
  position absolute
  top 0
  right 0
  margin 0
  background-color #fff
  border-left 1px solid #eee

  &.hidden

  .header
    background-color overlay_color_secondary
    padding 1px
    border-bottom 1px solid #eee
    height 30px
    h5
      margin 7px 0 0 10px
      text-transform capitalize
  .middle
    position relative
    .messages
      margin 0
      padding 35px 0 0 0
      left 0
      height 100%
      width 100%
      list-style-type none
      overflow-y scroll
      p
        margin 0
      img
        max-width 90%

    .messages > li
      position relative
      padding .1em 0.5em
      //margin 0.5em
      color #666
      font-size .9em
      text-align right
      border-right 2px solid dark_theme_color
      word-wrap break-word
    .messages li:last-child
      margin-bottom grid
    .messages > li.other
      text-align left
      background-color #fff
      color #333
      font-size 1em
      border-left 2px solid theme_color
      padding-right (grid*2)
      border-right 0
    .messages > li:not(.other) + li.other
      padding-top grid
      &:after
        content ''
        position absolute
        top -5px
        left 3px
        width 10%
        height 1px
        background-color #f4f4f4

  .footer
    position absolute
    bottom 97px
    right 0
    left 1px
    overflow hidden
    border-top 1px solid #eee
    &:after
      position absolute
      bottom 0
      right 5px
      content 'SHIFT + ENTER for Newline'
      font-size .7em
      color #ccc
    .message-box
      overflow hidden
      border-radius 0
      padding 5px 0 5px 5px
      border 0
      font-size 12px
      height 19px
      resize none
      bottom 0
      left 1px
      &:hover
        border 0
        box-shadow none
        padding-left 7px
        margin-left -2px
