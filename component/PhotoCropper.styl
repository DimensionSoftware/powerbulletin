.PhotoCropper
  display none

  h1
    margin 15px
    font-weight 300
    letter-spacing 1px
    font-size 1.3em

  .upload
    display none
    img
      max-width 100%
      margin-bottom 31px

  .crop
    display none

  .crop > h1 + div
    padding-bottom 4px


  button
    cursor pointer
    position absolute
    right 1px
    left 1px
    bottom 1px
    z-index 9999
    font-size .85em
    font-weight 500
    text-align center
    cursor pointer
    overflow hidden

    input[type=file]
      position absolute
      top -2px
      left -2px
      right -2px
      bottom -2px
      margin 0
      padding 0
      opacity 0
