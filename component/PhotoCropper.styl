.PhotoCropper

  .upload
    img
      max-width 100%

  .crop > h1 + div
    padding-bottom 4px


  .button
    position relative
    text-align center
    cursor pointer
    overflow hidden

    input[type=file]
      position absolute
      top 0
      left 0
      right 0
      margin 0
      padding 0
      opacity 0
    
