.PhotoCropper
  display none

  h1
    margin 0 15px 15px 3px
    font-weight 300
    letter-spacing 1px
    font-size 1.3em

  .upload
    display none
    padding-bottom 12px
    img
      max-width 100%
      margin-bottom 31px
    input[type=file]
      cursor pointer
      position absolute
      top -2px
      left -2px
      right -2px
      bottom -2px
      margin 0
      padding 0
      opacity 0

  .crop
    display none
    padding-bottom 48px
    .left
      display inline-block
      vertical-align top
    .right
      display inline-block
      vertical-align top
      .preview-wrapper
        border-left 2px solid transparent
        box-shadow 0 0 2px solid #000
        overflow hidden
        width 150px
        height 150px

  button
    cursor pointer
    position absolute
    right 1px
    left 1px
    bottom 1px
    z-index 9999
    font-weight 500
    text-align center
    cursor pointer
    overflow hidden
